PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DESC="Scalix Services"
NAME=scalix
SCRIPTNAME=/etc/init.d/univention-scalix

# be sure, tha we start in a de_DE@euro environment
export LC_ALL="de_DE@euro"

#
#	Function that starts the daemon/service.
#
d_start() {
	/etc/init.d/scalix start
	/etc/init.d/scalix-tomcat restart
	/etc/init.d/scalix-postgres restart
}

#
#	Function that stops the daemon/service.
#
d_stop() {
	/etc/init.d/scalix stop
	/etc/init.d/scalix-tomcat stop
	/etc/init.d/scalix-postgres stop

	while true ; do
		ps aux | grep -q [s]calix.instance || break
		sleep 1
	done
}

case "$1" in
  start)
	echo -n "Starting $DESC: $NAME"
	d_start
	echo "."
	;;
  stop)
	echo -n "Stopping $DESC: $NAME"
	d_stop
	echo "."
	;;
  restart)
	echo -n "Restarting $DESC: $NAME"
	d_stop
	sleep 1
	d_start
	echo "."
	;;
  *)
	# echo "Usage: $SCRIPTNAME {start|stop|restart|reload|force-reload}" >&2
	echo "Usage: $SCRIPTNAME {start|stop|restart}" >&2
	exit 1
	;;
esac

exit 0
