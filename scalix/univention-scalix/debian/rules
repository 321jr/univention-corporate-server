configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

D=$(CURDIR)/debian/univention-scalix

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# join script
	install -D 66univention-scalix.inst $(D)/usr/lib/univention-install/66univention-scalix.inst

	# files for creation of static configuration files
	install -D univention-scalix-conffile $(D)/usr/share/univention-scalix/univention-scalix-conffile
	cp -a static_conffiles/* $(D)/usr/share/univention-scalix/conffiles/

	# listener module
	install -D scalix-user.py $(D)/usr/lib/univention-directory-listener/system/scalix-user.py

	# init scripts, univention console service entries
	install -D etc/init.d/univention-scalix $(D)/etc/init.d/univention-scalix
	install -D etc/init.d/univention-scalix-stunnel $(D)/etc/init.d/univention-scalix-stunnel
	install -D etc/univention/daemons/univention-scalix $(D)/etc/univention/daemons/univention-scalix

	# univention-system-setup hooks
	install -m 0755 var/lib/univention-system-setup/domainname.post/univention-scalix ${D}/var/lib/univention-system-setup/domainname.post/
	install -m 0755 var/lib/univention-system-setup/hostname.post/univention-scalix ${D}/var/lib/univention-system-setup/hostname.post/
	install -m 0755 var/lib/univention-system-setup/ldapbase.post/univention-scalix ${D}/var/lib/univention-system-setup/ldapbase.post/
	install -m 0755 var/lib/univention-system-setup/interfaces.post/univention-scalix ${D}/var/lib/univention-system-setup/interfaces.post/

	install -m 0555 opt/scalix/install/OM-LDAP.inst ${D}/opt/scalix/install/OM-LDAP.inst
	install -m 0555 opt/scalix/install/OM-ADM.inst ${D}/opt/scalix/install/OM-ADM.inst
	install -m 0555 opt/scalix/install/OM-UNIX.inst ${D}/opt/scalix/install/OM-UNIX.inst
	install -m 0555 opt/scalix-tomcat/bin/sxtomcat-webapps ${D}/opt/scalix-tomcat/bin/sxtomcat-webapps
	install -m 0555 opt/scalix-tomcat/bin/sxtomcat-create-instance ${D}/opt/scalix-tomcat/bin/sxtomcat-create-instance

	find $(D) -type d -name CVS | xargs rm -rf
	find $(D) -type d -name .svn | xargs rm -rf

	univention-install-baseconfig


binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
