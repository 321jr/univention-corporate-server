import sys
import univention.winexe

winexe = univention.winexe.WinExe()
winexe.options.add_option("--domain-mode", dest="domain_mode", default="Win2008R2", help="Windows domain mode (Win2008R2)")
winexe.options.add_option("--forest-mode", dest="forest_mode", default="Win2008R2", help="Windows forest mode (Win2008R2)")
winexe.check_options()

winexe.winexec(
	"powershell-promote-ad",
	winexe.opts.domain,
	winexe.opts.domain_mode,
	winexe.opts.forest_mode,
)

winexe.wait_until_client_is_gone(timeout=120)
winexe.wait_for_client(timeout=120)

print "done"

sys.exit(0)

