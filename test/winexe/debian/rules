get-orig-source:
	rm -rf winexe-winexe-waf
	git clone git://git.code.sf.net/p/winexe/winexe-waf winexe-winexe-waf
	cd winexe-winexe-waf; git archive  --format tar --output ../winexe-winexe-waf.tar master
	rm winexe-winexe-waf.tar.gz
	gzip winexe-winexe-waf.tar
	rm -rf winexe-winexe-waf

override_dh_auto_configure:
	mkdir winexe-winexe-waf || true
	tar -xvf winexe-winexe-waf.tar.gz -C winexe-winexe-waf
	cd winexe-winexe-waf/source/; ./waf configure
	dh_auto_configure

override_dh_auto_build:
	cd winexe-winexe-waf/source; ./waf build
	dh_auto_build

override_dh_clean:
	#tar -xvf winexe-winexe-waf.tar.gz -C winexe-winexe-waf
	#cd winexe-winexe-waf/source; ./waf clean
	dh_clean

%:
	dh $@ --with python_support
