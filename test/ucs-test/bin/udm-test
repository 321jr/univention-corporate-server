#!/bin/sh

case "$(ucr get server/role)" in
domaincontroller_master|domaincontroller_backup)
	exec /usr/sbin/univention-directory-manager "$@"
	;;
*)
	exec /usr/sbin/univention-directory-manager "$@" \
		--binddn "$(ucr get tests/domainadmin/account)" \
		--bindpwd "$(ucr get tests/domainadmin/pwd)"
	;;
esac
