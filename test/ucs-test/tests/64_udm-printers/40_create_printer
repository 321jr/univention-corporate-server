#!/usr/share/ucs-test/runner python
## desc: Testing the basic functionality to create a printer and rename it
## tags: [udm-printers]
## roles:
##   - domaincontroller_master
##   - domaincontroller_slave
##   - domaincontroller_backup
##   - memberserver
##   - managedclient
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import sys
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap

if __name__ == '__main__':
	ldapMapping = {'name':'cn', 'model':'univentionPrinterModel', 'uri':'univentionPrinterURI', 'spoolHost':'univentionPrinterSpoolHost'}
	ldap = uldap.getMachineConnection(ldap_master = False)

	with udm_test.UCSTestUDM() as udm:
		printerProperties = {
			'model': 'foomatic-ppds/Apple/Apple-12_640ps-Postscript.ppd.gz',
			'uri': 'paralell /dev/lp0',
			'spoolHost': '%s.%s' % (udm.ucr['hostname'], udm.ucr['domainname']),
			'name': uts.random_name()
		}
		printerContainer = 'cn=printers,%s' % udm.ucr['ldap/base']
		printer = udm.create_object('shares/printer', position = printerContainer, **printerProperties)
		
		ldapFilter = '(&(cn=%s)(objectClass=univentionPrinter))' % printerProperties['name']
		for dn, attr in ldap.search(base = printerContainer, filter = ldapFilter):
			if dn == printer:
				for attribute, expectedValue in printerProperties.items():
					if attribute == 'uri':
						expectedValue = expectedValue.replace(' ', '')
					ldapValue = attr.get(ldapMapping[attribute], [None])[0]
					if expectedValue != ldapValue:
						print 'Test FAILED. Expected "%s" of created printer to be "%s", but "%s" was found.' % (ldapMapping[attribute], expectedValue, ldapValue)
						sys.exit(1)
				break
		else:
			print 'Test FAILED. Could not find DN ("%s") of created printer in LDAP.' % printer
			sys.exit(1)

		printerSambaName = uts.random_name()
		udm.modify_object('shares/printer', dn = printer, sambaName = printerSambaName)
		setPrinterSambaName = ldap.search(base = printerContainer, filter = ldapFilter, attr = ['univentionPrinterSambaName'])[0][1]['univentionPrinterSambaName'][0]
		if printerSambaName != setPrinterSambaName:
			print 'Test FAILED. "univentionPrinterSambaName" of the created printer was expected to be set to "%s" after modification, but "%s" was found.' % (printerSambaName, setPrinterSambaName)
			sys.exit(1)
