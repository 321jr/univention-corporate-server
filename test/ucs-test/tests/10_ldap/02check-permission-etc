#!/usr/share/ucs-test/runner python2.6
## desc: Check for filesystem permissions on ldap.secret, ldap-backup.secret, slave-join.secret
## tags: [basic]
## roles:
##  - domaincontroller_master
##  - domaincontroller_backup
## packages:
##  - univention-ldap-server
## exposure: dangerous

import sys
import os
import grp
import pwd
import stat

RETURN_PASS_CODE = 100
RETURN_FAIL_CODE = 110

def main():
	"""A main method stores almost completely code."""
	exit_code = None # use for exitcode of the entire test

	filenames_groups = [("/etc/ldap.secret", "DC Backup Hosts"), ("/etc/ldap-backup.secret", "Slave Join"), ("/etc/slave-join.secret", "Slave Join"), ]  # filepaths and groupnames to check
	shouldowner = "root"

	try:
		for file_prefs in filenames_groups:
			return_code = check_owner_groupname(file_prefs[0], shouldowner, file_prefs[1])
			if not return_code:
				exit_code = RETURN_FAIL_CODE
			return_code = check_permissions(file_prefs[0])
			if not return_code:
				exit_code = RETURN_FAIL_CODE
	except OSError, error:
		print >> sys.stderr, "An error occured with: %s" % (error, )
		sys.exit(RETURN_FAIL_CODE)
	sys.exit(exit_code)

def check_owner_groupname(filename, shouldowner, shouldgroup):
	"""Checks a given file for a right owner and a right group."""
	return_code = True
	stat_info = os.stat(filename) # statistics about a given file
	uid = stat_info.st_uid # userid
	gid = stat_info.st_gid # groupid
	owner = pwd.getpwuid(uid)[0] # get username/owner
	group = grp.getgrgid(gid)[0] # get groupname
	if owner != shouldowner:
		print >> sys.stderr, "ERROR", filename, "has wrong owner", owner, "but should be", shouldowner
		return_code = False
	if group != shouldgroup:
		print >> sys.stderr, "ERROR", filename, "has wrong group", group, "but should be", shouldgroup
		return_code = False
	return return_code

def check_permissions(filename):
	"""Checks file permissions for -rw-r-----"""
	return_code = True
	stat_info_stmode = os.stat(filename)[stat.ST_MODE]
	if (stat.S_IRUSR & stat_info_stmode) and (stat.S_IWUSR & stat_info_stmode) and (stat.S_IRGRP & stat_info_stmode):
		pass
	elif (stat.S_IRWXO & stat_info_stmode) or (stat.S_IXUSR & stat_info_stmode) or (stat.S_IWGRP & stat_info_stmode) or (stat.S_IXGRP & stat_info_stmode):
		print >> sys.stderr, "ERROR:", filename, "has wrong permissions. Should be exactly -rw-r-----"
		return_code = False
	else:
		print >> sys.stderr, "ERROR:", filename, "has wrong permissions. Should be exactly -rw-r-----"
		return_code = False
	return return_code

if __name__ == '__main__':
	main()
