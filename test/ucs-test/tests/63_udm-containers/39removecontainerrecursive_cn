#!/usr/share/ucs-test/runner python
## desc: Test the base functionality to remove an CN recursively
## tags: [udm-containers]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import sys
import univention.uldap as uldap
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		cnName = uts.random_string()
		cn2Name = uts.random_string()
		cn = udm.create_object('container/cn', name = cnName)
		cn2 = udm.create_object('container/cn', name = cn2Name)
		cn3 = udm.create_object('container/cn', name = uts.random_name())

		udm.move_object('container/cn', dn = cn, position = cn2)
		udm.move_object('container/cn', dn = cn2, position = cn3)

		udm.remove_object('container/cn', dn = cn3)

		ldap = uldap.getAdminConnection()
		result = ldap.searchDn(filter = '(&(cn=%s)(objectClass=organizationalRole))' % cnName)
		if result:
			print 'Test FAILED. After moving the created CN to another CN and removing the latter one, the created CN could still be found:'
			for dn in result:
				print '    %s' % dn
			sys.exit(1)
