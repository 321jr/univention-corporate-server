#!/usr/share/ucs-test/runner python
## desc: Test the base functionality to create an OU
## tags: [udm-containers]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import sys
import univention.testing as test
import univention.uldap as uldap
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		ouName = uts.random_string()
		ou = udm.create_object('container/ou', name = ouName)
		
		ldap = uldap.getAdminConnection()
		if not ou in ldap.searchDn(filter = '(&(ou=%s)(objectClass=organizationalUnit))' % ouName):
			test.fail('Could not find created OU "%s" in LDAP' % ou)


