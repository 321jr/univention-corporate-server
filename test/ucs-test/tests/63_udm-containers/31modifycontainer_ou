#!/usr/share/ucs-test/runner python
## desc: Test the base functionality to modify an OU
## tags: [udm-containers]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.uldap as uldap
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		ouName = uts.random_string()
		ou = udm.create_object('container/ou', name = ouName)
		
		ouDescription = uts.random_string()
		udm.modify_object('container/ou', dn = ou, description = ouDescription)
		
		ldap = uldap.getAdminConnection()
		setOuDescription = ldap.search(filter = '(&(ou=%s)(objectClass=organizationalUnit))' % ouName, attr = ['description'])[0][1]['description']
		if setOuDescription != [ouDescription]:
			print 'Test FAILED. Expected "description" of created OU to be set to %r after modification, but %r was found.' % ([ouDescription], setOuDescription)
			sys.exit(1)
