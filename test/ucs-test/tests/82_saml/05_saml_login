#!/usr/share/ucs-test/runner python
## desc: SSO Login at UMC as Service Provider
## tags: [saml]
## join: true
## exposure: safe
## packages:
##   - python-requests
## tags:
##  - skip_admember

import samltest as samllogin
import univention.testing.utils as utils

def main():
	account = utils.UCSTestDomainAdminCredentials()
	try:
		cookies = samllogin.login_with_new_session_at_IdP(account.username, account.bindpw)
		samllogin.test_login(cookies)
		cookies = samllogin.logout_at_IdP(cookies)
		cookies = samllogin.test_logout_at_IdP(cookies)
		samllogin.test_logout(cookies)
	except samllogin.SamlError as exc:
		utils.fail(exc.message)


if __name__ == '__main__':
	main()
	print("####Success: SSO login is working####")
