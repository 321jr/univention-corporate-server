#!/usr/share/ucs-test/runner python
## desc: Check whether SSO is not possible with expired password flag on user account
## tags:
##  - saml
## join: true
## exposure: dangerous
## packages:
##  - python-requests
## tags:
##  - skip_admember

import univention.testing.udm as udm_test
import univention.testing.utils as utils

import samltest

def main():
	with udm_test.UCSTestUDM() as udm:
		testcase_user_name = udm.create_user(pwdChangeNextLogin='1')[1]

		try:
			samltest.login_with_new_session_at_IdP(testcase_user_name, 'univention')
		except samltest.SamlError as exc:
			if exc.message == 'Got password expired notice':
				return
			else:
				utils.fail(exc.message)
		utils.fail("Logged into account with expired password")


if __name__ == '__main__':
	main()
	print("Success: Login with pwdChangeNextLogin='1' set is not possible")
