#!/usr/share/ucs-test/runner python
## desc: |
##   Log out at IdP and validate logout on multiple SPs
##   Skipped because of known bug in simpleSAML
## tags:
##  - saml
##  - SKIP
## roles: [domaincontroller_master]
## exposure: safe
## packages:
##  - python-requests
import univention.admin.modules as udm_modules
import univention.testing.utils as utils
import samltest
udm_modules.update()


def main():
	account = utils.UCSTestDomainAdminCredentials()
	lo = utils.get_ldap_connection()

	backups = udm_modules.lookup('computers/domaincontroller_backup', None, lo, scope='sub')
	backup_hostname = "%s.%s" % (backups[0]['name'], backups[0]['domain'])

	try:
		cookies = samltest.login_with_new_session_at_IdP(account.username, account.bindpw)
		cookies = samltest.login_with_existing_session_at_IdP(hostname=backup_hostname, cookies=cookies)

		samltest.test_login(cookies)
		samltest.test_login(cookies, hostname=backup_hostname)

		cookies = samltest.logout_at_IdP(cookies)
	
		samltest.test_logout(cookies)
		samltest.test_logout(cookies, hostname=backup_hostname)
	except samltest.SamlError as exc:
		utils.fail(exc.message)


if __name__ == '__main__':
	main()
