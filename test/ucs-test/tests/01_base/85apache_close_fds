#!/usr/share/ucs-test/runner bash
## desc: Check if apache closes FDs after restart
## packages: [apache2 | apache2-mpm-prefork, lsof]
## bugs: [37952]
## tags: [apptest]
## exposure: dangerous
set -e -u

tmp="$(mktemp)"
trap "rm -f '$tmp'" EXIT
exec 42<"$tmp"

/etc/init.d/apache2 restart

for ((i=0;i<10;i++))
do
	sleep 1
	/etc/init.d/apache2 status >"$tmp" && break
done
pid=$(sed -ne 's/.*(pid \([0-9]\+\)).*/\1/p' "$tmp")

! lsof -a -p "$pid" -d 42 | grep -F "$tmp"
# vim: set ft=sh :
