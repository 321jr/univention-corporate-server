#!/usr/share/ucs-test/runner python
## desc: Create a user and set birthday attribute
## tags: [udm-users,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools

import sys
import univention.testing as test
import univention.testing.udm as udm_test

if __name__ == '__main__':
	if test.package_installed('univention-ox'):
		sys.exit(138)

	with udm_test.UCSTestUDM() as udm:
		user = udm.create_user()
		userBirthday = '2005-01-01'
		udm.modify_object('users/user', dn = user[0], birthday = userBirthday)

		setUserBirthday = udm.lo.search(filter = '(uid=%s)' % user[1], attr = ['univentionBirthday'])[0][1]['univentionBirthday'][0]
		if userBirthday != setUserBirthday:
			test.fail('"univentionBirthday" of created user was expected to be set to "%s", but "%s" was found.' % (userBirthday, setUserBirthday))
