#!/usr/share/ucs-test/runner python
## desc: Create a user with just the person-option set
## tags: [udm-users]
## bugs: [24351]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import sys
import traceback
import univention.testing as testlib
import univention.testing.udm as udm_test


if __name__ == '__main__':
	sys.exit(131) # SKIP for now
	if testlib.package_installed('univention-ox'):
		sys.exit(138)

	with udm_test.UCSTestUDM() as udm:
		try:
			udm.create_user(options = ['person'])
		except udm_test.UCSTestUDM_CreateUDMObjectFailed as ex:
			print 'Test FAILED, most likely through Bug #24351:\n%s' % traceback.format_exc(ex)
			sys.exit(121)


