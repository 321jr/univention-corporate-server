#!/usr/share/ucs-test/runner python
## desc: Set userBirthday during users/user modification
## tags: [udm,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools

import univention.testing.udm as udm_test
import univention.testing.utils as utils
import univention.testing.strings as uts

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		mail_domain = '%s.%s' % (uts.random_name(), uts.random_name())
		udm.create_object('mail/domain', name = mail_domain)

		user = udm.create_user(mailPrimaryAddress = '%s@%s' % (uts.random_name(), mail_domain), options = ['mail', 'person'])[0]

		userBirthday = '2005-01-01'
		udm.modify_object('users/user', dn = user, birthday = userBirthday)

		utils.verify_ldap_object(user, {'univentionBirthday': [userBirthday]})

