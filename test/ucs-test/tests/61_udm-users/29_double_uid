#!/usr/share/ucs-test/runner python
## desc: Try to use one uid two times (should not be possible)
## tags: [udm-users,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools

import sys
import random
import univention.testing.utils as utils
import univention.testing.udm as udm_test


if __name__ == '__main__':
	uid = str( random.randint(3000, 5000) )
	with udm_test.UCSTestUDM() as udm:
		udm.create_user(uidNumber = uid)
		try:
			udm.create_user(uidNumber = uid)
		except udm_test.UCSTestUDM_CreateUDMObjectFailed:
			sys.exit(0)

	utils.fail('Successfully created an user with an "uid" which is already in use, which should not be possible')
