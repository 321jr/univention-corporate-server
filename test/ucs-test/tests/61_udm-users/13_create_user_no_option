#!/usr/share/ucs-test/runner python
## desc: Create a user with no option set
## tags: [udm-users]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import sys
import univention.testing as testlib
import univention.testing.udm as udm_test

if __name__ == '__main__':
	if testlib.package_installed('univention-ox'):
		sys.exit(138)

	with udm_test.UCSTestUDM() as udm:
		try:
			udm.create_user(options=[''])
		except udm_test.UCSTestUDM_CreateUDMObjectFailed: # failed as expected
			sys.exit(0)

	print 'Test FAILED. Successfully created user with no options set, which should not be possible.'
	sys.exit(1)


