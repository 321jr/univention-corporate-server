#!/usr/share/ucs-test/runner python
## desc: Create a user with just the mail-option set
## tags: [udm-users]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import sys
import univention.testing as test
import univention.testing.udm as udm_test

if __name__ == '__main__':
	if test.package_installed('univention-ox'):
		sys.exit(138)

	with udm_test.UCSTestUDM() as udm:
		try:
			udm.create_user(options = ['mail'])
		except udm_test.UCSTestUDM_CreateUDMObjectFailed:
			sys.exit(0)

	test.fail('Successfully created a user with only "mail" option set, which should not be possible')



