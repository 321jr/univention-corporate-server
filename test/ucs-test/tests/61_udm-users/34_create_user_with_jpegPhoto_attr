#!/usr/share/ucs-test/runner python
## desc: Create a user and set jpegPhoto attribute
## tags: [udm-users,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools

import base64
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.testing.utils as utils


if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		user = udm.create_user()[0]
	
		userJpegPhoto = uts.random_string()
		udm.modify_object('users/user', dn = user, jpegPhoto = base64.b64encode(userJpegPhoto))
	
		if not utils.verify_ldap_object(user, {'jpegPhoto': [userJpegPhoto]}):
			utils.fail()
