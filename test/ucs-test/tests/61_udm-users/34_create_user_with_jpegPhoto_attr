#!/usr/share/ucs-test/runner python
## desc: Create a user and set jpegPhoto attribute
## tags: [udm-users,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools

import sys
import base64
import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	if test.package_installed('univention-ox'):
		sys.exit(138)

	with udm_test.UCSTestUDM() as udm:
		user = udm.create_user()
	
		userJpegPhoto = uts.random_string()
		udm.modify_object('users/user', dn = user[0], jpegPhoto = base64.b64encode(userJpegPhoto))
		
		setUserJpegPhoto = udm.lo.search(filter = '(uid=%s)' % user[1], attr = ['jpegPhoto'])[0][1]['jpegPhoto'][0]
		if userJpegPhoto != setUserJpegPhoto:
			test.fail('"jpegPhoto" of created user was expected to be set to "%s", but "%s" was found.' % (userJpegPhoto, setUserJpegPhoto))
