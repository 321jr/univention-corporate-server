#!/usr/share/ucs-test/runner python
## desc: Try to use one mailaddress two times
## tags: [udm-users]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools

import sys
import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	if test.package_installed('univention-ox'):
		sys.exit(138)

	mailDomainName = '%s.%s' % (uts.random_name(), uts.random_name())
	emailaddr = uts.random_name()
	with udm_test.UCSTestUDM() as udm:
		udm.create_object('mail/domain', name = mailDomainName)
		udm.create_user(mailPrimaryAddress = '%s@%s' % (emailaddr, mailDomainName))
		try:
			udm.create_user(mailPrimaryAddress = '%s@%s' % (emailaddr, mailDomainName))
		except udm_test.UCSTestUDM_CreateUDMObjectFailed:
			sys.exit(0)

	test.fail('Successfully created an user with a "mailPrimaryAddres" which is already in use, which should not be possible.')
	

