## desc: Create users/user with umlaut in username
## tags: [udm,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## Bugs: [11415]
## packages:
##   - univention-config
##   - univention-directory-manager-tools


import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.testing.utils as utils

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		mail_domain = '%s.%s' % (uts.random_name(), uts.random_name())
		udm.create_object('mail/domain', name = mail_domain)

		user = udm.create_user( username =  '%säÄöÖüÜ%s' % (uts.random_name(length=4), uts.random_name(length=4)), mailPrimaryAddress = '%s@%s' % (uts.random_name(), mail_domain), options = ['mail', 'posix'] )[0]
		utils.verify_ldap_object(user)




