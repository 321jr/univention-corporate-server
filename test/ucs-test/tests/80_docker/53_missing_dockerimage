#!/usr/share/ucs-test/runner python
## desc: Create and install a simple docker app without the DockerImage parameter
## tags: [docker]
## exposure: dangerous
## packages:
##   - docker.io

from dockertest import *
from univention.testing.utils import get_ldap_connection

if __name__ == '__main__':
	
	with Appcenter() as appcenter:
		app_name = get_app_name()
		app_version = get_app_version()

		app = App(name=app_name, version=app_version)

		try:
			# DockerImage is missing, this should not work
			app.set_ini_parameter()
			app.add_to_local_appcenter()

			appcenter.update()

			try:
				app.install()
				app.verify()
			except (UCSTest_DockerApp_InstallationFailed, UCSTest_DockerApp_VerifyFailed):
				pass
			else:
				utils.fail('The ini parameter DockerImage was not defined but the App was installed anyway.')

		finally:
			app.uninstall()
			app.remove()

