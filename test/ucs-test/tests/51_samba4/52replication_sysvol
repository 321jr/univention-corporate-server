#!/usr/share/ucs-test/runner bash
## desc: "Testing the sysvol replication"
## exposure: safe
## packages:
##  - univention-samba4
## roles:
## - domaincontroller_master
## - domaincontroller_backup
## - domaincontroller_slave
## tags:
##  - basic

. "$TESTLIBPATH/shares.sh" || exit 137
. "$TESTLIBPATH/random.sh" || exit 137

s4hosts=( $(univention-ldapsearch -xLLL "(univentionService=Samba 4)" cn | sed -ne 's/^cn: //p') )
for candidate in "${s4hosts[@]}"
do
    if [ "$candidate" != "$hostname" ] && ping -c 1 "$candidate.$domainname" > /dev/null; then
		s4host="$candidate"
		break	
    fi
done

if [ -z "$s4host" ];then
    fail_fast 77 "Could not find another Samba4 Service in Domain"
fi


gponame=$(random_chars 8 "${_upperletters}${_lowerletters}${_ciphers}")	## samba RC6 seems to dislike UTF-8 in GPO names

check_domainadmin_credentials || fail_fast 77 "UCR variables for admin credentials are not set"
ADMINISTRATOR_NAME=$(univention-ldapsearch -b "$tests_domainadmin_account" uid | grep uid | sed -ne 's/^uid: //p')

## general sanity check: wait for the samba-share.py Listener to synchronize /etc/samba/shares.conf and /etc/samba/shares.conf.d (Bug #29399)
i=0
while ! samba-tool domain info 127.0.0.1 > /dev/null 2>&1
do
	let i="$i"+1
	if [ "$i" = 15 ]; then
		echo "samba-tool Failure (Bug #29399)" >&2
		break
	fi
	sleep 2
done

## create the GPO
echo "## create the GPO '$gponame' on remote DC $s4host.$domainname"
gpo_cn=$(samba-tool gpo create "$gponame" -H ldap://"$s4host.$domainname" -U"$ADMINISTRATOR_NAME%$tests_domainadmin_pwd" | sed -n "s/GPO '$gponame' created as //p")
if [ -n "$gpo_cn" ]; then
	echo "## GPO was created on $s4host.$domainname with ID $gpo_cn"
	trap 'samba-tool gpo del "$gpo_cn" -H ldap://"$s4host.$domainname" -U"$ADMINISTRATOR_NAME%$tests_domainadmin_pwd"' INT TERM EXIT
else
	fail_fast 1 "WARNING: samba-tool gpo create did not return a GPO cn"
fi

## Tests on remote DC
echo "## check whether the directory has been created on remote DC $s4host.$domainname"
i=0
while ! echo "$BINDPWD" | univention-ssh /dev/stdin "$ADMINISTRATOR_NAME"@"$s4host.$domainname" test -d "/var/lib/samba/sysvol/$domainname/Policies/$gpo_cn" > /dev/null
do
	let i="$i"+1
	if [ "$i" =  20 ]; then
		fail_fast 1 "remote directory for GPO has not been created"
	fi
	sleep 1
done

##check whether samba-tool lists the GPO the remote DC
echo "## check whether samba-tool lists the GPO on remote DC $s4host.$domainname"
i=0
while ! ( output=$(samba-tool gpo show "$gpo_cn" -H ldap://"$s4host.$domainname" -U"$ADMINISTRATOR_NAME%$tests_domainadmin_pwd" 2>&1) && grep -Eq "^GPO\s+:\s$gpo_cn" <<<"$output" )
do
	let i="$i"+1
	if [ "$i" = 10 ]; then
		if [ -n "$output" ]; then
			echo "$output"
		fi
		fail_fast 1 "remote GPO is not listed in samba-tool"
	fi
	sleep 1
done

max_i=100
sleep_time=3
echo "## check whether the directory for the GPO has been replicated to the local system (waiting about $(($max_i * $sleep_time)) seconds)"
echo "## Note: to speed things up for interactive tests, you may run /usr/share/univention-samba4/scripts/sysvol-sync.sh manually now."
i=0
while ! [ -d "/var/lib/samba/sysvol/$domainname/Policies/$gpo_cn" ]
do
	let i="$i"+1
	if [ "$i" = "$max_i" ]; then
		echo
		fail_fast 1 "Directory for GPO has not been created"
	fi
	sleep "$sleep_time"
done

echo "## check whether the GPO is listed in samba-tool"
i=0
while ! ( output=$(samba-tool gpo show "$gpo_cn" 2>&1) && grep -Eq "^GPO\s+:\s$gpo_cn" <<<"$output" )
do
	let i="$i"+1
	if [ "$i" = 10 ]; then
		if [ -n "$output" ]; then
			echo "$output"
		fi
		fail_fast 1 "GPO is not listed in samba-tool"
	fi
	sleep 1
done

exit $RETVAL
