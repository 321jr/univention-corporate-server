#!/bin/bash

source "$TESTLIBPATH/base.lib"
source "$TESTLIBPATH/udm.lib"
source "$TESTLIBPATH/s4connector.lib"

if [ -z "$connector_s4_ldap_host" ]; then
	warning "connector/s4/ldap/host is empty."
	warning "Assuming that the Ad-Connector isn't configured."
	warning "Skipping test."
	exit 137
fi

TEST_BASIC=false
INFO_LINE="Check whether container can be recursively moved on ad-side in sync-mode"
TEST_SERVER_ROLE="domaincontroller_master domaincontroller_backup"
TEST_PACKAGES="univention-config univention-s4-connector"

#                 Container3
#                /
#      Container1--User
#     /
# Base
#     \
#      Container2

# shall become

# Base--Container2--Container1--User
#                             \
#                              Container3

CONTAINER1="$(randomchars)1"
AD_CONTAINER1_DN="CN=$CONTAINER1,$(ad_get_base)"
CONTAINER2="$(randomchars)2"
AD_CONTAINER2_DN="CN=$CONTAINER2,$(ad_get_base)"
CONTAINER3="$(randomchars)3"
AD_CONTAINER3_DN="CN=$CONTAINER3,CN=$CONTAINER1,$(ad_get_base)"
USER="$(randomchars)"
AD_USER_DN="CN=$USER,CN=$CONTAINER1,$(ad_get_base)"
UDM_users_user_username="$USER"

SYNCMODE="$(ad_get_sync_mode)"
ad_set_sync_mode "sync"

section "Create initial Tree structure"

ad_createcontainer "$CONTAINER1" || fail_test 110
ad_createcontainer "$CONTAINER2" || fail_test 110
ad_createcontainer "$CONTAINER3" "" "CN=$CONTAINER1,$(ad_get_base)" || fail_test 110
ad_createuser "$USER" "" "CN=$CONTAINER1,$(ad_get_base)" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

UDM_container_cn_name="$CONTAINER1"
udm_exists "container/cn"; check_bool 0 110
ad_exists "$AD_CONTAINER1_DN"; check_bool 0 110
UDM_container_cn_name="$CONTAINER2"
udm_exists "container/cn"; check_bool 0 110
ad_exists "$AD_CONTAINER2_DN"; check_bool 0 110
UDM_container_cn_name="$CONTAINER3"
udm_exists "container/cn" "" "" "cn=$CONTAINER1,$ldap_base"; check_bool 0 110
ad_exists "$AD_CONTAINER3_DN"; check_bool 0 110
udm_exists "users/user" "" "" "cn=$CONTAINER1,$ldap_base"; check_bool 0 110

section "Move $CONTAINER1 into $CONTAINER2"

ad_move "CN=$CONTAINER1,$(ad_get_base)" "CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

UDM_container_cn_name="$CONTAINER1"
udm_exists "container/cn"; check_bool 1 110
ad_exists "$AD_CONTAINER1_DN"; check_bool 1 110
UDM_container_cn_name="$CONTAINER3"
udm_exists "container/cn" "" "" "cn=$CONTAINER1,$ldap_base"; check_bool 1 110
ad_exists "$AD_CONTAINER3_DN"; check_bool 1 110
udm_exists "users/user" "" "" "cn=$CONTAINER1,$ldap_base"; check_bool 1 110

UDM_container_cn_name="$CONTAINER2"
udm_exists "container/cn"; check_bool 0 110
ad_exists "$AD_CONTAINER2_DN"; check_bool 0 110
UDM_container_cn_name="$CONTAINER1"
AD_CONTAINER1_DN="CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)"
udm_exists "container/cn" "" "" "cn=$CONTAINER2,$ldap_base"; check_bool 0 110
ad_exists "$AD_CONTAINER1_DN"; check_bool 0 110
AD_CONTAINER3_DN="CN=$CONTAINER3,CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)"
UDM_container_cn_name="$CONTAINER3"
udm_exists "container/cn" "" "" "cn=$CONTAINER1,cn=$CONTAINER2,$ldap_base"; check_bool 0 110
ad_exists "$AD_CONTAINER3_DN"; check_bool 0 110
AD_USER_DN="CN=$USER,CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)"
udm_exists "users/user" "" "" "cn=$CONTAINER1,cn=$CONTAINER2,$ldap_base"; check_bool 0 110
ad_exists "$AD_USER_DN"; check_bool 0 110

section "Clean up"

ad_delete "CN=$USER,CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)" || fail_test 110
ad_delete "CN=$CONTAINER3,CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)" || fail_test 110
ad_delete "CN=$CONTAINER1,CN=$CONTAINER2,$(ad_get_base)" || fail_test 110
ad_delete "CN=$CONTAINER2,$(ad_get_base)" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

UDM_container_cn_name="$CONTAINER2"
udm_exists "container/cn"; check_bool 1 110
ad_exists "$AD_CONTAINER2_DN"; check_bool 1 110
UDM_container_cn_name="$CONTAINER1"
udm_exists "container/cn" "" "" "cn=$CONTAINER2,$ldap_base"; check_bool 1 110
ad_exists "$AD_CONTAINER1_DN"; check_bool 1 110
UDM_container_cn_name="$CONTAINER3"
udm_exists "container/cn" "" "" "cn=$CONTAINER1,cn=$CONTAINER2,$ldap_base"; check_bool 1 110
ad_exists "$AD_CONTAINER3_DN"; check_bool 1 110
udm_exists "users/user" "" "" "cn=$CONTAINER1,cn=$CONTAINER2,$ldap_base"; check_bool 1 110
ad_exists "$AD_USER_DN"; check_bool 1 110

ad_set_sync_mode "$SYNCMODE"

exit "$RETVAL"
