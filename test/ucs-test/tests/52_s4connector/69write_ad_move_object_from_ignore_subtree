#!/bin/bash

source "$TESTLIBPATH/base.lib"
source "$TESTLIBPATH/udm.lib"
source "$TESTLIBPATH/s4connector.lib"

if [ -z "$connector_s4_ldap_host" ]; then
	warning "connector/s4/ldap/host is empty."
	warning "Assuming that the Ad-Connector isn't configured."
	warning "Skipping test."
	exit 137
fi

TEST_BASIC=false
INFO_LINE="Move an AD-user out of the User-Ignore-Subtree in write-mode"
TEST_SERVER_ROLE="domaincontroller_master domaincontroller_backup"
TEST_PACKAGES="univention-config univention-s4-connector"

UDM_users_user_username="$(randomchars)"
UDM_groups_group_name="$(randomchars)"
UDM_GROUP_DN="cn=$UDM_groups_group_name,cn=groups,$ldap_base"
AD_USER_DN="CN=$UDM_users_user_username,CN=Users,$(ad_get_base)"
AD_GROUP_DN="CN=$UDM_groups_group_name,CN=groups,$(ad_get_base)"
CONTAINER_NAME="$(randomchars)"
AD_CONTAINER_USER_DN="CN=$UDM_users_user_username,CN=$CONTAINER_NAME,$(ad_get_base)"
UDM_CONTAINER_USER_DN="uid=$UDM_users_user_username,cn=$CONTAINER_NAME,$ldap_base"

SYNCMODE="$(ad_get_sync_mode)"

ad_set_sync_mode "sync"

section "Create new container"

ad_createcontainer "$CONTAINER_NAME" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

section "Modify User-Ignore-Subtree"

invoke-rc.d univention-s4-connector stop

MAIN_FILE="/usr/share/pyshared/univention/s4connector/s4/main.py"
cp -f "$MAIN_FILE" "$MAIN_FILE".ucs-test-backup
sed -i "s/import mapping/import mapping\nmapping.s4_mapping ['user'].ignore_subtree = mapping.s4_mapping ['user'].ignore_subtree + ['cn=$CONTAINER_NAME,$ldap_base']/" "$MAIN_FILE"

ad_set_sync_mode "write"
invoke-rc.d univention-s4-connector start

section "Create user and group"

ad_createuser "$UDM_users_user_username" "" "CN=$CONTAINER_NAME,$(ad_get_base)" || fail_test 110
ad_creategroup "$UDM_groups_group_name" || fail_test 110
ad_append_to_attribute "$AD_GROUP_DN" "member" "$AD_CONTAINER_USER_DN" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

udm_exists "users/user" "" "" "cn=$CONTAINER_NAME,$ldap_base"; check_bool 1 110
ad_exists "$AD_CONTAINER_USER_DN"; check_bool 0 110

udm_verify_multi_value_udm_attribute_contains "groups" \
	"cn=$UDM_groups_group_name,cn=groups,$ldap_base" "users/user"; check_bool 1 110
ad_verify_multi_value_attribute_contains "$AD_GROUP_DN" "member" "$AD_CONTAINER_USER_DN"; check_bool 0 110
ad_verify_multi_value_attribute_contains "$AD_CONTAINER_USER_DN" "memberOf" "$AD_GROUP_DN"; check_bool 0 110

section "Move user out of ignored subtree"

ad_move "$AD_CONTAINER_USER_DN" "CN=$UDM_users_user_username,CN=Users,$(ad_get_base)" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

udm_exists "users/user" "" "" "cn=$CONTAINER_NAME,$ldap_base"; check_bool 1 110
udm_exists "users/user"; check_bool 1 110
ad_exists "$AD_CONTAINER_USER_DN"; check_bool 1 110
ad_exists "$AD_USER_DN"; check_bool 0 110

ad_verify_multi_value_attribute_contains "$AD_GROUP_DN" "member" "$AD_USER_DN"; check_bool 0 110
ad_verify_multi_value_attribute_contains "$AD_USER_DN" "memberOf" "$AD_GROUP_DN"; check_bool 0 110

section "Clean up"

ad_delete "$AD_USER_DN" || fail_test 110
ad_delete "$AD_GROUP_DN" || fail_test 110
ad_wait_for_synchronization; check_bool 0 110

ad_exists "$AD_USER_DN"; check_bool 1 110
udm_exists "users/user"; check_bool 1 110
ad_exists "$AD_GROUP_DN"; check_bool 1 110
udm_exists "users/user"; check_bool 1 110

ad_delete "CN=$CONTAINER_NAME,$(ad_get_base)"

invoke-rc.d univention-s4-connector stop
mv -f "$MAIN_FILE".ucs-test-backup "$MAIN_FILE"
ad_set_sync_mode "$SYNCMODE"
invoke-rc.d univention-s4-connector start

exit "$RETVAL"
