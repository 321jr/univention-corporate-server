#!/bin/bash

source "$TESTLIBPATH/base.lib"
source "$TESTLIBPATH/udm.lib"
source "$TESTLIBPATH/s4connector.lib"

if [ -z "$connector_s4_ldap_host" ]; then
	warning "connector/s4/ldap/host is empty."
	warning "Assuming that the Ad-Connector isn't configured."
	warning "Skipping test."
	exit 137
fi

TEST_BASIC=false
INFO_LINE="Create 'known' group on ucs-side in sync-mode"
TEST_SERVER_ROLE="domaincontroller_master domaincontroller_backup"
TEST_PACKAGES="univention-config univention-s4-connector"

INNER_GROUP="$(randomchars)"
OUTER_GROUP="$(randomchars)"

SYNCMODE="$(ad_get_sync_mode)"
ad_set_sync_mode "sync"

section "Create outer group"

UDM_groups_group_name="$OUTER_GROUP"
udm_create "groups/group" || fail_test 110

section "Create inner group"

#'Known' UCS-Groups are expected not to be synced to AD
UDM_groups_group_name="$INNER_GROUP"
udm_create "groups/group" "" "" "" "" --set sambaGroupType=5 || fail_test 110

section "Make $INNER_GROUP member of $OUTER_GROUP"

UDM_groups_group_name="$INNER_GROUP"
udm_modify "groups/group" "" "" "" "" \
	--append memberOf="cn=$OUTER_GROUP,cn=groups,$ldap_base" || fail_test 110

ad_wait_for_synchronization; check_bool 0 110

UDM_groups_group_name="$OUTER_GROUP"
udm_exists "groups/group"; check_bool 0 110
UDM_groups_group_name="$INNER_GROUP"
udm_exists "groups/group"; check_bool 0 110

ad_exists "CN=$INNER_GROUP,CN=groups,$(ad_get_base)"; check_bool 1 110
ad_exists "CN=$OUTER_GROUP,CN=groups,$(ad_get_base)"; check_bool 0 110

udm_verify_udm_attribute "sambaGroupType" "5" "groups/group"; check_bool 0 110

UDM_groups_group_name="$OUTER_GROUP"
udm_verify_multi_value_udm_attribute_contains "nestedGroup" \
	"cn=$INNER_GROUP,cn=groups,$ldap_base" "groups/group"; check_bool 0 110

ad_verify_multi_value_attribute_contains "CN=$OUTER_GROUP,CN=groups,$(ad_get_base)" \
	"member" "CN=$INNER_GROUP,CN=groups,$(ad_get_base)"; check_bool 1 110

section "Clean up"

UDM_groups_group_name="$OUTER_GROUP"
udm_remove "groups/group" || fail_test 110 
UDM_groups_group_name="$INNER_GROUP"
udm_remove "groups/group" || fail_test 110 
ad_wait_for_synchronization; check_bool 0 110

UDM_groups_group_name="$OUTER_GROUP"
udm_exists "groups/group"; check_bool 1 110
UDM_groups_group_name="$INNER_GROUP"
udm_exists "groups/group"; check_bool 1 110

ad_exists "CN=$INNER_GROUP,CN=groups,$(ad_get_base)"; check_bool 1 110
ad_exists "CN=$OUTER_GROUP,CN=groups,$(ad_get_base)"; check_bool 1 110

ad_set_sync_mode "$SYNCMODE"

exit "$RETVAL"
