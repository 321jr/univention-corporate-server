#!/usr/share/ucs-test/runner python
## desc: Remove DHCP pool
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		dhcpSubnet = udm.create_object('dhcp/subnet',
									   subnet = '10.20.30.0',
									   subnetmask = '24',
									   superordinate = udm.create_object('dhcp/service', service = uts.random_name())
									  )

		dhcpPool = udm.create_object('dhcp/pool',
									 name = uts.random_name(),
									 range = '10.20.30.1 10.20.30.254',
									 superordinate = dhcpSubnet
									)

		udm.remove_object('dhcp/pool', dn = dhcpPool, superordinate = dhcpSubnet)
		utils.verify_ldap_object(dhcpPool, should_exist = False)
