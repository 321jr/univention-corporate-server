#!/usr/share/ucs-test/runner python
## desc: Create and remove DHCP shared subnet
## tags: [udm-dhcp]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap

if __name__ == '__main__':
	dhcpSharedSubnetName = '10.20.30.0'
	
	ldap = uldap.getAdminConnection()
	
	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSharedNetwork = udm.create_object('dhcp/shared', name = uts.random_name(), superordinate = dhcpService)
		dhcpSharedSubnet = udm.create_object('dhcp/sharedsubnet', superordinate = dhcpSharedNetwork, subnet = dhcpSharedSubnetName, subnetmask = '24')

		if not dhcpSharedSubnet in ldap.searchDn(base = dhcpSharedNetwork, filter = '(&(cn=%s)(objectClass=univentionDhcpSharedSubnet))' % dhcpSharedSubnetName):
			test.fail('Could not find created DHCP shared subnet "%s" in LDAP' % dhcpSharedSubnet)

