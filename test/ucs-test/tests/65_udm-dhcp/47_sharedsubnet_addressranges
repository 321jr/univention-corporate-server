#!/usr/share/ucs-test/runner python
## desc: Set and append ranges to DHCP shared subnet address range
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	initialRange = '10.20.30.40 10.20.30.45'
	ranges = ['10.20.30.1 10.20.30.5', '10.20.30.6 10.20.30.10', '10.20.30.11 10.20.30.15']

	with udm_test.UCSTestUDM() as udm:
		dhcpSharedNetwork = udm.create_object('dhcp/shared', name = uts.random_name(), superordinate = udm.create_object('dhcp/service', service = uts.random_name()))

		dhcpSharedSubnet = udm.create_object('dhcp/sharedsubnet', subnet = '10.20.30.0', subnetmask = '24', range = initialRange, superordinate = dhcpSharedNetwork)
		utils.verify_ldap_object(dhcpSharedSubnet, {'dhcpRange': [initialRange]})

		udm.modify_object('dhcp/sharedsubnet', dn = dhcpSharedSubnet, superordinate = dhcpSharedNetwork, range = ranges[0])
		utils.verify_ldap_object(dhcpSharedSubnet, {'dhcpRange': [ranges[0]]})

		udm.modify_object('dhcp/sharedsubnet', dn = dhcpSharedSubnet, superordinate = dhcpSharedNetwork, append = {'range': ranges[1:]})
		utils.verify_ldap_object(dhcpSharedSubnet, {'dhcpRange': ranges})
