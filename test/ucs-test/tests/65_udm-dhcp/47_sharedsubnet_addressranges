#!/usr/share/ucs-test/runner python
## desc: Set and append ranges to DHCP shared subnet address range
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	dhcpSharedSubnetRanges = ['10.20.30.1 10.20.30.5', '10.20.30.6 10.20.30.10', '10.20.30.11 10.20.30.15']

	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSharedNetwork = udm.create_object('dhcp/shared', name = uts.random_name(), superordinate = dhcpService)
		dhcpSharedSubnet = udm.create_object('dhcp/sharedsubnet', subnet = '10.20.30.0', subnetmask = '24', range = dhcpSharedSubnetRanges[0], superordinate = dhcpSharedNetwork)

		udm.modify_object('dhcp/sharedsubnet', dn = dhcpSharedSubnet, superordinate = dhcpSharedNetwork, append = {'range': dhcpSharedSubnetRanges[1:]})

		if not utils.verify_ldap_object(dhcpSharedSubnet, {'dhcpRange': dhcpSharedSubnetRanges}):
			utils.fail()
