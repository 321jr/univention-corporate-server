#!/usr/share/ucs-test/runner python
## desc: Set range during DHCP subnet modification
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	range = '10.20.10.1 10.20.10.254'

	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSubnet = udm.create_object('dhcp/subnet', subnet = '10.20.0.0', subnetmask = '16', superordinate = dhcpService)

		udm.modify_object('dhcp/subnet', dn = dhcpSubnet, range = range, superordinate = dhcpService)
		utils.verify_ldap_object(dhcpSubnet, {'dhcpRange': [range]})

