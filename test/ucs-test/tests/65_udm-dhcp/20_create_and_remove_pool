#!/usr/share/ucs-test/runner python
## desc: Create and remove DHCP pool
## tags: [udm-dhcp]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap

if __name__ == '__main__':
	dhcpPoolName = uts.random_name()
	ldapFilter = '(&(cn=%s)(objectClass=univentionDhcpPool))' % dhcpPoolName
	ldap = uldap.getAdminConnection()
	
	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSubnet = udm.create_object('dhcp/subnet', subnet = '10.20.30.0', subnetmask = '24', superordinate = dhcpService)
		dhcpPool = udm.create_object('dhcp/pool', superordinate = dhcpSubnet, name = dhcpPoolName, range = '10.20.30.1 10.20.30.254')

		if not dhcpPool in ldap.searchDn(base = dhcpSubnet, filter = ldapFilter):
			test.fail('Could not find created DHCP pool "%s" in LDAP' % dhcpPool)

		udm.remove_object('dhcp/pool', dn = dhcpPool, superordinate = dhcpSubnet)
		if dhcpPool in ldap.searchDn(base = dhcpSubnet, filter = ldapFilter):
			test.fail('Could still find DHCP pool "%s" in LDAP after it should have been removed' % dhcpPool)
