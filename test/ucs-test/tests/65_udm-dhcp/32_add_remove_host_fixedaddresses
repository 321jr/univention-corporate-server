#!/usr/share/ucs-test/runner python
## desc: DHCP pool, add and remove DHCP ranges
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	dhcpHostFixedAddresses = ['10.20.30.40', '10.20.30.41']
	moreDhcpHostFixedAddresses = ['10.20.30.42', '10.20.30.43', '10.20.30.44', '10.20.30.45']

	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpHost = udm.create_object('dhcp/host', host = uts.random_name(), hwaddress = 'ethernet af:e2:39:14:cb:15', fixedaddress = dhcpHostFixedAddresses, superordinate = dhcpService)

		udm.modify_object('dhcp/host', dn = dhcpHost, append = {'fixedaddress': moreDhcpHostFixedAddresses}, superordinate = dhcpService)
		if not utils.verify_ldap_object(dhcpHost, {'univentionDhcpFixedAddress': dhcpHostFixedAddresses+moreDhcpHostFixedAddresses}):
			utils.fail()
		
		udm.modify_object('dhcp/host', dn = dhcpHost, remove = {'fixedaddress': dhcpHostFixedAddresses}, superordinate = dhcpService)
		if not utils.verify_ldap_object(dhcpHost, {'univentionDhcpFixedAddress': moreDhcpHostFixedAddresses}):
			utils.fail()
