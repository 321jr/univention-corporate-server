#!/usr/share/ucs-test/runner python
## desc: Check DHCP subnet attributes
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap

if __name__ == '__main__':
	dhcpSubnetProperties = {
		'subnet': '10.20.30.0',
		'subnetmask': '24',
		'broadcastaddress': '10.20.30.255',
		'range': '10.20.30.1 10.20.30.254'
	}

	ldapMapping = {'cn':'subnet', 'dhcpNetMask':'subnetmask', 'univentionDhcpBroadcastAddress':'broadcastaddress', 'dhcpRange':'range'}
	ldapFilter = '(&(cn=10.20.30.0)(objectClass=univentionDhcpSubnet))'
	ldap = uldap.getAdminConnection()

	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSubnet = udm.create_object('dhcp/subnet', superordinate = dhcpService, **dhcpSubnetProperties)

		for attr, value in ldap.search(base = dhcpService, filter = ldapFilter, attr = ldapMapping.values())[0][1].items():
			if value != [dhcpSubnetProperties[ldapMapping[attr]]]:
				test.fail('Expected "%s" of created DHCP subnet to be %r, but found %r instead' % (attr, [dhcpSubnetProperties[ldapMapping[attr]]], value))
