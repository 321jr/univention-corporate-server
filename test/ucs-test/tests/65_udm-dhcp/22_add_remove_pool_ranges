#!/usr/share/ucs-test/runner python
## desc: DHCP pool, test to add and remove DHCP ranges
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	dhcpRanges = ['10.20.30.11 10.20.30.15', '10.20.30.16 10.20.30.20', '10.20.30.21 10.20.30.25', '10.20.30.26 10.20.30.30']

	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSubnet = udm.create_object('dhcp/subnet', subnet = '10.20.30.0', subnetmask = '24', superordinate = dhcpService)
		dhcpPool = udm.create_object('dhcp/pool', name = uts.random_string(), range = dhcpRanges[:2], superordinate = dhcpSubnet)
		
		udm.modify_object('dhcp/pool', dn = dhcpPool, append = {'range': dhcpRanges[2:]})
		if not utils.verify_ldap_object(dhcpPool, {'dhcpRange': dhcpRanges}):
			utils.fail()

		udm.modify_object('dhcp/pool', dn = dhcpPool, remove = {'range': dhcpRanges[:2]})
		if not utils.verify_ldap_object(dhcpPool, {'dhcpRange': dhcpRanges[2:]}):
			utils.fail()
