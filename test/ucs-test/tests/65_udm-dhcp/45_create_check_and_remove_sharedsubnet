#!/usr/share/ucs-test/runner python
## desc: Created DHCP shared subnet, check it's attributes and remove it again
## tags: [udm-dhcp]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		dhcpService = udm.create_object('dhcp/service', service = uts.random_name())
		dhcpSharedNetwork = udm.create_object('dhcp/shared', name = uts.random_name(), superordinate = dhcpService)
		dhcpSharedSubnetProperties = {
			'subnet': '10.20.30.0',
			'subnetmask': '24',
			'broadcastaddress': '10.20.30.255',
			'range': '10.20.30.1 10.20.30.254'
		}
		dhcpSharedSubnet = udm.create_object('dhcp/sharedsubnet', superordinate = dhcpSharedNetwork, **dhcpSharedSubnetProperties)

		ldap = uldap.getAdminConnection()
		ldapMapping = {
			'subnet': 'cn',
			'subnetmask': 'dhcpNetMask',
			'range': 'dhcpRange',
			'broadcastaddress': 'univentionDhcpBroadcastAddress'
		}
		ldapFilter = '(&(cn=%s)(objectClass=univentionDhcpSharedSubnet))' % dhcpSharedSubnetProperties['subnet']

		for dn, attr in ldap.search(base = dhcpSharedNetwork, filter = ldapFilter, attr = ldapMapping.values()):
			if dn == dhcpSharedSubnet:
				for attribute, value in dhcpSharedSubnetProperties.items():
					if [value] != attr[ ldapMapping[attribute] ]:
						print 'Test FAILED. Expected "%s" of created DHCP shared subnet to be %r, but %r was found instead.' % (ldapMapping[attribute], [value], attr[ldapMapping[attribute]])
						sys.exit(1)
				break
		else:
			print 'Test FAILED. Could not find created DHCP shared subnet "%s" in LDAP.' % dhcpSharedSubnetProperties
			sys.exit(1)

		udm.remove_object('dhcp/sharedsubnet', dn = dhcpSharedSubnet, superordinate = dhcpService)
		if dhcpSharedSubnet in ldap.searchDn(base = dhcpService, filter = ldapFilter):
			print 'Test FAILED. Could still find created DHCP shared subnet in "%s" in LDAP after removing it.' % dhcpSharedSubnet
			sys.exit(1)


