#!/usr/share/ucs-test/runner python
## desc: Append fixedaddresses during DHCP host creation
## tags: [udm-dhcp,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	fixedAddresses = ['10.20.30.40', '10.20.30.50']

	with udm_test.UCSTestUDM() as udm:
		utils.verify_ldap_object(udm.create_object('dhcp/host',
												   host = uts.random_name(),
												   hwaddress = 'ethernet 01:ff:78:38:ab:24',
												   append = {'fixedaddress': fixedAddresses},
												   superordinate = udm.create_object('dhcp/service', service = uts.random_name())
												  ),
								 {'univentionDhcpFixedAddress': fixedAddresses}
								)
