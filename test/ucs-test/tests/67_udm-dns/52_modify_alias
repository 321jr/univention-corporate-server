#!/usr/share/ucs-test/runner python
## desc: Modify "zonettl" of DNS alias
## tags: [udm-dns]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		forwardZone = udm.create_object('dns/forward_zone', zone = '%s.%s' % (uts.random_name(), uts.random_name()), nameserver = uts.random_string())
		dnsAliasName = uts.random_name()
		dnsAlias = udm.create_object('dns/alias', name = dnsAliasName, cname = uts.random_name(), superordinate = forwardZone)
		dnsAliasZoneTTL = '128'

		udm.modify_object('dns/alias', dn = dnsAlias, superordinate = forwardZone, zonettl = dnsAliasZoneTTL)
		
		ldap = uldap.getAdminConnection()
		ldapFilter = '(&(relativeDomainName=%s)(objectClass=dNSZone))' % dnsAliasName
		result = ldap.search(base = forwardZone, filter = ldapFilter, attr = ['dNSTTL'])[0][1].get('dNSTTL', [])
		if result != [dnsAliasZoneTTL]:
			print 'Test FAILED. Expected "dNSTTL" of created DNS alias to be %r after modification, but found %r instead.' % ([dnsAliasZoneTTL], result)
			sys.exit(1)

