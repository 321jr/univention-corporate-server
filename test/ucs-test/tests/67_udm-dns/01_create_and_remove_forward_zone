#!/usr/share/ucs-test/runner python
## desc: Create and remove minimal DNS forward zone
## tags: [udm-dns,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		forwardZone = udm.create_object('dns/forward_zone', zone = '%s.%s' % (uts.random_name(), uts.random_name())
, nameserver = uts.random_string())

		if not utils.verify_ldap_object(forwardZone):
			utils.fail()

		udm.remove_object('dns/forward_zone', dn = forwardZone)
		if utils.verify_ldap_object(forwardZone):
			utils.fail('Could still find DNS forward zone "%s" after it should have been removed.' % forwardZone)
