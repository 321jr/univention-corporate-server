#!/usr/share/ucs-test/runner python
## desc: Create DNS forward zone with many attribute and check if the resulting SOA record is correct
## tags: [udm-dns]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap


if __name__ == '__main__':
	forwardZoneProperties = {
		'zone': '%s.%s' % (uts.random_name(), uts.random_name()),
		'nameserver': uts.random_string(),
		'contact': '%s@%s.%s' % (uts.random_name(), uts.random_name(), uts.random_name()),
		'serial': '1',
		'zonettl': '128',
		'refresh': '64',
		'expire': '32',
		'ttl': '16',
		'retry': '8'
	}

	expectedSOARecord = ['%s %s. %s %s %s %s %s' % (forwardZoneProperties['nameserver'],
											   forwardZoneProperties['contact'].replace('@', '.'),
											   forwardZoneProperties['serial'],
											   forwardZoneProperties['refresh'],
											   forwardZoneProperties['retry'],
											   forwardZoneProperties['expire'],
											   forwardZoneProperties['ttl'])]

	ldap = uldap.getAdminConnection()
	ldapFilter = '(&(zoneName=%s)(objectClass=dNSZone)(relativeDomainName=@))' % forwardZoneProperties['zone']

	with udm_test.UCSTestUDM() as udm:
		forwardZone = udm.create_object('dns/forward_zone', **forwardZoneProperties)

		for dn, attr in ldap.search(filter = ldapFilter, attr = ['sOARecord']):
			if dn == forwardZone:
				if attr['sOARecord'] != expectedSOARecord:
					test.fail('Expected "sOAREcord" of created DNS forward zone to be %r, but found %r instead' % (expectedSOARecord, attr['sOARecord']))
				break
		else:
			test.fail('Could not find created DNS forward zone "%s" in LDAP' % forwardZone)
