#!/usr/share/ucs-test/runner python
## desc: Append nameserver during DNS reverse zone modification
## tags: [udm-dns,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		ns_records = [uts.random_string(), uts.random_string(), uts.random_string()]
		reverse_zone = udm.create_object('dns/reverse_zone', subnet = '10.20.30', nameserver = ns_records[0])
		
		udm.modify_object('dns/reverse_zone', dn = reverse_zone, append = {'nameserver': ns_records[1:]})
		utils.verify_ldap_object(reverse_zone, {'nSRecord': ns_records})
