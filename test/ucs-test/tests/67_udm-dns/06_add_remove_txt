#!/usr/share/ucs-test/runner python
## desc: DNS forward zone, test setting, appending and removing TXT records
## tags: [udm-dns,apptest]
## roles: [domaincontroller_master]
## bugs: [15654]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import sys
import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	sys.exit(131) # skip for now

	TXTrecords = [uts.random_string(), uts.random_string(), uts.random_string()]

	with udm_test.UCSTestUDM() as udm:
		forwardZone = udm.create_object('dns/forward_zone', zone = '%s.%s' % (uts.random_name(), uts.random_name()), nameserver = uts.random_string(), txt = TXTrecords[0])
		
		udm.modify_object('dns/forward_zone', dn = forwardZone, append = {'txt': TXTrecords[1:]})
		if not utils.verify_ldap_object(forwardZone, {'tXTRecord': TXTrecords}):
			utils.fail()
		
		udm.modify_object('dns/forward_zone', dn = forwardZone, remove = {'txt': TXTrecords[:2]})
		if not utils.verify_ldap_object(forwardZone, {'tXTRecord': TXTRecords[2:]}):
			utils.fail()
