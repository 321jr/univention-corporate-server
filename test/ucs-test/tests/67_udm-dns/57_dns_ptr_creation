#!/usr/share/ucs-test/runner python
## desc: Create DNS PTR
## tags: [udm-dns,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts


if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		reverse_zone = udm.create_object('dns/reverse_zone', subnet = '10.20.30', nameserver = uts.random_string())

		ptr = udm.create_object('dns/ptr_record', address = '2', superordinate = reverse_zone)

		utils.verify_ldap_object(ptr)
