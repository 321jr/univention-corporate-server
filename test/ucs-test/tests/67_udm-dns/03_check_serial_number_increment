#!/usr/share/ucs-test/runner python
## desc: Check DNS forward zone SOA record serial number incrementation
## tags: [udm-dns,apptest]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap


if __name__ == '__main__':
	forwardZoneProperties = {
		'zone': '%s.%s' % (uts.random_name(), uts.random_name()),
		'nameserver': uts.random_string(),
		'contact': '%s@%s.%s' % (uts.random_name(), uts.random_name(), uts.random_name()),
		'serial': '1',
		'zonettl': '128',
		'refresh': '64',
		'expire': '32',
		'ttl': '16',
		'retry': '8'
	}

	ldap = uldap.getAdminConnection()
	ldapFilter = '(&(zoneName=%s)(objectClass=dNSZone)(relativeDomainName=@))' % forwardZoneProperties['zone']

	expectedSOASerial = str( int(forwardZoneProperties['serial'])+1 )

	with udm_test.UCSTestUDM() as udm:
		forwardZone = udm.create_object('dns/forward_zone', **forwardZoneProperties)
		udm.modify_object('dns/forward_zone', dn = forwardZone, zonettl='112')
		foundSOASerial = ldap.search(filter = ldapFilter, attr = ['sOARecord'])[0][1]['sOARecord'][0].split()[2]
		if foundSOASerial != expectedSOASerial:
			test.fail('Expected SOA serial of the created forward zone to be "%s" after modification of forward zone\'s "zonettl", but found "%s" instead' % (expectedSOASerial, foundSOASerial))
