#!/usr/share/ucs-test/runner python
## desc: DNS host, test setting, appending and removing A records
## tags: [udm-dns]
## roles: [domaincontroller_master]
## bugs: [15654]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools



import univention.testing as test
import univention.testing.udm as udm_test
import univention.testing.strings as uts
import univention.uldap as uldap


if __name__ == '__main__':
	hostName = uts.random_name()
	Arecords = ('10.20.30.40', '10.20.30.41', '10.20.30.42')

	ldap = uldap.getAdminConnection()
	ldapFilter = '(&(relativeDomainName=%s)(objectClass=dNSZone))' % hostName

	with udm_test.UCSTestUDM() as udm:
		forwardZone = udm.create_object('dns/forward_zone', zone = '%s.%s' % (uts.random_name(), uts.random_name()), nameserver = uts.random_string())
		hostRecord = udm.create_object('dns/host_record', superordinate = forwardZone, name = hostName, a = Arecords[0])
		
		udm.modify_object('dns/host_record', dn = hostRecord, superordinate = forwardZone, append = {'a': Arecords[1:]})
		foundArecords = ldap.search(filter = ldapFilter, attr = ['aRecord'])[0][1].get('aRecord', [])
		for Arecord in Arecords:
			if not Arecord in foundArecords:
				test.fail('Expected "aRecord" attribute of DNS forward zone to contain "%s", but could not find it in there\n"aRecord": %r' % (Arecord, foundArecords))
		
		udm.modify_object('dns/host_record', dn = hostRecord, superordinate = forwardZone, remove = {'a': Arecords[:2]})
		foundArecords = ldap.search(filter = ldapFilter, attr = ['aRecord'])[0][1].get('aRecord', [])
		for Arecord in Arecords[:2]:
			if Arecord in foundArecords:
				test.fail('"aRecord" attribute of DNS forward zone still contained "%s" after the value should have been removed\n"aRecord": %r' % (Arecord, foundArecords, foundArecords))

		if not Arecords[2] in foundArecords:
			test.fail('Removing the values %r from "aRecord" attribute of DNS forward zone also lead to the removal of value "%s" from the attribute\n"aRecord": %r' % (Arecords[:2], Arecords[2], foundArecords))
