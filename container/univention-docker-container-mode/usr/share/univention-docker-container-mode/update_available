. /usr/share/univention-docker-container-mode/lib.sh

univention-check-join-status 1>/dev/null 2>&1
if [ ! "$?" -eq 0 ]; then
	echo "packages"
	exit 0
fi

available=$(ucr get update/available)
if [ "$available" != "yes" ]; then
	exit 0
fi
upgrade=$(univention-upgrade --check --disable-app-updates)
release=$(echo "$upgrade" | grep "Checking for release updates:" | sed -n "s/.*found: UCS \(.*\)"/\\1/p)
if [ -n "$release" ]; then
	echo "release: $release"
else
	packages=$(echo "$upgrade" | grep "Checking for package updates:" | sed -n "s/.*found/packages/p")
	echo "$packages"
fi

