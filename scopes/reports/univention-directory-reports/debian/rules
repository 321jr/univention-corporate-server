PACKAGE_NAME=univention-directory-reports
MODULE_NAME=univention-directory-reports

PYVERS=$(shell pyversions -vr)

package=univention-directory-reports
destdir=debian/univention-directory-reports/

MO_FILES=$(shell find modules -name '*.po' | sed 's/\.po/\.mo/g')

%.mo:	%.po
	msgfmt -o $@ $<

build: build-stamp $(MO_FILES)
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars
	rm -f build-stamp
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	@for i in $(shell find modules/univention/directory/ -name '*.py'); do\
		o=debian/python-univention-directory-reports/usr/lib/python$*/site-packages/$${i#modules/};\
		install -d "`dirname $$o`";\
		install -m755 $$i $$o;\
	done
	@for i in $(MO_FILES); do\
		lang=`basename $$i .mo`;\
		domain=`dirname $$i | sed 's,^modules/,,;s,/,-,g'`;\
		o=debian/python-univention-directory-reports/usr/share/locale/$$lang/LC_MESSAGES/$$domain.mo;\
		install -d "`dirname $$o`";\
		install -m 644 $$i $$o;\
	done
	install -m 644 univention_logo.png $(destdir)/usr/share/$(package)/
	install -m 644 templates/users.csv $(destdir)/etc/univention/directory/reports/default/
	install -m 644 templates/users.tex $(destdir)/etc/univention/directory/reports/default/
	install -m 644 templates/groups.csv $(destdir)/etc/univention/directory/reports/default/
	install -m 644 templates/groups.tex $(destdir)/etc/univention/directory/reports/default/
	install -m 755 univention-directory-reports $(destdir)/usr/bin/
	univention-install-baseconfig

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installman -i
	dh_pycentral -Nunivention-directory-reports
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
