. /lib/lsb/init-functions

NAME='univention-saml'
DESC=$(get_lsb_header_val "$0" Short-Description)

case "$1" in
	start)
		# TODO: runit
		log_daemon_msg "Starting $DESC" "$NAME"
		install -m 770 -o samlcgi -g root -d /var/run/univention-saml
		/etc/init.d/memcached start
		/etc/init.d/stunnel4 start
		sleep 1
		chmod 0600 /var/run/univention-saml/*.socket
		chown samlcgi:root /var/run/univention-saml/*.socket
		log_end_msg 0
		;;
	stop)
		log_daemon_msg "Stopping $DESC" "$NAME"
		/etc/init.d/memcached stop
		/etc/init.d/stunnel4 stop
		rm -f -- /var/run/univention-saml/*.socket
		log_end_msg 0
		;;
	restart|force-reload)
		log_daemon_msg "Restarting $DESC" "$NAME"
		"$0" stop
		"$0" start
		log_end_msg 0
		;;
	status)
		rc=0
		/etc/init.d/memcached status || rc=$?
		/etc/init.d/stunnel4 status || rc=$?
		exit $rc
		;;
	*)
		echo "Usage: $0 {start|stop|restart|force-reload|status}"
		exit 1
		;;
esac
