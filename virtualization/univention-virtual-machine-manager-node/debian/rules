build:

clean:
	dh_testdir
	dh_testroot
	dh_clean
	$(RM) debian/univention-virtual-machine-manager-node-*{pre,post}{inst,rm}.debhelper
	$(RM) debian/univention-virtual-machine-manager-node-*.conffiles

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 0644 uvmm-node.py debian/univention-virtual-machine-manager-node-common/usr/lib/univention-directory-listener/system/
	@for virttech in xen kvm; do \
		install -m 0755 44univention-virtual-machine-manager-node-$$virttech.inst debian/univention-virtual-machine-manager-node-$$virttech/usr/lib/univention-install/; \
	done

# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
#	dh_install
	univention-install-config-registry
	univention-install-config-registry-info
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
