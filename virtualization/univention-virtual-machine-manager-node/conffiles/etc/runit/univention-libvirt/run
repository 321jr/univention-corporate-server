set -e

PATH=/sbin:/bin:/usr/sbin:/usr/bin

. /etc/default/libvirtd

PID=/var/run/libvirtd.pid
if [ -r "$PID" ]; then
	read pid <"$PID" || true # no '\n' -> 'read' returns 1
	exe=$(readlink "/proc/$pid/exe") &&
	case "$exe" in
	/usr/sbin/libvirtd*)
		echo "ERROR: libvirtd running $pid" >&2
		exit 1
		;;
	esac
	rm -f "$PID"
fi

exec /usr/sbin/libvirtd ${libvirtd_opts/-d/}
