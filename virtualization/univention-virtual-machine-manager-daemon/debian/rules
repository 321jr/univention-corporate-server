PACKAGE_NAME=univention-virtual-machine-manager-daemon

build:

clean:
	dh_testdir
	$(MAKE) clean
	rm -f *~
	$(RM) debian/univention-virtual-machine-manager-daemon.conffiles
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) DESTDIR=debian/tmp install

binary-arch:

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_install --sourcedir=debian/tmp --list-missing
	dh_pycentral -i
	dh_installinit --no-start
	dh_installchangelogs
	univention-install-config-registry
	dh_link
	dh_compress
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
