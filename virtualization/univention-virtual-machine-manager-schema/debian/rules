PYVERS := $(shell pyversions -vr)

package=univention-virtual-machine-manager-schema

PO_FILES := $(shell find modules -name '*.po')
MO_FILES := $(PO_FILES:%.po=%.mo)

%.mo: %.po
	msgfmt -o $@ $<

build: build-stamp $(MO_FILES)
build-stamp:
	dh_testdir
	touch $@

clean:
	dh_testdir
	rm -f build-stamp
	dh_clean
	$(RM) debian/python-univention-directory-manager-uvmm.conffiles
	$(RM) $(MO_FILES)

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 0644 schema/univention-virtual-machine-manager.schema debian/${package}/usr/share/univention-ldap/schema/
	install -m 0755 40univention-virtual-machine-manager-schema.inst debian/${package}/usr/lib/univention-install/

	@for i in $(shell find modules/univention/admin/ -name '*.py'); do\
		o=debian/python-univention-directory-manager-uvmm/usr/lib/python$*/site-packages/$${i#modules/}; \
		install -d "`dirname $$o`";\
		install -m755 $$i $$o;\
	done
	@for i in $(MO_FILES); do\
		lang=`basename $$i .mo`;\
		domain=`dirname $$i | sed 's,^modules/,,;s,/,-,g'`;\
		o=debian/python-univention-directory-manager-uvmm/usr/share/locale/$$lang/LC_MESSAGES/$$domain.mo;\
		install -d "`dirname $$o`";\
		install -m 644 $$i $$o;\
	done

	univention-install-config-registry

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_pycentral
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb


binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
