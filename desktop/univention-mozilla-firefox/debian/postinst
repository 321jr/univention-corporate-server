#!/bin/sh

#DEBHELPER#

univention-baseconfig set firefox/prefs/mailto?kmail
univention-baseconfig set firefox/prefs/checkdefaultbrowser?false

eval $(univention-baseconfig shell firefox/prefs/homepage)

if [ -z "$firefox_prefs_homepage" ]
	|| [ "$firefox_prefs_homepage" = "http://www.univention.de/ucd-welcome-2_0-0.html" ]
	|| [ "$firefox_prefs_homepage" = "http://www.univention.de/ucd-welcome-2_1-0.html" ]; then
	univention-baseconfig set firefox/prefs/homepage="http://www.univention.de/ucd-welcome-2_2-0.html"
fi

update-alternatives --install /usr/bin/x-www-browser x-www-browser /usr/bin/firefox 101

if [ "$1" = "configure" ] && [ -z "$2" ]; then
	univention-baseconfig set firefox/prefs/printing?kprinter
fi

exit 0

