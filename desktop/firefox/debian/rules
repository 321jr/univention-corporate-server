override_dh_auto_build:
	ucslint
	dh_auto_build

override_dh_shlibdeps:
	echo no shlibdeps	

override_dh_auto_install:
	# firefox
	tar xjf firefox-*.tar.bz2 -C debian/firefox/opt/
	# german dict
	mkdir debian/firefox/opt/firefox/extensions/langpack-de@firefox.mozilla.org
	unzip -x xpi/de.xpi -d debian/firefox/opt/firefox/extensions/langpack-de@firefox.mozilla.org
	# english dict
	mkdir debian/firefox/opt/firefox/extensions/langpack-en-GB@firefox.mozilla.org
	unzip -x xpi/en-GB.xpi -d debian/firefox/opt/firefox/extensions/langpack-en-GB@firefox.mozilla.org
	# french dict
	mkdir debian/firefox/opt/firefox/extensions/langpack-fr@firefox.mozilla.org
	unzip -x xpi/fr.xpi -d debian/firefox/opt/firefox/extensions/langpack-fr@firefox.mozilla.org
	# unzip the german dictionary
	unzip -x xpi/deutsches_woerterbuch-20110525.xpi install.js install.rdf dictionaries/de-DE.aff dictionaries/de-DE.dic -d debian/firefox/opt/firefox/extensions/de_DE\@dicts.j3e.de

%:
	dh $@
