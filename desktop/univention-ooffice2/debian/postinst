#DEBHELPER#

univention-config-registry set openoffice/fontscaling?100
univention-config-registry set openoffice/usesystemfiledialog?true
univention-config-registry set openoffice/database/default?HSQLDB
univention-config-registry set openoffice/filelocking?yes
univention-config-registry set openoffice/opengl?no

if [ -x /usr/bin/fc-cache ] && [ -e /etc/fonts/fonts.conf ]; then
	echo "Updating fontconfig cache..."
	fc-cache -fvs || true
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 3.0.0-2; then
        if [ -e /usr/lib/openoffice/program/oosplash.bin.real ]; then
                dpkg-divert --package univention-ooffice2 --remove --divert \
                /usr/lib/openoffice/program/oosplash.bin.real /usr/lib/openoffice/program/oosplash.bin
        fi
fi


# link desktop files for old kde profiles
for i in writer calc impress math base draw; do
	new="/usr/share/applications/openoffice.org-$i.desktop"
	old="/usr/share/applications/ooo-$i.desktop"
	if [ -e "$new" -a ! -e "$old" ]; then
		ln -s $new $old
	fi
done

exit 0
