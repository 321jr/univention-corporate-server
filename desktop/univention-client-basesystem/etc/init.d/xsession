set -e

PATH=/sbin:/bin:/usr/sbin:/usr/bin
export LC_ALL=de_DE@euro

case "$1" in
	start)
		if [ -e "$LOGIN_PROGRAM" -a "$LOGIN_PROGRAM" != "gdm" ]; then
			echo "Not starting X Session"
		else
			echo -n "Starting X Session"
			my_pid=$( /bin/sh -c 'echo $PPID'; )
			(
				while :; do
					exec su - thinclient -c /usr/X11R6/bin/startx >/dev/null 2>&1 &
					CHILDPID=$!;
					echo "$CHILDPID" > /var/run/xsession
					wait $CHILDPID;
				done
			) 1>/dev/null 2>/dev/null &

			echo "."
		fi
		;;
	stop)
		echo -n "Stopping X Session"
		if [ -e "/var/run/xsession" ]; then
			kill $(cat /var/run/xsession)
		fi
		echo "."
		;;
	restart)
		$0 stop
		$0 start
		;;
	*)
		echo "Usage: /etc/init.d/xsession {start|stop|restart}"
		exit 1
		;;
esac

exit 0
