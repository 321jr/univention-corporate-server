build: build-stamp
build-stamp:
	dh_testdir

	./bootstrap.sh setup debian/univention-client-basesystem/var/lib/univention-client-root ${UNIVENTION_CR_REBUILD}

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	

	rm -f build-stamp configure-stamp

	rm -rf debian/tmp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_installdirs
	install -m 0755 33univention-client-basesystem.inst debian/univention-client-basesystem/usr/lib/univention-install/

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
