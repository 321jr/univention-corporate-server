#!/bin/bash 

running=`lsof /usr/bin/vncevent | grep -i $USER`

if [ -z "$running" ]
	then
	/usr/bin/vncevent & 
	vpid=$!
	if [ "$?" == "0" ]
		then
		/usr/bin/kdialog --msgbox "vncevent started\nwaiting for events for 60 seconds"
		sleep 60
		kill $vpid
		/usr/bin/kdialog --msgbox "vncevent finished"
	else
		/usr/bin/kdialog --msgbox "start of vncevent failed"
	fi
else
	/usr/bin/kdialog --msgbox "vncevent already running"
fi
