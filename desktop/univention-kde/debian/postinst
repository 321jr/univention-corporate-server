#DEBHELPER#

rm -f /usr/share/apps/kdesktop/DesktopLinks/debian.desktop
rm -f /etc/kde3/debian/debian.desktop

eval `univention-baseconfig shell server/role`

if [ -n "$server_role" -a "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/78univention-kde.inst || true
fi

univention-baseconfig set auth/kdeprofile?true

if [ "$1" = "configure" -a -z "$2" ]; then
	#Fresh installation
	univention-config-registry set "hal/devices/group?root"
elif [ "$1" = "configure" -a -n "$2" ] && dpkg --compare-versions "$2" lt 4.0.2-1; then
	# do something on update from VERSION <= 4.0.2-1 to current Version
	eval "$(ucr shell hal/devices/group)"
	if [ "$hal_devices_group" = "Domain Users" ]; then
		univention-config-registry set "hal/devices/group=root"
	fi
fi

ldconfig
