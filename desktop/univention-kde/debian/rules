# This is the debhelper compatability version to use.

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	(cd profiles && find . ! -path "*.svn*" -type d -exec install  -d "../debian/univention-kde/usr/share/univention-kde-profiles/"{} \;)
	(cd profiles && find . ! -path "*.svn*" -type f -exec install {} "../debian/univention-kde/usr/share/univention-kde-profiles/"{} \;)

	install -m 0644 files/univention-wallpaper.jpg debian/univention-kde/usr/share/wallpapers/
	install -m 0644 files/ucs-background-1280x1024.png debian/univention-kde/usr/share/wallpapers/

	install -m 0644 design/usr/share/apps/ksplash/Themes/Univention/*{rc,png} debian/univention-kde/usr/share/apps/ksplash/Themes/Univention/
	install -m 0644 design/usr/share/apps/ksplash/Themes/Univention-green21/*{rc,png} debian/univention-kde/usr/share/apps/ksplash/Themes/Univention-green21/
	install -m 0644 design/usr/share/apps/kdisplay/color-schemes/UniventionGreen.kcsrc debian/univention-kde/usr/share/apps/kdisplay/color-schemes/
	install -m 0644 design/usr/share/apps/kdisplay/color-schemes/UniventionGreen21.kcsrc debian/univention-kde/usr/share/apps/kdisplay/color-schemes/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/128x128/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/128x128/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/16x16/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/16x16/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/22x22/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/22x22/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/32x32/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/32x32/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/48x48/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/48x48/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/64x64/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/64x64/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/scalable/apps/kmenu.svg debian/univention-kde/usr/share/icons/crystalsvg-univention/scalable/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention/index.theme debian/univention-kde/usr/share/icons/crystalsvg-univention/index.theme
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/128x128/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/128x128/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/16x16/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/16x16/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/22x22/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/22x22/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/32x32/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/32x32/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/48x48/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/48x48/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/64x64/apps/kmenu.png debian/univention-kde/usr/share/icons/crystalsvg-univention/64x64/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/scalable/apps/kmenu.svg debian/univention-kde/usr/share/icons/crystalsvg-univention/scalable/apps/
	install -m 0644 design/usr/share/icons/crystalsvg-univention-green21/index.theme debian/univention-kde/usr/share/icons/crystalsvg-univention/index.theme
	install -m 0644 "design/usr/share/apps/kthememanager/themes/Plastik-Univention-Green/"{*png,*xml} "debian/univention-kde/usr/share/apps/kthememanager/themes/Plastik-Univention-Green/"
	install -m 0644 "design/usr/share/apps/kthememanager/themes/Plastik-Univention-Green21/"{*png,*xml} "debian/univention-kde/usr/share/apps/kthememanager/themes/Plastik-Univention-Green21/"

	install -m 0755 univention-kde-profile-builder debian/univention-kde/usr/bin/
	install -m 0755 univention-kde-profile-builder-dialog debian/univention-kde/usr/bin/

	install -m 0755 78univention-kde.inst debian/univention-kde/usr/lib/univention-install/
	install -m 0755 univention-set-kdedirs debian/univention-kde-setdirs/usr/share/univention-kde/
	univention-install-baseconfig

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
