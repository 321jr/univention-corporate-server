eval `/usr/sbin/univention-baseconfig shell`
while true
do
rm /ramdisk/tmp/citrix-default
cat << EOT >> /ramdisk/tmp/citrix-default
[WFClient]
Version=1

[ApplicationServers]
default=

[default]
WinStationDriver=ICA 3.0
TransportDriver=TCP/IP
DisableCtrlAltDel=On
EncryptionLevelSession=Basic
Compress=On
TransportReconnectDefault=True
ProxyUseDefault=On
EnableAudioInput=Yes
AudioBandwidthLimit=1
ClientAudio=On
MouseSendsControlV=Off
UseDefaultSettingForColormap=Yes
ZLMouseMode=2
ZLKeyboardMode=0
UseFullScreen=Yes
Address=$univentionWindowsTerminalServer
EOT



/usr/lib/ICAClient/wfica -icaroot /usr/lib/ICAClient -nosplash -desc default /ramdisk/tmp/citrix-default

done

