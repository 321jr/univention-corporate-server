#DEBHELPER#

# The path to the flash plugin had been configured in a previous security
# update for 1.3. We need to remove it on upgrades. This code can be dropped
# after UCS 2.1
if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 2.1; then
    univention-config-registry unset flashplugin/downloadpath
    univention-config-registry unset flashplugin/downloadserver
fi

update-flashplugin || echo "Warning: flash-update failed, run update-flashplugin manually"

exit 0

