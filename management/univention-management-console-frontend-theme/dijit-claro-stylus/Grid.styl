@import "variables";

.umcGrid .dojoxGridScrollbox {
  overflow-y: scroll;
  overflow-x: hidden;
}
.umc .umcGridHeader {
  padding-bottom: 0.5em;
  display: inline-block;
}

.umc .umcGridHeader > *:after {
	content: " ";
	display: block;
	clear: both;
	height: 0px;
	visibility: hidden;
}

.umc .dojoxGridHeader {
	background-color: $text-color;
	.dojoxGridCell {
		background-color: $text-color;
		color: $text-color-dark-background;a
	}
	.dojoxGridCellOver {
		background-color: $primary-color;
	}
	.dojoxGridCellFocus,
	.dojoxGridCell,
	.dojoxGridCellOver {
		border: none;
	}
	.dijitCheckBox {
		$_iconImage = replace("^(.*)(\.\w*)$", "$1-small-white$2", $image-icons)
		background-image: url($_iconImage);
	}
}
.umc .dojoxGrid {
	font-family: inherit;
	background: none;

	.dojoxGridRow {
		background-color: white;
		border: none;
	}
	.dojoxGridRowOdd {
		background-color: $grey-lightest;
	}
	.dojoxGridRowSelected {
		background-color: $grey-medium;
	}
	.dojoxGridCell {
		background-image: none;
		border: none;
	}
}

.umcGrid .umcGridDefaultAction:hover {
	text-decoration: underline;
}

.umc .umcGridFooter {
  margin-bottom: 0.5em;
  border-top: thin solid $text-color;
}
.umc .dojoxGridArrowButtonChar {
	display: none;
	float: right;
}
.umc .dojoxGridSortUp .dojoxGridArrowButtonNode {
	background-position: -21px 50%;
}
.umc .dojoxGridArrowButtonNode {
	background: transparent url(../../../dijit/themes/umc/images/spriteArrows.png) no-repeat scroll left center;
	display: block;
	float: right;
	height: 1em;
	margin: 2px 4px 0 5px;
	padding-left: 0;
	width: 7px;
}
