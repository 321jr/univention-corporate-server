/* LiveSearchSidebar */
.umcLiveSearchSidebar {
	.dijitButton {
		font-size: 100%;
		background: none;
		filter: none;
		border: none;
		display: block;
		margin: 0.4em 0 0 0;
		padding: 0;

		.dijitButtonContents {
			outline: none;
		}

		.dijitButtonText {
			text-decoration: none;
			padding-left: 0.416em;
			padding-right: 0.416em;
		}
	}

	.umcButton.umcCategorySelected .dijitButtonText {
		font-weight: bold;
	}

	.dijitButtonHover,
	.dijitButtonActive {
		box-shadow(none);
		border-radius(5px);
		transition-duration(0.3s);

		.dijitButtonNode {
			text-shadow: none;
			background: none;
			filter: none;
		}
	}
}



.warning {
	color: white;
	margin: 0 auto 20px auto;
	max-width: 500px;
	min-height: 165px;
	height: auto;
	vertical-gradient-and-filter($text-color-lighter, $text-color);
	opacity: 0.8;
	box-shadow: 0 0px 10px rgba(0,0,0,0.3)
	padding: 20px;

	a {
		color: white;
		text-decoration: underline;
		opacity: 0.8;
	}
	a:hover {
		opacity: 1;
	}
		
	.title {
		font-size: $font-size-medium;
		line-height: 1em;
		font-weight: bold;
		margin-bottom: 1em;
	}

	.icon {
		background-image: url(../images/info.svg);
		background-repeat: no-repeat;
		width: 110px;
		height: 130px;
		margin-right: 15px;
		float: left;
	}
}

