/* LiveSearchSidebar */
.umcLiveSearchSidebar {
	.dijitButton {
		font-size: 100%;
		background: none;
		border: none;
		display: block;
		margin: 0.4em 0 0 0;
		padding: 0;

		.dijitButtonContents {
			outline: none;
		}

		.dijitButtonText {
			text-decoration: none;
			padding-left: 0.416em;
			padding-right: 0.416em;
		}
	}

	.umcButton.umcCategorySelected .dijitButtonText {
		font-weight: bold;
	}

	.dijitButtonHover,
	.dijitButtonActive {
		box-shadow(none);
		border-radius(5px);
		transition-duration(0.3s);

		.dijitButtonNode {
			text-shadow: none;
			background: none;
		}
	}
}


