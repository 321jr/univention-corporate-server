/* Category tabs */
.umc .umcCategoryBar {
	text-align: center;
	margin-bottom: 35px;
}

.umc .umcCategoryBar .dijitButton {
	min-width: 95px;
	@media (max-width: 400px) {
		min-width: 70px;
	}
	max-width: 160px;
	margin: 5px 0;
	position: relative;
	vertical-align: top;

	.dijitButtonNode {
		margin: auto;
		padding: 0;
		border: 0 none;
		background: none;
		filter: none;
		box-shadow: none;
		display: block;

		.dijitButtonContents {
			.umcCategoryButtonBackgroundWrapper {
				transition: transform 0.3s, opacity 0.3s;
				-webkit-transition: -webkit-transform 0.3s, opacity 0.3s;
				opacity: 0.75;
				_transform: scale(0.8, 0.8);
			}
		}
	}

	.dijitButtonText {
		display: block;
		font-size: 1em;
		margin-top: 0.5em;
		white-space: pre-line;
	}

	.dijitIcon {
		display: block;
		position: absolute;
		width: 100%;
		background-position: center top;
		transition: transform 0.3s 0.0s;
		-webkit-transition: -webkit-transform 0.3s 0.0s;
		_transform: scale(0.8, 0.8);
	}

	&.dijitButtonSelected {
		.dijitButtonNode {
			.dijitButtonContents {
				.umcCategoryButtonBackgroundWrapper {
					opacity: 1;
					_transform: scale(1, 1);

					.dijitIcon {
						_transform: scale(1, 1);
					}
				}
			}
		}
	}

