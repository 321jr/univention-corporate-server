.umc .umcNotificationHidden {
	left: 195px;
	transition-duration: .75s;
	transition-property: left;

	.umcNotificationMessage {
		max-height: 0;
		transition-duration: .75s;
		transition-property: max-height;
	}
}

.umc .umcNotification:hover {
	left: 0;
	.umcNotificationMessage {
		max-height: 500px;
	}
}
