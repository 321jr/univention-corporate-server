@import "variables";

.umc .umcNotificationContainer {
	position: absolute;
	width: 210px;
	right: 0;
	top: 110px;
	height: auto;
	overflow: hidden;
	display: inline-block;
}

.umc .umcNotification {
	position: relative;
	display: block;
	margin-bottom: 5px;
	width: 200px;
	color: $text-color-dark-background;
	padding: 6px 10px;
	left: 5px;
	opacity: 1;
	z-index: 20;

	transition-duration: .75s;
	transition-property: left, opacity;

	a {
		color: $grey-medium;
	}

	a:hover {
		color: white;
	}

	.umcNotificationTitle {
		font-weight: bold;
		border-bottom: solid 1px white;
		padding-bottom: 0.4em;
		margin-bottom: 0.4em;
	}

	.umcNotificationMessage {
		max-height: 500px;
		transition-duration: .75s;
		transition-property: max-height;
		overflow: hidden;
		word-wrap: break-word;
	}

