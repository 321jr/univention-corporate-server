@import "../variables";

/* Header elements */

.umc .umcHeader {
	height: 96px;
	padding: 0;

	.dijitTextBox {
		background-color: transparent;
	}

	/* do not treat formatted elements differently */
	.dijitButtonText * {
		vertical-align: baseline;
	}

	.umcHeaderLeft {
		background: url(../images/univention.svg) no-repeat 10px 12px;
		height: 50px;
	}

	.umcHeaderRight {
		padding-top: 5px;
	}

	.umcHeaderRight {
		.umcHeaderRightTop {
			display: inline-block;
			float: right;
		}
		.umcHeaderRightTop > * {
			width: 100%;
		}
		/* style for user and host information */
		.umcHeaderText {
			display: block;
			float: left;
			background: none;
			filter: none;
			box-shadow: none;
			padding: 9px 0 5px 0;
			margin: 0;
			//height: 24px;
		}

		.dijitDropDownButton {
			#umcMenuHelp, #umcMenuSettings {
				.dijitArrowButtonInner {
					display: none;
				}
			}
		}

		/* special style for buttons */
		.dijitDropDownButton.dijitDropDownButtonHover,
		.dijitButton.dijitButtonHover {
			box-shadow(none);
		}

		.dijitDropDownButton,
		.dijitButton {
			margin: 0;
			display: block;
			float: right;
			//height: 24px;
			padding: 0 0 5px 0;
			border: none;
			background: none;
			filter: none;
		}
	}

//	.dijitButton .dijitButtonNode {
//		padding-right: 7px;
//	}

	.dijitButtonNode {
		height: auto !important;
		background: none;
		filter: none;
		border-radius: 0;
		border: none;
		padding: 0;
		box-shadow: none;
	}

	.umcHeaderRightTop {//,
	//span[widgetid=umcMenuUsername].dijitDropDownButton,
	//span[widgetid=umcMenuHost].dijitDropDownButton {
		/* alignment with other elements */
		margin-right: -10px;
		//margin-bottom: 0.5em;
	}

	.umcLiveSearchSidebar {
		float: right;
		margin-bottom: 1em;
		//marign-top: 0.25em;
		clear: both;
		.dijitTextBox {
			//TODO: can later be removed
			width: 100%;
			margin-right: 0;
			//font-size: $font-size-buttons;
			//font-size: $font-size-medium;

			.umcInlineLabel {
				color: $text-color;
			}
		}
		.umcLiveSearchSidebarRadioButtonGroup {
			display: none;
		}
	}

	#umcMenuUsername,
	#umcMenuHost {
		outline: none;
	}

	#umcMenuUsername .dijitButtonText,
	#umcMenuHost .dijitButtonText {
		display: inline-block;
		background: none;
		filter: none;
		box-shadow: none;
		color: $text-color;
		font-size: $font-size-medium;
	}

	.dijitDisabled #umcMenuHost .dijitArrowButtonInner {
		width: 0;
	}

	.dijitButton.umcBackToOverview {
		display: block;

		.dijitButtonNode {
			padding-top: 16px;
			display: block;

			.dijitButtonText {
				font-size: 1em;
				display: block;
				visibility: hidden;
				margin-top: 0.5em;
			}
		}
	}
	.umcBackToOverview.dijitActive,
	.umcBackToOverview.dijitHover {
		.dijitButtonNode .dijitButtonText {
			visibility: visible;
		}
	}
}

