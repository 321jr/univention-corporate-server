/* special stylings depending on device class */

@media (max-width: 500px) {
	.col-xxs-12 {
		width: 100%;
	}
}

@media (max-width: 768px) {
	.umc .umcHeader .dijitButton.umcBackToOverview .dijitButtonNode {
		padding-top: 0;
	}
}

