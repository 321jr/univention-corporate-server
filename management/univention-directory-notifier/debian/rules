package=univention-directory-notifier

build: build-stamp

build-stamp:
	dh_testdir
	touch build-stamp
	cd src; ${MAKE}; cd -

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	cd src; $(MAKE) clean; cd -

	dh_clean

install:
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 700 src/univention-directory-notifier debian/univention-directory-notifier/usr/sbin

	univention-install-baseconfig

	ln -s /usr/share/univention-runit/sleep-dynamic debian/univention-directory-notifier/etc/runit/univention-directory-notifier/finish
	touch debian/univention-directory-notifier/etc/runit/univention-directory-notifier/down

	install -m 755 02univention-directory-notifier.inst debian/univention-directory-notifier/usr/lib/univention-install/
	install -m 755 15univention-directory-notifier-post.inst debian/univention-directory-notifier/usr/lib/univention-install/

	univention-install-service-info

	dh_install

binary-indep: build install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs -a
	dh_installdocs -a
	dh_installinit --no-start -r
	dh_installman -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
