eval "$(ucr shell)"

usage()
{
	echo "Usage: $0 --dn <ldap dn>"
	echo
	echo "The given LDAP DN will be replicated as if it has been modified."
	echo
}

if [ "$server_role" != "domaincontroller_master" ]; then
	echo "Abort: This tool must be run on the Domaincontroller Master!"
	exit 1
fi

if [ ! -e /var/lib/univention-ldap/notify/transaction ]; then
	echo "Abort: /var/lib/univention-ldap/notify/transaction was not found."
	exit 1
fi

if [ "$#" != 2 ] || [ "$1" != "--dn" ]; then
	usage
	exit 1
fi

dn="$2"

RESTART=0
if pidof univention-directory-notifier >/dev/null ; then
	RESTART=1
	invoke-rc.d univention-directory-notifier stop >/dev/null
	sleep 1
	if pidof univention-directory-notifier >/dev/null ; then
		echo "Abort: Failed to stop the notifier daemon. Please check stop the daemon manually and try again."
		exit 1
	fi
fi

id="$(tail -n 1 /var/lib/univention-ldap/notify/transaction | awk '{print $1}')"

nextid=$((id+1))

echo "$nextid $dn m" >>/var/lib/univention-ldap/notify/transaction

if [ "$RESTART" = 1 ]; then
	invoke-rc.d univention-directory-notifier start >/dev/null
fi

exit 0
