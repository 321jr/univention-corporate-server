#DEBHELPER#

eval `univention-baseconfig shell`

createLogfile () {
	if [ ! -e $1 ] ; then
		touch $1
		chown $2 $1
		chmod $3 $1
	fi
}

createLogfile /var/log/univention/directory-reports-cleanup.log "root:adm" 640

if [ "$server_role"  = "domaincontroller_master" ] || [ "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/25univention-directory-manager.inst || true
fi

if [ "$1" = configure ]; then
	if [ "$admin_web_language" = "de" ]; then
		admin_web_language="de_DE.utf8"
	elif [ "$admin_web_language" = "en" ]; then
		admin_web_language="en_US.utf8"
	fi
	if [ -n "$locale_default" ]; then
		univention-baseconfig set directory/manager/web/language?"$(echo $locale_default | sed -e 's|:.*||')"
	fi

	if [ -n "$admin_timeout" ]; then
		univention-baseconfig unset admin/timeout
	fi
	if [ -n "$admin_web_language" ]; then
		univention-baseconfig unset admin/web/language
	fi
	if [ -n "$admin_web_debug_level" ]; then
		univention-baseconfig unset admin/web/debug/level
	fi
fi

univention-config-registry set ssl/validity/check?yes
univention-config-registry set directory/reports/cleanup/cron?"0 0 * * *"
univention-config-registry set directory/reports/cleanup/age?43200

# change default timeout too 15 minutes
defaulttimeout=$((15*60))
timeout_variables="directory/manager/cmd/timeout directory/manager/timeout"
for i in $timeout_variables
do
	if [ "$(univention-config-registry get $i)" = "300" ]; then
		univention-config-registry set $i=$defaulttimeout
	fi
done

# autosearch
univention-config-registry set directory/manager/web/modules/autosearch?1

# default search
univention-config-registry set directory/manager/web/modules/users/user/search/default?username
univention-config-registry set directory/manager/web/modules/dhcp/service/search/default?service

for i in \
	computers/computer \
	computers/domaincontroller_backup \
	computers/domaincontroller_master \
	computers/domaincontroller_slave \
	computers/ipmanagedclient \
	computers/macos \
	computers/managedclient \
	computers/memberserver \
	computers/mobileclient \
	computers/thinclient \
	computers/trustaccount \
	computers/windows \
	dhcp/dhcp \
	groups/group \
	mail/domain \
	mail/folder \
	mail/lists \
	mail/mail \
	nagios/service \
	networks/network \
	policies/admin_container \
	policies/admin_user \
	policies/autostart \
	policies/clientdevices \
	policies/console_access \
	policies/desktop \
	policies/dhcp_boot \
	policies/dhcp_dns \
	policies/dhcp_dnsupdate \
	policies/dhcp_leasetime \
	policies/dhcp_netbios \
	policies/dhcp_routing \
	policies/dhcp_scope \
	policies/dhcp_statements \
	policies/ldapserver \
	policies/mailquota \
	policies/maintenance \
	policies/managedclientpackages \
	policies/masterpackages \
	policies/memberpackages \
	policies/mobileclientpackages \
	policies/nfsmounts \
	policies/policy \
	policies/print_quota \
	policies/printserver \
	policies/pwhistory \
	policies/registry \
	policies/release \
	policies/repositoryserver \
	policies/repositorysync \
	policies/share_userquota \
	policies/slavepackages \
	policies/sound \
	policies/thinclient \
	policies/windowsinstallation \
	policies/xfree \
	shares/print \
	shares/printer \
	shares/printergroup \
	shares/share \
	users/user
do
	 VARIABLES="${VARIABLES} directory/manager/web/modules/${i}/search/default?name"
done
if [ -n "${VARIABLES}" ]; then
	univention-config-registry set ${VARIABLES}
fi

univention-config-registry set directory/manager/web/modules/advancedview?"0"

for path in /usr/share/univention-directory-manager/www/icon /usr/share/univention-directory-manager/www/style /usr/share/univention-directory-manager/www/includes; do
	if [ -d $path -a ! -h $path ]; then
		rm -r $path
	fi
done

test -h /usr/share/univention-directory-manager/www/index.php || ln -s /usr/share/univention-webui/www/index.php /usr/share/univention-directory-manager/www
test -h /usr/share/univention-directory-manager/www/file.php || ln -s /usr/share/univention-webui/www/file.php /usr/share/univention-directory-manager/www

test -h /var/www/univention-directory-manager || ln -s /usr/share/univention-directory-manager/www /var/www/univention-directory-manager


chown www-data:www-data /usr/share/univention-directory-manager/www/directory-reports
chmod 700 /usr/share/univention-directory-manager/www/directory-reports

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 3.1.4-1; then
	ln -sf /usr/share/univention-webui-style/icon /usr/share/univention-directory-manager/www/icon
	a2ensite univention-directory-manager
elif [ "$1" = configure -a -z "$2" ]; then
	ln -sf /usr/share/univention-webui-style/icon /usr/share/univention-directory-manager/www/icon
	a2ensite univention-directory-manager
fi

if [ "$1" = "configure" -a -n "$2" ]; then

	for i in `ps -ef | egrep "/usr/bin/python2.4.*/usr/share/univention-admin/uniconf/univention-admin.py" | awk '{print $2}'`; do
		kill $i >/dev/null 2>&1
	done
	a2dissite univention-admin

	sleep 1

	/etc/init.d/apache2 reload || true
else
	/etc/init.d/apache2 reload || true
fi
