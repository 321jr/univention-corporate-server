package=univention-directory-manager

build: build-stamp
build-stamp:
	dh_testdir
	make
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars
	make clean
	rm -f build-stamp 
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	make install DESTDIR=debian/univention-directory-manager/
	find debian/univention-directory-manager -name CVS | xargs rm -rf
	echo -n "`date +"%d.%m.%Y"`" > debian/univention-directory-manager/usr/share/univention-directory-manager/uniconf/builddate
	cat debian/changelog | head -1 > debian/univention-directory-manager/usr/share/univention-directory-manager/uniconf/buildversion

	msgfmt -o uniconf/locale/de/LC_MESSAGES/uniconf.mo uniconf/locale/de/LC_MESSAGES/uniconf.po
	install -m 0644 uniconf/locale/de/LC_MESSAGES/uniconf.mo debian/univention-directory-manager/usr/share/locale/de/LC_MESSAGES/univention-directory-manager-webfrontend.mo

	install -m644 icons/var/www/* debian/univention-directory-manager/usr/share/univention-webui-style/icon/
	install -m644 icons/32x32/* debian/univention-directory-manager/usr/share/univention-webui-style/icon/applications/32x32
	install -m644 icons/64x64/* debian/univention-directory-manager/usr/share/univention-webui-style/icon/applications/64x64
	install -m644 icons/128x128/* debian/univention-directory-manager/usr/share/univention-webui-style/icon/applications/128x128
	install -m644 icons/scalable/* debian/univention-directory-manager/usr/share/univention-webui-style/icon/applications/scalable
	install -m 0755 25univention-directory-manager.inst debian/univention-directory-manager/usr/lib/univention-install/
	install -m 0755 univention-directory-reports-cleanup debian/univention-directory-manager/usr/share/univention-directory-manager/

	univention-install-config-registry
	univention-install-config-registry-info
	univention-install-service-info

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installman -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
