import os, sys, socket, select

socket_filename = sys.argv[1]

if not os.path.exists(socket_filename):
	os.system('/usr/bin/python2.4 /usr/share/univention-admin/uniconf/univention-directory-manager.py -s %s' % socket_filename)

sock = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
sock.connect(socket_filename)

sock.send(sys.stdin.read()+'\0')
xmltext = ''
while 1:
        buf = sock.recv(1024)
        if buf[-1] == '\0':
                xmltext += buf[0:-1]
                break
        else:
                xmltext += buf
sys.stdout.write(xmltext)
