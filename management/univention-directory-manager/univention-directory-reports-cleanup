import os
import time

import univention_baseconfig as ub

baseConfig = ub.baseConfig()
baseConfig.load()

now = time.time()
print '%s: check for old reports' % time.ctime()
max_age = int( baseConfig.get( 'directory/reports/cleanup/age', '43200' ) )

old = []
dirname = '/usr/share/univention-admin/www/directory-reports'
for f in os.listdir( dirname ):
	if not f.startswith( 'univention-directory-reports-' ) or not f.endswith( '.pdf' ):
		continue
	creation_date = os.stat( os.path.join( dirname, f ) )[ 8 ]
	age = now - creation_date
	if age > max_age:
		old.append( f )

if old:
	print '%s: remove %d old reports' % ( time.ctime(), len( old ) )
	for f in old:
		os.unlink( os.path.join( dirname, f ) )
