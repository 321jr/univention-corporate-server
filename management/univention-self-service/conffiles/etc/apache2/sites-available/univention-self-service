@%@UCRWARNING=# @%@

@!@
if configRegistry.is_true("self-service/web/enabled", True):
	import re
	ussweb = re.compile('^self-service/(.*)/web/enabled$')
	for plugin in [ussweb.match(k).groups()[0] for k, v in configRegistry.items() if ussweb.match(k) and configRegistry.is_true(k)]:
		print "WSGIScriptAlias /univention-self-service/{0} /usr/share/univention-self-service/wsgi/{0}.py".format(plugin)
	print """
WSGIDaemonProcess self-service user=self-service group=self-service python-path=/usr/share/univention-self-service/wsgi
WSGIProcessGroup self-service
"""
@!@
<Directory /usr/share/univention-self-service/www/>
    Order allow,deny
    allow from all
</Directory>
