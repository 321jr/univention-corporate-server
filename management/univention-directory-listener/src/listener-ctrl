usage()
{
	echo "$0: command [args]"
	echo "Commands:"
	echo "  resync module1...     Resyncronize modules"
	exit 1
}

case "$1" in
	resync)
		shift
		[ -z "$1" ] && usage
		
		sv down univention-directory-listener
		i=0
		while ! sv status univention-directory-listener | grep ^down: >/dev/null ; do
			i=$((i+1))
			if [ $i -gt 300 ]; then
				echo "Sending SIGKILL"
				pids=`pidof univention-directory-listener`
				if [ -n "$pids" ]; then
					kill -9 $pids
					i=0
				fi
			fi
			sleep 1;
			echo waiting for shutdown ;
		done;
		echo shutdown done
		for i in $*; do
			rm "/var/lib/univention-directory-listener/handlers/$i" 2>/dev/null || echo "W: handler \"$i\" is unknown"
		done
		sv up univention-directory-listener
		
		;;
	*)
		usage
		;;
esac
