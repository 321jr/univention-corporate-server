#DEBHELPER#

createLogfile () {
	if [ ! -e $1 ] ; then
		touch $1
		chown $2 $1
		chmod $3 $1
	fi
}

createLogfile /var/log/univention/directory-reports.log "root:adm" 640

eval "$(univention-config-registry shell)"

# remove old variables
if [ -n "$directory_reports_templates_default1" ]; then
	univention-config-registry unset directory/reports/templates/default1
fi
if [ -n "$directory_reports_templates_default2" ]; then
	univention-config-registry unset directory/reports/templates/default2
fi

# remove old variables
if dpkg --compare-versions "$2" lt-nl 3.0.1-1; then
	for i in \
		directory/reports/templates/pdf/user1 \
		directory/reports/templates/pdf/group1 \
		directory/reports/templates/pdf/computer1 \
		directory/reports/templates/csv/user1 \
		directory/reports/templates/csv/group1 \
		directory/reports/templates/csv/computer1
		do univention-config-registry unset $i
	done
fi

univention-config-registry set directory/reports/logo?/usr/share/univention-directory-reports/univention_logo.png
univention-config-registry set directory/reports/templates/pdf/user1?'users/user "Standard Report" /etc/univention/directory/reports/default users.tex'
univention-config-registry set directory/reports/templates/pdf/group1?'groups/group "Standard Report" /etc/univention/directory/reports/default groups.tex'
univention-config-registry set directory/reports/templates/pdf/computer1?'computers/computer "Standard Report" /etc/univention/directory/reports/default computers.tex'
univention-config-registry set directory/reports/templates/csv/user1?'users/user "Standard CSV Report" /etc/univention/directory/reports/default users.csv'
univention-config-registry set directory/reports/templates/csv/group1?'groups/group "Standard CSV Report" /etc/univention/directory/reports/default groups.csv'
univention-config-registry set directory/reports/templates/csv/computer1?'computers/computer "Standard CSV Report" /etc/univention/directory/reports/default computers.csv'

exit 0
