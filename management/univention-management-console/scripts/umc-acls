import cPickle
import os
from optparse import OptionParser
import sys

import univention.config_registry as ucr

OPERATIONS = ( 'show', 'set', 'append' )
_cache_dir = '/var/cache/univention-management-console/acls'

configRegistry = ucr.ConfigRegistry()
configRegistry.load()

parser = OptionParser( usage = '%%prog (%s) [options]' % '|'.join( OPERATIONS ) )
parser.add_option( '-u', '--user', action = 'store',
				   dest = 'user', default = 'root',
				   help = 'define the user who should get access [default: %default]' )
parser.add_option( '-a', '--allow', type = 'string', action = 'append',
				   dest = 'allow', default = [],
				   help = 'define the accessable UMC commands (or patterns)' )
parser.add_option( '-H', '--host', type = 'string', action = 'store',
				   dest = 'host', default = configRegistry[ 'hostname' ],
				   help = 'on which host the commands are allowed [default: %default]' )

( options, args ) = parser.parse_args()

if len( args ) < 1:
	parser.error( 'operation missing' )
	sys.exit( 1 )
operation = args[ 0 ]
if not operation in OPERATIONS:
	parser.error( 'unknown operation %s' % operation )
	sys.exit( 1 )

filename = os.path.join( _cache_dir, options.user )
if os.path.isfile( filename ) and operation in ( 'show', 'append' ):
	fd = open( filename )
	acls = cPickle.load( fd )
	fd.close()
	print 'loaded pickle file', filename
else:
	acls = { 'allow' : [], 'disallow' : [] }

print acls
if operation == 'show':
	print 'Username: %s' % options.user
	print '  Allowed:'
	for acl in acls[ 'allow' ]:
		print '     Host: %-10s Command: %-15s Options: %s' % ( acl[ 'host' ], acl[ 'command' ], acl[ 'options' ] )
	print '  Disallowed:'
	for acl in acls[ 'disallow' ]:
		print '     Host: %-10s Command: %-15s Options: %s' % ( acl[ 'host' ], acl[ 'command' ], acl[ 'options' ] )
	sys.exit( 0 )
elif operation in ( 'set', 'append' ):
	for allow in options.allow:
		acls[ 'allow' ].append( { 'fromUser': False, 'host': options.host, 'command': allow, 'options': {} } )

fd = open( filename, 'w' )
fd.write( cPickle.dumps( acls ) )
fd.close()
