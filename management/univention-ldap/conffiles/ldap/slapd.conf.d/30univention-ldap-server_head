
schemacheck		on

pidfile			/var/run/slapd.pid
argsfile		/var/run/slapd.args
loglevel		@%@ldap/debug/level@%@
allow			bind_v2 update_anon

TLSCertificateFile	/etc/univention/ssl/@%@hostname@%@.@%@domainname@%@/cert.pem
