[ldap/master/port]
Description[de]=Der Port, unter dem der Domänencontroller Master erreichbar ist (siehe 'ldap/master').  Ist die Variable nicht gesetzt, gilt 7389.
Description[en]=The port of the master domain controller (see 'ldap/master'). If the variable is unset, 7389 applies.
Type=int
Categories=service-ldap

[ldap/server/port]
Description[de]=Der Port, unter dem der primäre LDAP-Server (siehe 'ldap/server/name') erreichbar ist.
Description[en]=The port of the primary LDAP server (see 'ldap/server/name').
Type=int
Categories=service-ldap

[ldap/sasl/secprops/maxssf]
Description[de]=Maximaler SASL Sicherheits-Schicht, benötigt für Verbindung mit einem Windows AD Server.
Description[en]=Maximal SASL security layers. This is needed for Windows AD server connections.
Type=int
Categories=service-ldap
