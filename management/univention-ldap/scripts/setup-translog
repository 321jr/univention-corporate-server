set -e -u

main () {
    local action="${1?-Missing action}"
    shift
    case "$action" in
    db)
        setup_db
        ;;
    all)
        setup_db
        ;;
    help)
        usage 0
        ;;
    *)
        usage 2 >&2
        ;;
    esac
}

die () {
    echo "${0##*/}: $*"
    exit 1
}

usage () {
    echo "Usage: ${0##*/} { db | all | help } [options]"
    exit "${1:-0}"
}

setup_db () {
    local db

    case "$(dpkg --print-architecture)" in
    i386) db="id2entry.bdb" ;;
    amd64|*) db="data.mdb" ;;
    esac
    [ -f "/var/lib/univention-ldap/translog/$db" ] ||
        slapadd -f /etc/ldap/slapd.conf -b cn=translog -l /usr/share/univention-ldap/translog.ldif
}


cleanup () {
    local rc=$?
    if [ "$rc" -ne 0 ] && [ -t 2 ]
    then
        set +e +u
        echo "[$(date --rfc-3339=s)] $$ $0 $*"
        ps axf
        grep -i -n -e 'translog' -e '^[^#]' /etc/ldap/slapd.conf /var/lib/univention-ldap/schema.conf
        ls -l /var/lib/univention-ldap/translog/ /var/univention-join/
        cat /var/univention-join/status
    fi
    return "$rc"
}
trap cleanup EXIT

main ${1:+"$@"}
:

# Constraints
# * DB must be created before slapd can start
# * SCHEMA must be registered before UDN should start
