@import "../variables"

#umcLoginDialog, .umcLoginDialog
	background-color: #ffffff
	width: 313px
	margin: 0 auto
	padding: 3px
	border: 0 none
	position: relative !important
	material-shadow(1)


#umcLoginDialog.umcLoginLoading
	height: 313px
	background-image: url("../images/login_bg.gif")

#umcLoginDialog *
	overflow: hidden


#umcLoginIframe
	position: absolute
	border: 0 none
	height: 0
	width: 0


#umcLoginDialog .umcLoginLogo img
	height: 120px
	margin: 53px auto 0
	display: block
	transition(margin-top 1s)


#umcLoginDialog.umcLoginLoading .umcLoginLogo img
	margin-top: 85px


#umcLoginDialog .umcLoginForm
	margin: 15px 15px 0 15px


#umcLoginDialog.umcLoginLoading .umcLoginForm
	display: none!important


#umcLoginDialog .umcLoginForm label
	width: 100%
	height: 30px
	display: block
	padding: 0
	margin: 20px 0
	border-bottom: thin solid #969696
	position: relative

#umcLoginDialog .umcLoginForm.umcLoginWarning label[for=umcLoginPassword]
	border-bottom: thin solid $error-color

#umcLoginDialog .umcLoginForm.umcLoginWarning input#umcLoginPassword
	color: $error-color

#umcLoginDialog .umcLoginForm input
	padding-right: 20px
	margin: 0
	border: 0 none
	outline: none
	background: transparent
	font-size: 1.5em
	color: #787878
	width: 90%
	height: 100%

#umcLoginDialog .umcLoginForm label a,
#umcLoginDialog .umcLoginForm input[type=submit]
	position: absolute
	right: 0
	bottom: 5px

#umcLoginDialog .umcLoginForm label a
	span.umcHelpIcon
		opacity: 0.6

	&:hover span.umcHelpIcon
		background-position: -60px -200px

	&:active span.umcHelpIcon
		background-position: -60px -200px
		opacity: 1


#umcLoginDialog .umcLoginForm input[type=submit]
	icon-image(0, -160, "../")
	color: transparent
	&:hover
		background-position: -20px -160px

	&:active
		icon-image(0, -160, "../", "-white")


#umcLoginLinks
	text-align: center
	margin: 1em
	a
		margin: 0 1em


#umcLoginMessages
	margin: 0 auto
	padding: 1.3em
	width: 313px
	font-size: 0.9em

#umcLoginMessages p
	margin: 0
	padding: 0

.umcLoginWarning, .umcLoginWarning a
	color: $error-color

#umcLoginHeaderRight
	position: absolute
	top: 0
	right: 0


#umcLanguageSwitch
	float: left
	.dijitButtonNode
		border: 0 none
		box-shadow: none
		background: none
		filter: none


#umcLanguageSwitch .dijitButtonNode .dijitArrowButtonInner
	icon-image(0, -220, "../", "", 20px, 25px)


#umcLanguageSwitch .dijitHover .dijitArrowButtonInner
	background-position: -20px -220px
	opacity: 0.66

#umcLanguageSwitch .dijitActive .dijitArrowButtonInner
	background-position: -20px -220px
	opacity: 1


/* do not show the dark underlay during the login screen */
.umc .dijitDialogUnderlayWrapper.umcBackground .dijitDialogUnderlay
	background: none

