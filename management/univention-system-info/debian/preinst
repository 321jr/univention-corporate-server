if [ "$1" = "configure" -a -n "$2" ]; then
	if dpkg --compare-versions "$2" lt 1.28;  then
		rm -f /var/run/lilo.d/
	fi
	if dpkg --compare-versions "$2" lt 1.4;  then
		boot_device=`cat /etc/lilo.conf  | grep boot=  | sed -e "s|boot=||"`
		root_device=`cat /etc/lilo.conf  | grep root=  | sed -e "s|root=||"`
		if [ -n "$boot_device" ]; then
			univention-config-registry set lilo/boot?$boot_device
		fi
		if [ -n "$root_device" ]; then
			univention-config-registry set lilo/root?$root_device
		fi

		modules=`cat /etc/modules | while read line; do l=\`echo $line | sed -e "s|#.*||"\`; if [ -z "$l" ]; then continue; fi; echo "$l;"; done`
		if [ -n "$modules" ]; then
			univention-config-registry set kernel/modules="$modules"
		fi
	fi

fi

dpkg-divert --rename --quiet --divert /etc/motd.debian --add /etc/motd

#DEBHELPER#

#be sure the /etc/kernel-img.conf exists
if [ ! -e /etc/kernel-img.conf ]; then
	echo "do_initrd = yes" >>/etc/kernel-img.conf
	echo "do_bootfloppy = no" >>/etc/kernel-img.conf
	echo "silent_loader = yes" >>/etc/kernel-img.conf
	echo "clobber_modules = yes" >>/etc/kernel-img.conf
fi

exit 0
