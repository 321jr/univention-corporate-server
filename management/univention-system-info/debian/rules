version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

PACKAGE_NAME=univention-management-console-system-info

PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	dh_testdir
	touch $@
build-ext-%:
	dh_testdir
	PYTHON=python$* make
	touch $@

clean:
	dh_testdir
	dh_testroot
	dh_clean

D=$(CURDIR)/debian/univention-config-registry

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 755 system-info-upload.py debian/univention-system-info-upload/usr/lib/cgi-bin/

    # install UMC module
	make PACKAGE=${PACKAGE_NAME} install-modules
	make PACKAGE=${PACKAGE_NAME} install-locales-backend
	make PACKAGE=${PACKAGE_NAME} install-images

	cat univention-system-info | sed -e "s/@%@package_version@%@/${version}/;s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-system-info_tmp
	install -m 755 univention-system-info_tmp debian/univention-system-info/usr/bin/univention-system-info
	rm univention-system-info_tmp*

	install -m 0755 44univention-management-console-system-info.inst debian/univention-management-console-system-info/usr/lib/univention-install/

	univention-install-config-registry
	univention-install-config-registry-info
	univention-install-service-info


binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_install --sourcedir=debian/tmp
	dh_pycentral  -Nunivention-system-info -Nunivention-system-info-upload
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
