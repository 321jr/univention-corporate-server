.umcAppCenterGallery
	.umcGalleryItem.appInnerWrapper
		background-image: linear-gradient(to bottom, #f0f0f0 0%, #eaeaea 100%)
		width:155px
		height: 165px
		padding: 0

	.appInnerWrapper
		.border
			background-image: url("appcenter/app-vignette.svg")
			background-size: 100% 100%
			position: absolute
			width: 100%
			height: 100%
			z-index: 2

		.appIcon
			height: 95px
			width: 100%
			z-index: 0
			top: 0
			transition: opacity 0.5s
			background-position: center center
			background-size: contain
			border: none

		&.hover .appIcon
			opacity: 0.05

		.appContent
			width: 100%
			height: 70px
			padding: 0.3em 0.6em 0.3em 1em
			display: inline-block
			transition: transform 0.5s

		&.hover .appContent
			transform: translateY(-100%)
			-webkit-transform: translateY(-100%)
			-ms-transform: translateY(-100%)

		.appHover
			width: 100%
			height: 70px
			background-image: linear-gradient(to bottom, #878787 0%, #6e6e6e 100%)
			color: #fff
			padding: 0.3em 1.1em 0.3em 1em
			position: absolute
			bottom: 0
			transform: translateY(100%)
			-webkit-transform: translateY(100%)
			-ms-transform: translateY(100%)
			transition: transform 0.5s

	.appHover span
		display: block
		padding-bottom: 0.2em
		word-break: break-word

	.appInnerWrapper.hover .appHover
		transform: translateY(0)
		-webkit-transform: translateY(0)
		-ms-transform: translateY(0)

	.appContent
		.umcGalleryName
			font-size: 1.4em
			display: block
			margin-bottom: 0.2em
			margin-right: 0
			transform: none
			font-weight: normal
			color: #282828 !important

		.umcGalleryVendor
			color: #666666
			text-overflow: ellipsis
			overflow: hidden
			white-space: nowrap
			width: 100%

