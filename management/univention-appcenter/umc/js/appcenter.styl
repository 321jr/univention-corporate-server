	.umcCarouselWidget
		position: relative

		.carouselOuterContainer
			margin: auto
			position: relative
			transition: height 0.5s

			.contentSliderWrapper
				float: left
				white-space: nowrap
				overflow: hidden
				position: relative
				height: 100%

				.contentSlider
					position: absolute
					left: 0
					transition: left 0.5s

					div
						margin: 0 10px
						display: inline-block
						/*border: 2px solid darkgrey;*/
						/*box-sizing: content-box;*/


					&.noTransition
						transition: none !important

					.carouselScreenshot
						cursor: pointer
						display: block
						margin: auto
						position: relative
						top: 50%
						transform: translateY(-50%)
						-ms-transform: translateY(-50%)
						-webkit-transform: translateY(-50%)
						transition: max-height 0.5s, max-width 0.5s

		.carouselButton
			float: left

			cursor: pointer
			width: 40px
			height: 100%
			opacity: 1
			transition: opacity 0.5s

			&.disabled
				opacity: 0
				cursor: default

			.carouselButtonImage
				background-image: url("appcenter/carouselArrowRight.svg")
				background-size: contain
				background-repeat: no-repeat
				background-position: 0 50%
				height: 100%
				opacity: 0.4
				transition: opacity 0.3s

				&:hover
					opacity: 1

			&.rightCarouselButton
				margin-left: 5px

			&.leftCarouselButton
				margin-right: 5px

				.carouselButtonImage
					transform: rotateY(180deg)
					-ms-transform: rotateY(180deg)
					-webkit-transform: rotateY(180deg)

		.scaleButton
			cursor: pointer
			width: 40px
			height: 40px
			background-image: url("appcenter/maximize.svg")
			background-size: 100% 100%
			position: absolute
			right: 0
			top: 0
			z-index: 1
			opacity: 0.4

			&.minimize
				background-image: url("appcenter/minimize.svg")

			&:hover
				opacity: 1

