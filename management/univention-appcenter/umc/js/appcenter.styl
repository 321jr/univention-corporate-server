.umcAppCenterGallery
	.umcGalleryWrapperItem
		float: left
		padding: 14px
		position: relative

		.appStatusIcon
			background-image: url("appcenter/statusIcons.svg")
			height: 40px
			width: 40px
			position: absolute
			top: 0
			right: 0
			z-index: 2
			transition: opacity 0.5s
			cursor: pointer

			&.appUpdateIcon
				background-position: 0 0

			&.appEndOfLifeIcon
				background-position: -80px 0

		.appStatusHoverIcon
			z-index: 3
			opacity: 0

			&.appUpdateIcon
				background-position: -40px 0

			&.appEndOfLifeIcon
				background-position: -120px 0

		.appInnerWrapper.hover ~ .appStatusHoverIcon
			opacity: 1

		.umcGalleryItem
			background-color: #eaeaea

		.umcGalleryItemActive .umcUpdateIcon,
		.umcGalleryItem:hover .umcUpdateIcon
			/* change icon color to white on hover */
			background-image: url("../../dijit/themes/umc/images/icons-white.svg")

