eval $( univention-config-registry shell server/role )
if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]
then
	/usr/lib/univention-install/44univention-management-console-network.inst || true
fi

#DEBHELPER#

if [ -x /etc/init.d/univention-management-console-server ]; then
	/etc/init.d/univention-management-console-server crestart
fi

if [ -x /etc/init.d/apache2 ]; then
	/etc/init.d/apache2 restart || true
fi

exit 0
