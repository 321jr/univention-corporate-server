[Unit]
Description=Univention Directory Manager HTTP service
After=network.target

[Service]
Type=simple
# ugly hack until StandardOutput or StandardError to file:YOUR_ABSPATH_FILENAME is supported
ExecStart=/bin/bash -ce "exec /usr/bin/python2.7 -m univention.management.server >> /var/log/univention/management-module-udm.log 2>&1"
#ExecStart=/usr/bin/python2.7 -m univention.management.server
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
User=root
Group=root
#StandardOutput=/var/log/univention/management-module-udm.log
#StandardError=/var/log/univention/management-module-udm.log

[Install]
WantedBy=multi-user.target
