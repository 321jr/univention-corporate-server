. $1

PWUSER=$USERNAME
OLDPW=$OLDPASSWORD
NEWPW=$NEWPASSWORD

read_silent() {
	prompt="$1"
	variable="$2"
	stty -echo
	printf "$prompt"
	read "$variable"
	stty echo
}

if [ -z "$USER" ]; then
	printf "username    : "
    read USER
fi


if [ -z "$OLDPW" ]; then
    read_silent "old password: " OLDPW
    echo ""
fi

if [ -z "$NEWPW" ]; then
    read_silent "new password: " NEWPW

    echo ""
    read_silent "retype new password: " NEWPWR
    echo ""
    if [ "$NEWPW" != "$NEWPWR" ]; then
		echo "ERROR: Passwords don't match"
	exit 1
    fi
fi

eval "$(univention-config-registry shell ldap/hostdn)"

DN=`ldapsearch -x -ZZ -D "$ldap_hostdn" -y /etc/machine.secret '(&(uid='"$PWUSER"')(objectClass=posixAccount))' dn -LLL | ldapsearch-wrapper | sed -ne 's|^dn: ||p'`

REVAL=1

/usr/sbin/univention-admin users/user modify --dn "$DN" --set password="$NEWPW" --binddn="$DN" --bindpw="$OLDPW" --logfile=/tmp/$PWUSER-admin.log && REVAL=0

test -f /tmp/$PWUSER-admin.log && rm /tmp/$PWUSER-admin.log

exit $REVAL
