source $1

PWUSER=$USERNAME
OLDPW=$OLDPASSWORD
NEWPW=$NEWPASSWORD

if [ -z "$USER" ]; then
    read -p "username    : " USER
fi

if [ -z "$OLDPW" ]; then
    read -s -p "old password: " OLDPW
    echo ""
fi

if [ -z "$NEWPW" ]; then
    read -s -p "new password: " NEWPW
    echo ""
    read -s -p "retype new password: " NEWPWR
    echo ""
    if [ "$NEWPW" != "$NEWPWR" ]; then
	echo "ERROR: Passwords don't match"
	exit 1
    fi
fi

DN=`ldapsearch -x '(&(uid='"$PWUSER"')(objectClass=posixAccount))' dn -LLL| ldapsearch-wrapper | grep ^dn | sed -e 's|^dn: ||'`

REVAL=1

/usr/sbin/univention-admin users/user modify --dn "$DN" --set password="$NEWPW" --binddn="$DN" --bindpw="$OLDPW" --logfile=/tmp/$PWUSER-admin.log && REVAL=0

test -f /tmp/$PWUSER-admin.log && rm /tmp/$PWUSER-admin.log

exit $REVAL
