export DH_COMPAT=3
version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	make
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~
	make clean
	dh_clean

TOOLS_DEST=$(CURDIR)/debian/univention-admin-tools
MODULES_DEST=$(CURDIR)/debian/python2.4-univention-admin

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m755 univention-dnsedit ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_uniqueMembers ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_policies ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_kerberos_deactivation ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_sambaAccountFlags ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_class_b_reverse ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_hostShadowAccounts ${TOOLS_DEST}/usr/share/univention-admin-tools
	install -m755 proof_dns_dhcp_records ${TOOLS_DEST}/usr/share/univention-admin-tools

	# new tools with daemon mode
	install -m755 univention-cli-client $(TOOLS_DEST)/usr/share/univention-admin-tools/univention-cli-client
	install -m755 univention-cli-server $(TOOLS_DEST)/usr/share/univention-admin-tools/univention-cli-server

	# compile and install admin modules 

	make install DESTDIR=${MODULES_DEST}
	find ${MODULES_DEST} -type d -name CVS | xargs rm -rf

	# install admin-cli modules
	cat modules/univention/admincli/admin.py| sed -e "s/@%@package_version@%@/${version}/" > modules/univention/admincli/admin.py_tmp
	cat modules/univention/admincli/admin.py_tmp| sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > modules/univention/admincli/admin.py_tmp2
	install -m644 modules/univention/admincli/admin.py_tmp2 ${MODULES_DEST}/usr/lib/python2.4/site-packages/univention/admincli/admin.py
	rm modules/univention/admincli/admin.py_tmp*
	install -m644 modules/univention/admincli/adduser.py ${MODULES_DEST}/usr/lib/python2.4/site-packages/univention/admincli/adduser.py
	install -m644 modules/univention/admincli/passwd.py ${MODULES_DEST}/usr/lib/python2.4/site-packages/univention/admincli/passwd.py
	install -m644 modules/univention/admincli/license_check.py ${MODULES_DEST}/usr/lib/python2.4/site-packages/univention/admincli/license_check.py
	install -m644 modules/univention/admincli/__init__.py ${MODULES_DEST}/usr/lib/python2.4/site-packages/univention/admincli/__init__.py
	dh_install

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs 
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
