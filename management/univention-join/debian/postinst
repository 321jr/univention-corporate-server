#DEBHELPER#

createLogfile () {
	if [ ! -e $1 ] ; then
		touch $1
		chown $2 $1
		chmod $3 $1
	fi
}

createLogfile /var/log/univention/check_join_status.log "root:adm" 640
createLogfile /var/log/univention/server-join.log "root:adm" 640
createLogfile /var/log/univention/join.log "root:adm" 640

/usr/lib/univention-install/91univention-join.inst || true

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.7; then
	res=`find /etc/univention/ssl/ -group root`
	if [ -n "$res" ]; then
		find /etc/univention/ssl/ -group root | xargs chown root."DC Backup Hosts" >/dev/null 2>&1
	fi
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 2.0.19-1; then
       if [ -e "/etc/ldap-backup.secret" ]; then
		chmod 640 /etc/ldap-backup.secret
		chgrp "DC Backup Hosts" /etc/ldap-backup.secret
       fi
fi

