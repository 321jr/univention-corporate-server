version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~ univention-name-to-unicode

	dh_clean

D=$(CURDIR)/debian/univention-join

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	cat univention-server-join | sed -e "s/@%@package_version@%@/${version}/" > univention-server-join_tmp
	cat univention-server-join_tmp | sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-server-join_tmp2
	install -m755 univention-server-join_tmp2 ${D}/usr/share/univention-join/univention-server-join
	rm univention-server-join_tmp*

	cat univention-join | sed -e "s/@%@package_version@%@/${version}/" > univention-join_tmp
	cat univention-join_tmp | sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-join_tmp2
	install -m755 univention-join_tmp2 ${D}/usr/share/univention-join/univention-join
	rm univention-join_tmp*

	cat univention-run-join-scripts | sed -e "s/@%@package_version@%@/${version}/" | \
									  sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-run-join-scripts_tmp
	install -m755 univention-run-join-scripts_tmp ${D}/usr/share/univention-join/univention-run-join-scripts
	rm univention-run-join-scripts_tmp

	install -m755 check_join_status.sh ${D}/usr/share/univention-join/check_join_status
	install -m755 91univention-join.inst ${D}/usr/lib/univention-install/
	dh_install

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
