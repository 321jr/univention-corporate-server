import sys

from univention.management.console.modules.appcenter.app_center import Application
from univention.lib.package_manager import PackageManager

from univention.appcenter.app import AppManager
from univention.appcenter.actions import get_action

register = get_action('register')

package_manager = PackageManager(lock=False)
applications = Application.all_installed(package_manager, only_local=True, localize=False)
apps = []
for application in applications:
	app = AppManager.find(application.id)
	if app is None:
		sys.stderr.write('Could not load %s!\n' % application.id)
		continue
	else:
		sys.stdout.write('Re-registering %s!\n' % application.id)
		apps.append(app)
register.call(apps=apps, do_it=True)

