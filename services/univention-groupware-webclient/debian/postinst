a2enmod php5

# create database, user and tables
share=/usr/share/univention-groupware-webclient/
su - postgres -c "psql -d template1 -f $share/create.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/horde_datatree.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/horde_prefs.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/kronolith.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/turba_objects.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/nag.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/mnemo.pgsql.sql &> /dev/null"


eval `univention-baseconfig --shell dump`

# create horde user
if [ ! -e /etc/horde.secret ]; then
	tmp=$(mktemp)
	makepasswd --nocrypt > $tmp
	passwd=$(cat $tmp)
	hash=$(mkpasswd --hash=md5 -s < $tmp)
	touch /etc/horde.secret
	chmod 600 /etc/horde.secret
	echo $passwd > /etc/horde.secret
	chown www-data /etc/horde.secret
	rm -f $tmp
	# set passwd for database user horde
	su - postgres -c "echo \"ALTER USER horde WITH PASSWORD '$passwd'\" | psql -d template1 -f -"
fi

# FIXME: horde should be able to use de_DE@euro or similar locales
# if ! echo $locale | grep de_DE:; then
#	 univention-baseconfig set locale="$locale de_DE:iso-8859-15"
# fi

if [ -n "$interfaces_eth0_address" ]; then
	univention-baseconfig set horde/servername?$interfaces_eth0_address
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.2.0-47; then
	univention-baseconfig set horde/application/gollem?false
fi

univention-baseconfig set	horde/application/turba?true \
							horde/application/kronolith?true \
							horde/application/mnemo?true \
							horde/application/nag?true \
							horde/application/gollem?true \
							horde/application/ingo?true

univention-baseconfig set php/memory/limit?64

#DEBHELPER#

# restart services
if [ -x /etc/init.d/postgresql ]; then
	/etc/init.d/postgresql restart
fi

if [ -x /etc/init.d/postgresql-7.4 ]; then
	/etc/init.d/postgresql-7.4 restart
fi

if [ -x /etc/init.d/cyrus22 ]; then
	/etc/init.d/cyrus22 restart
fi

/etc/init.d/apache2 reload


if [ "$1" = configure -a -z "$2" ]; then
	/usr/share/univention-groupware-webclient/turba-permissions.py
fi

if [ -x /etc/init.d/univention-directory-listener ]; then
	/etc/init.d/univention-directory-listener crestart
fi

exit 0

