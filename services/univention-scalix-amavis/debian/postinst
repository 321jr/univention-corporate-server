#DEBHELPER#

eval `univention-baseconfig shell`

# set new permissions for /var/lib/amavis
dpkg-statoverride --remove /var/lib/amavis || true
dpkg-statoverride --update --add amavis amavis 0750 /var/lib/amavis

# enable milter support within sendmail
univention-baseconfig set mail/sendmail/milter?yes
/etc/init.d/sendmail restart

# enable smtpfilter support in scalix
univention-baseconfig set scalix/smtpfilter?yes
/usr/share/univention-scalix/univention-scalix-conffile /var/opt/scalix/__SCALIX_INSTANCE__/s/sys/smtpd.cfg

# restart scalix smtp daemon
/opt/scalix/bin/omoff -d0 smtpd && /opt/scalix/bin/omon smtpd

# restart amavis
/etc/init.d/amavis stop
/etc/init.d/amavisd-milter stop
sleep 1
/etc/init.d/amavis start

# we have some trouble with the restart in the installer environment
/etc/init.d/amavisd-milter start & 

exit 0
