VERSION=1

if ! test -e "/usr/share/univention-join/.joined"; then
	echo "The server has not joined yet"
	exit 1
fi

touch /usr/lib/univention-install/.index.txt

test -n "`grep "univention-ldap-addressbook-sync v${VERSION} successful" /usr/lib/univention-install/.index.txt`" && exit 1

eval $(univention-config-registry shell)

maildomain=$(echo $mail_hosteddomains | sed 's/[^ ]* //')
fqdn="$hostname.$domainname"

univention-directory-manager mail/folder create $@ --position "cn=folder,cn=mail,$ldap_base" --set sharedFolderUserACL="anyone read" --set name="global-addressbook" --set mailDomain=$maildomain --set kolabHomeServer=$fqdn --set folderType=contact --set userNamespace=FALSE

univention-config-registry set ldap/addressbook/sync/folder="shared/global-addressbook@$maildomain"

/etc/init.d/univention-directory-listener crestart

test -n "`grep "univention-ldap-addressbook-sync v${VERSION} successful" /usr/lib/univention-install/.index.txt`" || echo "univention-ldap-addressbook-sync v${VERSION} successful" >>/usr/lib/univention-install/.index.txt

exit 0
