# Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301  USA

PATH=/sbin:/bin:/usr/sbin

MDADM=/sbin/mdadm


reactivate_subdevice()
{
    # set device faulty (sometimes necessary for disconnected enbd-devices)
    $MDADM /dev/$1 -f $2
    # remove and add to start resync
    $MDADM /dev/$1 -r $2
    $MDADM /dev/$1 -a $2


}

case "$4" in
    start)
		if [ $2 == "none" ]
			then
			echo "do nothing."
		else
			echo -n "sync raid $1 with faulty device $2 "
			reactivate_subdevice $1 $2
			echo done.
		fi
		;;

    stop)
		if [ $3 == "none" ]
			then
			echo "do nothing."
		else
			echo -n "sync raid $1 with faulty device $3 "
			reactivate_subdevice $1 $3
			echo done.
		fi
		;;

esac
