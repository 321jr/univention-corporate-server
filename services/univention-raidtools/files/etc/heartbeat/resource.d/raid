MDADM=/sbin/mdadm
MDRUN=/sbin/mdrun

test -x $MDADM || exit 0

AUTOSTART=true

case "$2" in
    start)
	$MDADM -A -a /dev/$1
        ;;
    stop)
	$MDADM -S /dev/$1
        ;;
    *)
        echo "Usage: $0 device {start|stop}"
        exit 1
        ;;
esac

exit 0
