# init-script for capi4hylafax, originally by a debian-capi4hylafax-maintainer
# modifications by Univention GmbH to respect univention-config-registry ha-settings

PATH=/bin:/usr/bin:/sbin:/usr/sbin

. /lib/lsb/init-functions

test -f /usr/sbin/capiinit || exit 0    # sanity check

set -e

case "$1" in
  start)
    log_action_msg "Starting ISDN active cards"
    /usr/sbin/capiinit start
    log_action_end_msg 0
    ;;
  stop)
    if [ -d /proc/capi ]; then
        log_action_msg "Stopping ISDN active cards"
        /usr/sbin/capiinit stop
        log_action_end_msg 0
    fi
    exit 0
    ;;
  reload|restart|force-reload)
    log_action_msg "Restarting ISDN active cards"
    if [ -d /proc/capi ]; then
        /usr/sbin/capiinit stop
    fi
    /usr/sbin/capiinit start
    log_action_end_msg 0
    ;;
  *)
    echo "Usage: /etc/init.d/isdnactivecards {start|stop|restart|force-reload}"
    exit 1
    ;;
esac

exit 0
