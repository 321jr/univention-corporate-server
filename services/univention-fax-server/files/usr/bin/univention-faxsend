spool="/var/spool/hylafax"
queue=`echo "$@" | sed "s|^.*\(sendq/[a-z0-9]*\).*$|\1|"`

ps=`grep "^\!postscript:" $spool/$queue | sed "s|^\!postscript:.*\(docq/.*\)$|\1|"`
fax=`grep "^fax:" $spool/$queue | sed "s|^fax:.*\(docq/.*\)$|\1|"`
tmp=`mktemp`

psstamp "$spool/$ps" >$tmp
cat $tmp >"$spool/$ps"
rm -f $tmp

sh -c "cd $spool; cat '$ps' | $spool/bin/ps2fax -o '$fax'"

/usr/bin/c2faxsend "$@"

