export DH_COMPAT=3
version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	dh_clean

D=$(CURDIR)/debian/univention-winprinters

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	cat univention-get-winprinters | sed -e "s/@%@package_version@%@/${version}/" > univention-get-winprinters_tmp
	cat univention-get-winprinters_tmp | sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-get-winprinters_tmp2
	install -m755 univention-get-winprinters_tmp2 ${D}/usr/bin/univention-get-winprinters
	rm univention-get-winprinters_tmp*

	cat univention-list-winprinters | sed -e "s/@%@package_version@%@/${version}/" > univention-list-winprinters_tmp
	cat univention-list-winprinters_tmp | sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-list-winprinters_tmp2
	install -m755 univention-list-winprinters_tmp2 ${D}/usr/bin/univention-list-winprinters
	rm univention-list-winprinters_tmp*
	
	cat univention-put-winprinters | sed -e "s/@%@package_version@%@/${version}/" > univention-put-winprinters_tmp
	cat univention-put-winprinters_tmp | sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-put-winprinters_tmp2
	install -m755 univention-put-winprinters_tmp2 ${D}/usr/sbin/univention-put-winprinters
	rm univention-put-winprinters_tmp*

	install -m644 winprinters_smb.conf ${D}/var/lib/winprt-data/winprinters_smb.conf

	dh_install

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
