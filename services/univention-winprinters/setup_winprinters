if [[ -z $1 ]]; then
  echo "Error: missing printername(s)"
  echo "use \"$0 {<printername> ...}\""
  echo "list for all printers with \"list_winprinters\""
  exit 1
fi

if [ ! -x /usr/sbin/univention-baseconfig ]; then
  echo "Error! No univention-baseconfig found"
  exit 1
fi

while [[ -z ${samba_username} || -z ${samba_password} ]]; do
  echo
  read -p "Insert the username of the samba-administrator (Timout in 60 s): " -t 60 samba_username
  read -p "Insert the password of the samba-administrator (Timout in 15 s): " -t 15 samba_password
done

if [[ -n ${samba_username} && -n ${samba_password} ]]; then
  put_winprinters --samba_username="${samba_username}" --samba_password="${samba_password}" $@
else
  echo "Warning: without username/password or printername do nothing."
fi

