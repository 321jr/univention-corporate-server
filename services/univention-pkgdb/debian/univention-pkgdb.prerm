set -e

if [ "$1" = "remove" ]
then

if [ -e /etc/postgresql/pkgdb.secret ] ;then
  rm /etc/postgresql/pkgdb.secret
fi

# remove db pkgdb
pkgdb=`su - postgres -c "psql --list"|awk '/ pkgdb /{print $1}'`
if [ "$pkgdb" ] ;then
  # only, if database exists
  su - postgres -c "dropdb pkgdb" 2>/dev/null || echo "Warning: Removal of pkgdb failed!"
fi

# remove user pkgdbu
pkgdbu=`su - postgres -c "psql template1 -c \"select * from pg_user where usename='pkgdbu'\""|awk '/ pkgdbu /{print $1}'`
if [ "$pkgdbu" ] ;then
  # only, if pkgdbu exists
  su - postgres -c "dropuser pkgdbu" 2>/dev/null || echo "Warning: Removal of database user pkgdbu failed!"
fi

# remove group pkgdbg
pkgdbg=`su - postgres -c "psql template1 -c \"select * from pg_group where groname='pkgdbg'\""|awk '/ pkgdbg /{print $1}'`
if [ "$pkgdbg" ] ;then
  # only, if pkgdbg exists
  su - postgres -c "psql template1 -c \"drop group pkgdbg;\"" 2>/dev/null || echo "Warning: Removal of database group pkgdbg failed!"
fi

fi

#DEBHELPER#

exit 0
