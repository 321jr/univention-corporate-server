import os, sys, string
import univention_pkgdb
from pexpect import *

args=sys.argv[1:]
timeout=10
connectstring,pwstring=univention_pkgdb.sql_create_psql_connectstring()
if args:
	command='psql '+connectstring + ' -c \"' + string.join(args, ' ') + '\"'
else:
	command='psql '+connectstring

print 'command=%s' %(command)

child=spawn(command)
code=0
while not code == 1:
	code=child.expect(['Password:', EOF], timeout=timeout)
	if code == 0:
		child.sendline(pwstring)
