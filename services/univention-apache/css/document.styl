/* copied and modified from univention-management-console-frontend-theme package */

@import ("variables")

*:focus {
	outline: 0;
}

body {
  font-family: Clear Sans, Arial, Helvetica, sans-serif;
  font-size: 12px;
  color: $document-text-color;

  p {
	line-height: 1.3em;
  }
}

html {
	min-height: 100%;
	position: relative;
}

body .umcBackground,
body {
	overflow-x: hidden;
	/* Chrome,Safari4+ */
	background: url(images/background-tile.png) repeat, -webkit-gradient(linear, left bottom, right top, color-stop(0%, rgba(179,179,179,1)), color-stop(31%, rgba(224,224,224,1)), color-stop(51%, rgba(240,240,240,1)), color-stop(61%, rgba(235,235,235,1)), color-stop(74%, rgba(224,224,224,1)), color-stop(100%, rgba(189,189,189,1)));
	/* Chrome10+,Safari5.1+ */
	background: url(images/background-tile.png) repeat, -webkit-linear-gradient(to right top, rgba(179,179,179,1) 0%, rgba(224,224,224,1) 31%, rgba(240,240,240,1) 51%, rgba(235,235,235,1) 61%, rgba(224,224,224,1) 74%, rgba(189,189,189,1) 100%);
	/* W3C */
	background: url(images/background-tile.png) repeat, unquote("linear-gradient(to right top, rgba(179,179,179,1) 0%, rgba(224,224,224,1) 31%, rgba(240,240,240,1) 51%, rgba(235,235,235,1) 61%, rgba(224,224,224,1) 74%, rgba(189,189,189,1) 100%)");
}

.dj_ie9 body .umcBackground,
.dj_ie8 body .umcBackground,
.dj_ie9 body,
.dj_ie8 body {
	/* fallback on horizontal gradient for IE8/9 */
	filter: unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='#f0f0f0', endColorstr='#b3b3b3',GradientType=1)");
	background: #cdcdcd;
}

.dj_ie9 body:before .umcBackground,
.dj_ie8 body:before .umcBackground,
.dj_ie9 body:before,
.dj_ie8 body:before {
	/* add the repeating background for IE9 additionally */
	content: "";
	background: url(images/background-tile.png) repeat;
	position: absolute;
	width: 100%;
	height: 210px;
}


