/* copied and modified from univention-management-console-frontend-theme package */

@import ("variables")

*:focus {
	outline: 0;
}

html {
	min-height: 100%;
}

body {
	font-family: Clear Sans, Arial, Helvetica, sans-serif;
	font-size: .75em;
	color: $document-text-color;
	min-height: 100%;
	/* Chrome,Safari4+ */
	background: url(images/background-tile.png) repeat, -webkit-gradient(linear, left bottom, right top, color-stop(0%,#cdcdcd), color-stop(50%,#efefef), color-stop(100%,#cccccc));
	/* Chrome10+,Safari5.1+ */
	background: url(images/background-tile.png) repeat, -webkit-linear-gradient(to right top, #cdcdcd 0%,#efefef 50%,#cccccc 100%);
	/* W3C */
	background: url(images/background-tile.png) repeat, unquote("linear-gradient(to right top, #cdcdcd 0%, #efefef 50%, #cccccc 100%)");
}

.dj_ie9 body,
.dj_ie8 body {
	/* fallback on horizontal gradient for IE8/9 */
	filter: unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='#efefef', endColorstr='#cccccc',GradientType=1)");
	background: #cdcdcd;
}

.dj_ie9 body:before,
.dj_ie8 body:before {
	/* add the repeating background for IE9 additionally */
	content: "";
	background: url(images/background-tile.png) repeat;
	position: absolute;
	width: 100%;
	height: 210px;
}

