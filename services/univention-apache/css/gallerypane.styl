.login {
	vertical-gradient-and-filter(#ffffff, #f0f0f0);
	border: 4px solid #eee
	width: 400px;
	height: auto;
	box-shadow: 0 0px 25px rgba(0,0,0,0.15);
	margin-left: auto;
	margin-right: auto;
	margin-top: 30px;

	.loginlogo {
		background-image: url(images/login_logo.png);
		height: 125px;
		margin: 30px auto 20px auto;
		background-size: contain;
		background-repeat: no-repeat;
		background-position-x: center
	}	

	.logintext {
		padding: 0 1.3em;
	}

	.loginform {
		margin: 15px;
		margin-bottom: 40px;

		label {
			border-bottom: thin solid #969696;
			width: 100%;
			margin: 10px 0;
		}
		input {
			border: none;
			background: transparent;
			font-size: 1.5em;
			font-weight: normal;
		}
		input[type=submit] {
			background-image: url(icons/icons.svg);
			background-position-x: 0px;
			background-position-y: -160px;
			width: 20px;
			height: 20px;
			background-repeat: no-repeat;
			//icon-image(0, -160, "../", "-white");
			color: transparent;
			float: right;
		}
	}
	.organization {
		margin-top: 1em;
		text-align: right;
		font-size: 1.2em;
		
		.select {
			padding: 3px;
		}
	}
	a {
		color: #7db523;
	}
}


