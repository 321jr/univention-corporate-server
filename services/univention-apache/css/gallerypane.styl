@import "variables";
/* GalleryPane */
.umcGalleryPane.dgrid {
	overflow: hidden;
	height: auto;
	border: none;

	.dgrid-scroller {
		outline: none;
		position: relative;
		overflow: visible;
	}

	.dgrid-selected {
		background-color: inherit;
	}
}

/* gallery header may be outside of gallerypane */
.umcGalleryCategoryHeader {
	padding: 0 0 0.25em 0;
	margin: 1em 5px 0.5em 5px;
	font-size: $font-size-medium;
	font-weight: bold;
	border-bottom: solid 1px $base-border-color;
	// on the android tablet the border would only be displayed at width ~300px
	// this background image hack fixes the problem, see:
	//   http://stackoverflow.com/a/13550951
	background-image: url(../images/blank.png);
}

.umcGalleryCategoryHeader:first-child {
	margin-top: 0;
}

.galleryTab {
	// disable selection on touch devices
	// taken from: http://stackoverflow.com/a/11237968
	-webkit-touch-callout:none;
	-webkit-user-select:none;

	.umcGalleryWrapperItem {
		padding: 5px;
		display:inline;

		a {
			text-decoration: none;
		}
	}

	.umcGalleryItem {
		position: relative;
		outline: none;
		padding: 5px 5px 10px 5px;
		background-color: rgba(255, 255, 255, 0.5);
		transition-duration: 0.25s;
		transition-property: background-color, opacity, border;

		// definitions in px instead of em due to size of image in px
		//padding: 15px 20px;
		//margin: 0 12px 10px 0;
		height: 100px;
		overflow: hidden;
		
		.umcGalleryName {
			font-size: $font-size-medium;
			color: $text-color-lighter;
			font-weight: bold;
			line-height: 1.05em;
			min-height: 55%;
			transition-duration: inherit;
			transition-property: color, border;
			word-wrap: break-word;
			//margin-right: 20px;
		}

		.umcGalleryDescription {
			color: $text-color-lightest;
			line-height: 1.05em;
			padding-top: 5px;
			border-top: solid 1px $gallery-border-color;
			transition-duration: inherit;
			transition-property: color;
		}

		.umcGalleryIcon {
			padding-bottom: 0;
			float: left;
			height: 90px;
			width: 80px;
			background-position: center center;
			background-repeat: no-repeat;
		}

		/* if an icon is present, set a margin to the text elements */
		.umcGalleryIcon + .umcGalleryName,
		.umcGalleryIcon + .umcGalleryName + .umcGalleryDescription {
			margin-left: 85px;
		}

		.umcGalleryStatusIcon {
			position: absolute;
			top: 5px;
			left: 66px;
			width: 24px;
			height: 24px;
		}

		.umcFavoriteIconDefault,
		.umcFavoriteIconInverted {
			position: absolute;
			top: 0;
			right: 10px;
			width: 10px;
			height: 10px;
			line-height: 0;
		}

		.umcGalleryContextIcon {
			icon-image(0, -40, "../");
			position: absolute;
			top: 11px;
			left: auto;
			right: 5px;
		}
	}

	.umcGalleryItemActive,
	.umcGalleryItem:hover {
	//	background-color: @grayAthens;
	//	.border-radius(5px);
		cursor: pointer;
		.umcGalleryCategoryFavorite {
			background-color: #ffffff!important;
		}
		.umcGalleryName,
		.umcGalleryDescription {
			color: white;
			border-color: white;
			text-decoration: initial;
		}
		.umcFavoriteIconDefault {
			display: none;
		}
		.umcGalleryContextIcon {
			icon-image(0, -40, "../", "-white");
		}
		.umcGalleryContextIcon:hover {
			background-position: -20px -40px;
		}
		.umcGalleryContextIcon:active {
			background-position: -20px -40px;
			opacity: 0.67;
		}
	}
}
.umcGalleryItem.umcGalleryCategory-admin:hover {
	background-color: #80b828;
}

.umcGalleryItem.umcGalleryCategory-service:hover {
	background-color: #4bbfef;
}

// no left/right padding for full size item
@media (max-width: 600px) {
	.galleryTab .umcGalleryWrapperItem {
		padding-left: 0;
		padding-right: 0;
	}
}
