.warning {
	color: white;
	margin: 20px auto 20px auto;
	max-width: 500px;
	min-height: 165px;
	height: auto;
	vertical-gradient-and-filter($text-color-lighter, $text-color);
	opacity: 0.8;
	box-shadow: 0 0px 10px rgba(0,0,0,0.3)
	padding: 20px;

	@media (min-width: $xs-min) {
		margin-top: 30px;
		margin-bottom: @margin-top;
	}

	@media (min-width: $sm-min) {
		margin-top: 50px;
		margin-bottom: @margin-top;
	}

	@media (min-width: $md-min) {
		margin-top: 75px;
		margin-bottom: @margin-top;
	}

	a {
		color: white;
		text-decoration: underline;
		opacity: 0.8;
	}
	a:hover {
		opacity: 1;
	}
		
	.title {
		font-size: $font-size-medium;
		line-height: 1em;
		font-weight: bold;
		margin-bottom: 1em;
	}
	.icon {
		background-image: url(../css/icons/info.svg);
		background-repeat: no-repeat;
		width: 110px;
		height: 140px;
		margin-right: 15px;
		float: left;
	}
}
