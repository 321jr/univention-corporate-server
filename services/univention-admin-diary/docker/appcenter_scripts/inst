#  Join script that runs on the docker host.
#

VERSION=1

. /usr/share/univention-lib/all.sh || exit 1
. /usr/share/univention-join/joinscripthelper.lib || exit 1


joinscript_init
eval "$(univention-config-registry shell)"

usr_adm="$(custom_username Administrator)"
grp_dom_adm="$(custom_groupname 'Domain Admins')"

univention-directory-manager groups/group create "$@" --ignore_exists \
	--position "cn=groups,$ldap_base" \
	--set name="admin-diary-writers" \
	--set description="Group that is allowed to write to the admin diary." || die

univention-directory-manager groups/group modify "$@" \
	--dn "cn=admin-diary-writers,cn=groups,$ldap_base" \
	--append "users=uid=$usr_adm,cn=users,$ldap_base" \
	--append "nestedGroup=cn=$grp_dom_adm,cn=groups,$ldap_base" || die

joinscript_save_current_version
