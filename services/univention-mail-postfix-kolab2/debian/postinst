#DEBHELPER#

univention-baseconfig set postfix/autostart?yes
univention-baseconfig set postfix/allow-unauth?yes

eval `univention-baseconfig shell`

if [ -n "$mail_cyrus" ]; then
univention-baseconfig unset mail/cyrus
; fi

univention-baseconfig set postfix/masquerade/domains?"\$mydomain"
univention-baseconfig set postfix/masquerade/exceptions?root

for file in transport virtual canonical access relocated; do
  if [ ! -e /etc/postfix/$file ]; then
      touch /etc/postfix/$file
  fi
  postmap /etc/postfix/$file
done

for file in /etc/univention/templates/info/univention-mail-postfix-forward.info /etc/univention/templates/info/univention-mail-postfix.info /etc/univention/templates/files/etc/postfix/main.cf /var/cache/univention-config/cache /etc/univention/templates/files/etc/postfix/master.cf
  do
  if [ -e $file ]; then
      rm $file || true
  fi
done

adduser --quiet --system --home /var/lib/systemmail --shell /bin/bash systemmail
univention-baseconfig set ldap/port?389
univention-baseconfig set mail/alias/root?systemmail@$hostname.$domainname
univention-baseconfig set mail/alias/postmaster?root
univention-baseconfig set mail/messagesizelimit?10240000
newaliases

adduser postfix sasl

univention-baseconfig commit /etc/mailname

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/67univention-mail-postfix-kolab2.inst || true
fi

if [ -z "$postfix_autostart" ] || [ "$postfix_autostart" = "yes" ]; then
	/etc/init.d/postfix restart
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.4-32; then
    test -f "/var/cache/univention-config/cache" && rm -f "/var/cache/univention-config/cache"
fi
