## Kolab Policy Server

@!@
recipient_restrictions = [
	"permit_mynetworks", 
	"permit_sasl_authenticated", 
	"reject_unauth_destination", 
	"reject_unlisted_recipient",
	"check_policy_service unix:private/kolabpolicy"]

if baseConfig.get("mail/postfix/policy/listfilter", "no").lower() in ['yes', 'true']:
	recipient_restrictions.insert(0, "check_policy_service unix:private/listfilter")

print "smtpd_recipient_restrictions = %s" % ", ".join(recipient_restrictions)
@!@

smtpd_sender_restrictions = permit_mynetworks, check_policy_service unix:private/kolabpolicy
kolabpolicy_time_limit = 3600
kolabpolicy_max_idle = 20


