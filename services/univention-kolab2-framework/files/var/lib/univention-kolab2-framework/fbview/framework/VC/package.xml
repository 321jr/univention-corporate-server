<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>VC</name>
  <summary>Version Control API</summary>
  <license>LGPL</license>

  <description>
    This package provides a generalized API to multiple version
    control systems.a
  </description>

  <maintainers>
    <maintainer>
      <user>chagenbu</user>
      <role>lead</role>
      <name>Chuck Hagenbuch</name>
      <email>chuck@horde.org</email>
    </maintainer>

    <maintainer>
      <user>jon</user>
      <role>lead</role>
      <name>Jon Parise</name>
      <email>jon@horde.org</email>
    </maintainer>

    <maintainer>
      <user>yunosh</user>
      <role>lead</role>
      <name>Jan Schneider</name>
      <email>jan@horde.org</email>
    </maintainer>
  </maintainers>

  <release>
    <version>0.0.1</version>
    <state>alpha</state>
    <date>2003-10-15</date>
    <notes>Initial VC package.</notes>

    <filelist>
      <file role="php" baseinstalldir="/Horde">VC.php</file>
      <dir baseinstalldir="/Horde" name="VC" role="php">
        <file name="cvs.php" />
        <file name="rcs.php" />
        <file name="svn.php" />
      </dir>
    </filelist>

    <provides type="class" name="VC"/>
    <provides type="class" name="VC_cvs"/>
    <provides type="class" name="VC_rcs"/>
    <provides type="class" name="VC_svn"/>

    <deps>
      <dep type="php" rel="ge" version="4.2.0+" />
      <dep type="ext" rel="has">pcre</dep>
      <dep type="ext" rel="has" optional="yes">gettext</dep>
      <dep type="pkg" rel="has">Horde_Cache</dep>
      <dep type="pkg" rel="has">Horde_Util</dep>
    </deps>

  </release>

  <changelog>
  </changelog>

</package>
