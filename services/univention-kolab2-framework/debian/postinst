#DEBHELPER#

chown -R www-data:www-data /var/www/freebusy
if [ ! -d /usr/share/univention-admin/www ]; then
	mkdir -p /usr/share/univention-admin/www
fi

a2ensite kolab2-freebusy || true

ln -s /var/www/freebusy /usr/share/univention-admin/www/freebusy
/etc/init.d/apache2 reload || true
touch /var/log/freebusy.log
chown www-data:www-data /var/log/freebusy.log
chmod o-rwx /var/log/freebusy.log

eval `univention-baseconfig shell`

univention-baseconfig set mail/antivir/spam?yes
if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.1-10; then
	univention-baseconfig set mail/cyrus/caluser?kolab2cal@$domainname
	univention-baseconfig set mail/cyrus/caluser/pwdfile?/etc/kolab2cal.secret
elif [ -z "$2" ]; then
	univention-baseconfig set mail/cyrus/caluser?kolab2cal@$domainname
	univention-baseconfig set mail/cyrus/caluser/pwdfile?/etc/kolab2cal.secret
fi

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/65univention-kolab2-framework.inst || true
	mail=`univention-admin settings/usertemplate list --filter="cn=$hostname.$domainname Groupware Account" | grep ' e-mail:' | sed 's/[^:]*: //;s/^None$//'`
	shell=`univention-admin settings/usertemplate list --filter="cn=$hostname.$domainname Groupware Account" | grep ' shell:' | sed 's/[^:]*: //;s/^None$//'`
	if [ -z "$mail" -o -z "$shell" ]; then
		univention-admin settings/usertemplate modify --dn "cn=$hostname.$domainname Groupware Account,cn=templates,cn=univention,$ldap_base" --set kolabHomeServer="$hostname.$domainname" --set mailPrimaryAddress="<username>@$domainname" --set e-mail="<username>@$domainname" --set shell="/bin/bash"
	fi
fi

if [ -x /etc/init.d/univention-directory-listener ]; then
	/etc/init.d/univention-directory-listener crestart
fi

if [ -z "$postfix_autostart" ] || [ "$postfix_autostart" = "yes" ]; then
	if [ -x /etc/init.d/postfix ]; then
	    /etc/init.d/postfix restart
	fi
fi

if [ -x /etc/init.d/cyrus22 ]; then
    /etc/init.d/cyrus22 restart
fi

exit 0
