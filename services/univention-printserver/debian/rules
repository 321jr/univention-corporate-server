PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	touch build-stamp
build-ext-%:
	dh_testdir
	touch build-stamp

D=$(CURDIR)/debian/univention-printserver
PACKAGE_NAME=univention-printserver
D_PDF=$(CURDIR)/debian/univention-printserver-pdf

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf ${D}
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 0755 univention-lpadmin ${D}/usr/sbin/
	install -m 0755 univention-cupsadmin ${D}/usr/sbin/
	ln -s univention-cupsadmin ${D}/usr/sbin/univention-cups-reject
	ln -s univention-cupsadmin ${D}/usr/sbin/univention-cups-accept
	ln -s ../sbin/univention-cupsadmin ${D}/usr/bin/univention-cups-disable
	ln -s ../sbin/univention-cupsadmin ${D}/usr/bin/univention-cups-enable
	install -m 644 cups-printers.py ${D}/usr/lib/univention-directory-listener/system
	install -m 644 cups-pdf.py ${D_PDF}/usr/lib/univention-directory-listener/system
	install -m 0755 79univention-printserver.inst ${D}/usr/lib/univention-install/
	install -m 0755 79univention-printserver-pdf.inst ${D_PDF}/usr/lib/univention-install/
	install -D -m0755 ppds.py ${D}/usr/lib/univention-printserver/univention-ppds
    
    # install UMC module
	make PACKAGE=${PACKAGE_NAME} install-modules
	make PACKAGE=${PACKAGE_NAME} install-locales-backend
	make PACKAGE=${PACKAGE_NAME} install-images

	univention-install-config-registry
	univention-install-config-registry-info
	univention-install-service-info

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_pycentral
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
