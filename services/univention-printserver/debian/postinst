# <http://www.gnu.org/licenses/>.

eval `univention-config-registry shell`

univention-config-registry set cups/server?$hostname.$domainname \
	cups/admin?"root@"$domainname \
	cups/systemgroup?"Printer-Admins,lp" \
	cups/location/base?"networks" \
	cups/location/admin?"networks" \
	cups/filedevice?yes \
	cups/autostart?yes \
	cups/printserver?yes \
	cups/debug/level?warn

if [ "$1" = "configure" -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.2-1; then
	if [ "`univention-baseconfig get cups/server`" = "$hostname" ]; then
		univention-baseconfig set cups/server=$hostname.$domainname
	fi
fi

#DEBHELPER#

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
	if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.8; then
		cat /var/lib/univention-install/.index | grep -v "univention-printserver" >/var/lib/univention-install/.index2
		mv /var/lib/univention-install/.index2 /var/lib/univention-install/.index

		univention-admin settings/printermodel remove --dn "cn=cupsModel,cn=univention,$ldap_base"
	fi

	/usr/lib/univention-install/79univention-printserver.inst
fi

if [ ! -d /var/lib/cups/certs ]; then
	mkdir -p /var/lib/cups/certs
fi

if [ "$1" = "configure" ]; then
	if test -f /etc/init.d/univention-directory-listener
		then
		/etc/init.d/univention-directory-listener crestart
	fi

fi


if [ ! -e "/etc/cups/printers.conf" ]; then
	touch /etc/cups/printers.conf
fi

if [ ! -e "/etc/cups/classes.conf" ]; then
	touch /etc/cups/classes.conf
fi

if [ -x "/etc/init.d/cups" ]; then
	/etc/init.d/cups restart
fi

# Version 0.9 may not update printers.conf
# Version 0.17 may not set ppd's on added spoolhosts
if [ "$1" = "configure" -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.18; then
	/usr/sbin/univention-directory-listener-ctrl resync cups-printers
fi

if [ -x /etc/init.d/univention-management-console-server ]; then
	/etc/init.d/univention-management-console-server crestart
fi

exit 0
