VERSION=2

if ! test -e "/usr/share/univention-join/.joined"; then
	echo "The server has not joined yet"
	exit 1
fi

touch /usr/lib/univention-install/.index.txt

test -n "`grep "univention-printserver v${VERSION} successful" /usr/lib/univention-install/.index.txt`" && exit 1

eval `univention-baseconfig shell`

getent group lp | grep -q "$hostname" || adduser $hostname\$ lp || true

# Store a backup copy of the old printer definitions in LDAP
backupfile=/var/backups/ldap-ppds-`date +"%d-%m-%y-%H-%M-%S"`
ldapsearch -x 'objectclass=univentionPrinterModels' >  $backupfile

# Search for UCS 1.3 printer definition in LDAP and remove them if found
previous=`ldapsearch -x cn=Alps | grep foomatic-ppds/Alps/Alps-MD-1000-ppmtocpva.ppd.gz | wc -l`

if [ "$previous" = "1" ]; then
univention-admin settings/printermodel remove --dn cn=Alps,cn=cups,cn=univention,$ldap_base
