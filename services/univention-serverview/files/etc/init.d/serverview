START_SCRIPTS="eecd_mods_src eecd srvmagt srvmagt_scs"
STOP_SCRIPTS="srvmagt_scs srvmagt eecd eecd_mods_src"

case "$1" in 
start)
	for s in $START_SCRIPTS; do
		/etc/init.d/$s start
		ret=$?
		if [ "$ret" != 0 ]; then
			exit $ret
		fi
	done
	;;
stop)
	for s in $STOP_SCRIPTS; do
		/etc/init.d/$s stop
		ret=$?
		if [ "$ret" != 0 ]; then
			exit $ret
		fi
	done
	;;
restart)
	$0 stop
	$0 start
	;;
*)
	echo "Usage: $0 {start|stop|status|restart}"
	exit 1
	;;
esac

exit 0

