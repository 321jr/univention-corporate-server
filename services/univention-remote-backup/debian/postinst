set -e

case "$1" in
    configure)

	if [ ! -d /home/backup ]; then
		mkdir /home/backup
		chmod 700 /home/backup
		chown root: /home/backup
	fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
    ;;
esac

#DEBHELPER#

exit 0
