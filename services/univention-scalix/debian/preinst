test "$1" = "install" && (
	# we need a working hostname -s during the installation, see Bug #8300
	if [ -x /usr/sbin/nscd ]; then
		/usr/sbin/nscd -i hosts
	fi

	# create scalix instance in /var/opt/scalix
	if [ ! -f /etc/opt/scalix/instance.cfg ]; then
		export PATH=$PATH:/opt/scalix/bin
		ommakeom
		if [ ! -f /etc/opt/scalix/instance.cfg ]; then
			test -x /etc/init.d/nscd && /etc/init.d/nscd stop
			ommakeom
			test -x /etc/init.d/nscd && /etc/init.d/nscd start
		fi
	fi
)


if [ ! -f /etc/opt/scalix/instance.cfg ]; then
	exit 1
fi

if [ "$1" = "upgrade" -a -n "$2" ]; then
	if dpkg --compare-versions "$2" lt 0.4-33; then
		dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix/install/OM-LDAP.inst.real /opt/scalix/install/OM-LDAP.inst
		dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix/install/OM-ADM.inst.real /opt/scalix/install/OM-ADM.inst
		dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix/install/OM-UNIX.inst.real /opt/scalix/install/OM-UNIX.inst
		dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix-tomcat/bin/sxtomcat-webapps.real /opt/scalix-tomcat/bin/sxtomcat-webapps
	fi
	if dpkg --compare-versions "$2" lt 1.0.2-31; then
		dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix-tomcat/bin/sxtomcat-create-instance.real /opt/scalix-tomcat/bin/sxtomcat-create-instance
	fi
	if dpkg --compare-versions "$2" lt 1.0.8-1; then
		dpkg-divert --package univention-scalix --add --rename --divert /etc/default/ldapmapper.real /etc/default/ldapmapper
	fi
elif [ "$1" = "install" ]; then
	dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix/install/OM-LDAP.inst.real /opt/scalix/install/OM-LDAP.inst
	dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix/install/OM-ADM.inst.real /opt/scalix/install/OM-ADM.inst
	dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix/install/OM-UNIX.inst.real /opt/scalix/install/OM-UNIX.inst
	dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix-tomcat/bin/sxtomcat-webapps.real /opt/scalix-tomcat/bin/sxtomcat-webapps
	dpkg-divert --package univention-scalix --add --rename --divert /opt/scalix-tomcat/bin/sxtomcat-create-instance.real /opt/scalix-tomcat/bin/sxtomcat-create-instance
	dpkg-divert --package univention-scalix --add --rename --divert /etc/default/ldapmapper.real /etc/default/ldapmapper
fi

if [ ! -e /usr/bin/cyrmaster ]; then
	killall -9 cyrmaster
fi

#DEBHELPER#

# hack for sendmailconfig bug http://bugs.debian.org/cgi-bin/bugreport.cgi?bug=293017
tmpfile=`mktemp`
grep ^MAILER /etc/mail/sendmail.mc >$tmpfile
sed -i 's|^MAILER.*||' /etc/mail/sendmail.mc
echo "" >>/etc/mail/sendmail.mc
cat $tmpfile >>/etc/mail/sendmail.mc
echo "" >>/etc/mail/sendmail.mc
rm $tmpfile

exit 0

