@%@UCRWARNING=# @%@

/var/log/samba/log.smbd {
	weekly
	missingok
	rotate @%@log/rotate/weeks@%@
	postrotate
		invoke-rc.d --quiet samba reload > /dev/null
	endscript
	compress
	notifempty
}

/var/log/samba/log.nmbd {
	weekly
	missingok
	rotate @%@log/rotate/weeks@%@
	postrotate
		[ ! -f /var/run/samba/nmbd.pid ] || kill -HUP `cat /var/run/samba/nmbd.pid`
	endscript
	compress
	notifempty
}
