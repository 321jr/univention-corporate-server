set -e

case "$1" in
    configure)

	univention-baseconfig set proxy/redirect?no
	univention-baseconfig set proxy/force?yes
	univention-baseconfig set proxy/ldapauth?no

	if [ -n "$2" ] && dpkg --compare-versions "$2" lt 1.0-5; then
		rm -f /etc/squid.conf
	fi
	
	/etc/init.d/squid stop
	/etc/init.d/squid start

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0


