# well as other copyrighted, protected or trademarked materials like
# Logos, graphics, fonts, specific documentations and configurations,
# cryptographic keys etc. are subject to a license agreement between
# you and Univention.
#
# This program is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
# GNU General Public License for more details.
#
# You should have received a copy of the GNU General Public License
# along with this program; if not, write to the Free Software
# Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301  USA

a2enmod php5

# create database, user and tables
share=/usr/share/univention-kolab2-webclient/
su - postgres -c "psql -d template1 -f $share/create.database_and_user.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/create.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/horde_datatree.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/horde_prefs.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/horde_histories.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/kronolith.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/turba_objects.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/nag.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/mnemo.pgsql.sql &> /dev/null"
su - postgres -c "psql -d horde -f $share/3.1_to_3.2.pgsql.sql &> /dev/null"

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 3.1.6-1; then
	su - postgres -c "psql -d horde -f $share/syncml_map_update.sql &> /dev/null"
fi


eval `univention-baseconfig --shell dump`

# create horde user
if [ ! -e /etc/horde.secret ]; then
	tmp=$(mktemp)
	makepasswd --nocrypt > $tmp
	passwd=$(cat $tmp)
	hash=$(mkpasswd --hash=md5 -s < $tmp)
	touch /etc/horde.secret
	chmod 600 /etc/horde.secret
	echo $passwd > /etc/horde.secret
	chown www-data /etc/horde.secret
	rm -f $tmp
	# set passwd for database user horde
	su - postgres -c "echo \"ALTER USER horde WITH PASSWORD '$passwd'\" | psql -d template1 -f -"
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.2.0-47; then
	univention-baseconfig set horde/application/gollem?false
fi

SYNC_DEBUG_DIR=/var/log/horde/sync

mkdir -p "${SYNC_DEBUG_DIR}"
chown www-data "${SYNC_DEBUG_DIR}"
chmod 0700 "${SYNC_DEBUG_DIR}"

univention-baseconfig set	horde/application/turba?true \
							horde/application/kronolith?true \
							horde/application/mnemo?true \
							horde/application/nag?true \
							horde/application/gollem?true \
							horde/application/ingo?true \
							horde/application/passwd?true \
							horde/calendar/day/inline_time?false \
							horde/calendar/week/inline_time?false \
							horde/calendar/workweek/display?true \
							horde/calendar/edit/save_as_new?true \
							horde/calendar/invitation/send?true \
							horde/menu/options?true \
							horde/menu/hide_groupware?false \
							horde/menu/width?250 \
							horde/menu/save_state?true \
							horde/mailer/type?smtp \
							horde/debug/level?"PEAR_LOG_ERR" \
							horde/sync/debug?false \
							horde/sync/debugdir?$SYNC_DEBUG_DIR

univention-baseconfig set php/memory/limit?64

# set php values

display_errors=$(cat /etc/php5/apache2/php.ini  | sed -e 's|;.*||' | grep display_errors)

if [ -n "$display_errors" ]; then
	sed -i 's|^display_errors *=.*|display_errors = Off|' /etc/php5/apache2/php.ini
else
	echo "display_errors = Off" >> /etc/php5/apache2/php.ini
fi

error_log=$(cat /etc/php5/apache2/php.ini  | sed -e 's|;.*||' | grep error_log)
if [ -z "$error_log" ]; then
	echo "error_log = /var/log/php_error.log" >> /etc/php5/apache2/php.ini
	touch /var/log/php_error.log
	chown www-data /var/log/php_error.log
fi

error_reporting=$(cat /etc/php5/apache2/php.ini  | sed -e 's|;.*||' | grep error_reporting)
if [ -z "$error_reporting" ]; then
	echo "error_reporting = E_ALL" >> /etc/php5/apache2/php.ini
fi

dpkg-statoverride --force --update --add www-data adm 755 /var/log/horde

#DEBHELPER#

# restart services
if [ -x /etc/init.d/postgresql ]; then
	/etc/init.d/postgresql restart
fi

if [ -x /etc/init.d/postgresql-7.4 ]; then
	/etc/init.d/postgresql-7.4 restart
fi

if [ -x /etc/init.d/cyrus22 ]; then
	/etc/init.d/cyrus22 restart
fi

/etc/init.d/apache2 reload

dpkg-statoverride --force --update --add www-data www-data 700 /var/cache/horde

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 3.1.4; then
	mv /tmp/kolab_cache???????????????????????????????? /var/cache/horde/
	mv /tmp/cache_???????????????????????????????? /var/cache/horde/
	mv /tmp/sess_???????????????????????????????? /var/cache/horde/
	chown www-data.www-data /var/cache/horde/*
fi


if [ "$1" = configure -a -z "$2" ]; then
	/usr/share/univention-kolab2-webclient/turba-permissions.py
fi

if [ -x /etc/init.d/univention-directory-listener ]; then
	/etc/init.d/univention-directory-listener crestart
fi

exit 0

