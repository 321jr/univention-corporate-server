PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~
	dh_clean

AD_TOOLS_DEST=$(CURDIR)/debian/univention-ad-connector
MODULES_CONNECTOR_DEST=$(CURDIR)/debian/python2.4-univention-connector
MODULES_CONNECTOR_AD_DEST=$(CURDIR)/debian/python2.4-univention-connector-ad
EXCHANGE_DEST=$(CURDIR)/debian/univention-ad-connector-exchange

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# AD Connector Tools
	install -m755 univention-ad-connector ${AD_TOOLS_DEST}/usr/sbin
	install -m755 univention-adsearch ${AD_TOOLS_DEST}/usr/sbin
	install -m755 univention-connector-list-rejected ${AD_TOOLS_DEST}/usr/sbin
	install -m600 conffiles/etc/univention/connector/ad/mapping.py ${AD_TOOLS_DEST}/etc/univention/connector/ad/mapping
	
	# Connector Modules
	install -d debian/python-univention-connector/usr/lib/python$*/site-packages/univention/connector/
	install -m 0644 modules/univention/connector/__init__.py debian/python-univention-connector/usr/lib/python$*/site-packages/univention/connector/

	# AD Connector Modules
	install -d debian/python-univention-connector-ad/usr/lib/python$*/site-packages/univention/connector/ad/
	install -m 0644 modules/univention/connector/ad/__init__.py debian/python-univention-connector-ad/usr/lib/python$*/site-packages/univention/connector/ad/
	install -m 0644 modules/univention/connector/ad/main.py debian/python-univention-connector-ad/usr/lib/python$*/site-packages/univention/connector/ad/
	install -m 0644 modules/univention/connector/ad/mapping.py debian/python-univention-connector-ad/usr/lib/python$*/site-packages/univention/connector/ad/
	install -m 0644 modules/univention/connector/ad/password.py debian/python-univention-connector-ad/usr/lib/python$*/site-packages/univention/connector/ad/

	install -m 0644 ad-connector.py $(AD_TOOLS_DEST)/usr/lib/univention-directory-listener/system

	#baseconfig metainfo
	# cp files/etc/univention/base.meta/connector* $(MODULES_CONNECTOR_AD_DEST)/etc/univention/base.meta
	
	# password daemon
	install -D -m644 windows/ucs-ad-connector/msi-package/UCS\ AD\ Connector/ucs-ad-connector.msi $(AD_TOOLS_DEST)/usr/share/univention-ad-connector/ucs-ad-connector.msi

	# exchange extension
	install -m644  files/usr/share/univention-ad-connector/schema/univention-ad-connector-exchange.schema $(EXCHANGE_DEST)/usr/share/univention-ad-connector/schema/univention-ad-connector-exchange.schema

	univention-install-baseconfig

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installinit --no-start -u"defaults 97"
	dh_installcron
	dh_installman
	dh_installchangelogs
	dh_pycentral
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
