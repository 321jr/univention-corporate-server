#export DH_VERBOSE=1

D=$(CURDIR)/debian/univention-mail-cyrus
DI=$(CURDIR)/debian/univention-mail-cyrus-imap
DP=$(CURDIR)/debian/univention-mail-cyrus-pop


configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f mailquota.pyo
	rm -f build-stamp configure-stamp
	rm -rf ${D} ${DI} ${DP}
	dh_clean


install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	rm -f mailquota.pyo
	./univention-pycompile mailquota.py mailquota.pyo

	install -m 0755 usr/sbin/univention-cyrus-mkdir ${DI}/usr/sbin/univention-cyrus-mkdir
	install -m 0755 cyrus.py ${DI}/usr/lib/univention-directory-listener/system/
	install -m 0755 81univention-mail-cyrus.inst ${D}/usr/lib/univention-install/
	install -m 0755 usr/sbin/univention-cyrus-set-quota ${D}/usr/sbin/univention-cyrus-set-quota

	echo "Cyrus IMAP Server;cyrus22;/usr/sbin/cyrmaster;20" >>${D}/etc/univention/daemons/cyrus22

	univention-install-config-registry
	univention-install-config-registry-info

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
