eval "$(univention-config-registry shell ldap/server/name windows/domain hostname connector/s4/ldap/.*)"

if [ -n "$connector_s4_ldap_binddn" ] && [ -n "$connector_s4_ldap_bindpw" ] && [ -r "$connector_s4_ldap_bindpw" ]; then
	option_simplebinddn="--simple-bind-dn=$connector_s4_ldap_binddn"
	option_simplebindpw="--password=$(cat $connector_s4_ldap_bindpw)"
	set -- "$option_simplebinddn" "$option_simplebindpw" "$@"
else
	if [ -r '/etc/samba4.secret' ]; then
		samaccount="${windows_domain}/ucs-s4sync"
		bindpw="/etc/samba4.secret";
	elif [ -r '/etc/machine.secret' ]; then
		samaccount="${windows_domain}/${hostname}\$"
		bindpw="/etc/machine.secret";
	fi
	option_samcredentials="-U$samaccount%$(cat $bindpw)"
	set -- "$option_samcredentials" "$@"
fi

LDB_MODULES_PATH=/usr/lib/ldb ldbsearch -H "ldaps://$ldap_server_name" "$@"
