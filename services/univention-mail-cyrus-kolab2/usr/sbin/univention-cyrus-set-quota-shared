adminuser=0
import os, string, pwd, grp, sys, univention_baseconfig
from pexpect import *
def cyrescape(address):
	address=address.replace("@","\@")
	address=address.replace(".","\^")
	return address.strip()
def usage():
	print 'usage: univention-cyrus-set-quota-acl [-o] <shared folder> <quota in MB>'
	sys.exit(1)

import smtplib

from email.MIMEText import MIMEText

cyrus_user='cyrus'

outlook = False
if len( sys.argv ) > 2 and sys.argv[ 1 ] == '-o':
	outlook = True
	sys.argv.remove( '-o' )
if len(sys.argv) == 3 and sys.argv[1]:
	shared_name=sys.argv[1].lower()
	quota=sys.argv[2].lower()
	if quota != "none":
		quota+="000"
else:
	usage()

shared_name=shared_name.strip()

password=open('/etc/cyrus.secret').read()
if password[-1] == '\n':
	password=password[0:-1]

child = spawn('/usr/bin/cyradm -u %s localhost' % (cyrus_user))
i=0
while not i == 3:
	i = child.expect(['IMAP Password:', '>', 'cyradm: cannot connect to server', EOF], timeout=60)
	if i == 0:
		child.sendline(password)
	elif i == 1:
		if not outlook:
			child.sendline('sq shared/%s %s' % (shared_name, quota))
		else:
			name = shared_name.split( '@', 1 )[ 0 ]
			child.sendline( 'sq user/%s/%s %s' % ( name, shared_name, quota ) )

		child.sendline('disc')
		child.sendline('exit')
	elif i == 2:
		sys.exit(1)
