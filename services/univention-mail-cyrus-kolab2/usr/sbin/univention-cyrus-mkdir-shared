adminuser=0
import os, string, pwd, grp, sys, univention_baseconfig
from pexpect import *
def cyrescape(address):
	address=address.replace("@","\@")
	address=address.replace(".","\^")
	return address.strip()
def usage():
	print 'usage: univention-cyrus-mkdir-shared [-o] <SHARED FOLDER>'
	sys.exit(1)

import smtplib

from email.MIMEText import MIMEText


baseConfig = univention_baseconfig.baseConfig()
baseConfig.load()


cyrus_user='cyrus'

if len(sys.argv) == 2 and sys.argv[1]:
	outlook = False
	shared_name=sys.argv[1].lower()
elif len( sys.argv ) == 3 and sys.argv[ 1 ] == '-o' and sys.argv[ 2 ]:
	outlook = True
	shared_name=sys.argv[ 2 ].lower()
else:
	usage()

shared_name=shared_name.strip()

password=open('/etc/cyrus.secret').read()
if password[-1] == '\n':
	password=password[0:-1]

child = spawn('/usr/bin/cyradm -u %s localhost' % (cyrus_user))
i=0
a=0
while not i == 3:
	i = child.expect(['IMAP Password:', '>', 'cyradm: cannot connect to server', EOF], timeout=60)
	if i == 0:
		child.sendline(password)
	elif i == 1:
		if not outlook:
			child.sendline('cm shared/%s' % shared_name )
		else:
			nameitems = shared_name.split( '@', 1 )[ 0 ].split('/')
			domain = shared_name.split( '@', 1 )[ 1 ]

			print 'cm user/%s@%s' % ( nameitems[0], domain )
			child.sendline('cm user/%s@%s' % ( nameitems[0], domain ) )
			for x in range(1, len(nameitems)+1):
				print 'cm user/%s/%s@%s' % ( nameitems[0], '/'.join(nameitems[0:x]) , domain )
				child.sendline('cm user/%s/%s@%s' % ( nameitems[0], '/'.join(nameitems[0:x]), domain ) )

		child.sendline('disc')
		child.sendline('exit')
		print 'EXIT'
	elif i == 2:
		sys.exit(1)
