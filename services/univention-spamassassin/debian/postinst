createLogfile () {
	if [ ! -e $1 ] ; then
		touch $1
		chown $2 $1
		chmod $3 $1
	fi
}

createLogfile /var/log/univention/spamassassin-learn.log "root:adm" 640

if [ -f /var/spool/procmail/user/procmail.spam@domain ]; then
	eval `univention-baseconfig shell domainname`
	mv /var/spool/procmail/user/procmail.spam@domain /var/spool/procmail/user/procmail.spam@$domainname
fi

adduser --quiet --system --home /var/lib/spamd --shell /bin/bash spamd
chown -R spamd:nogroup /var/spool/procmail

univention-baseconfig set mail/antispam?yes
univention-baseconfig set mail/antispam/requiredhits?5.0
univention-baseconfig set mail/antispam/learndaily?no
univention-config-registry set mail/antispam/autostart?yes

if [ -x /etc/init.d/postfix ]; then
	/etc/init.d/postfix reload || true
fi


#DEBHELPER#

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.2; then
	univention-baseconfig commit /etc/default/spamassassin
fi	

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/68univention-spamassassin.inst || true
fi

exit 0

