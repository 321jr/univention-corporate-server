#DEBHELPER#

chmod g+w /etc/bind
chmod g+w /etc/bind/*

univention-baseconfig set bind/autostart?yes

if [ "$1" = "configure" -a -n "$2" ]; then

	if dpkg --compare-versions "$2" lt 1.15; then
		/etc/init.d/univention-bind restart
	else
		/etc/init.d/univention-bind crestart
	fi


else
	if [ "$1" = "configure" ]
		then
		echo "wait for runsv to sync..."
		count=0
		until runsvstat /etc/runit/univention-bind > /dev/null 2>&1 || test $count -gt 10
		  do
		  sleep 1
		  ((count=count+1))
		done
		# runsv has 10 seconds to sync, if it hasn't there will be a warning
		/etc/init.d/univention-bind start
	fi
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 1.25; then
	rm -f /etc/univention/templates/file/etc/bind/local.conf
	patch -p0 </usr/share/univention-bind/remove_template.patch || true
fi

if [ "$1" = configure -a -z "$2" ]; then
	echo "# add local zones here" >> /etc/bind/local.conf
fi

if [ "$1" = "configure" ]
	then
	if test -f /etc/init.d/univention-directory-listener
		then
		/etc/init.d/univention-directory-listener crestart
		fi
fi

exit 0

