#DEBHELPER#

univention-baseconfig set nameserver/external?false

if [ "$1" = "configure" -a -n "$2" ] && dpkg --compare-versions $2 lt 1.4; then
	eval `univention-baseconfig shell`
	if [ -n "$nameserver_internal" -a "$nameserver_internal" = true ]; then
		univention-baseconfig set nameserver/external=false
		univention-baseconfig unset nameserver/internal
	else
		univention-baseconfig set nameserver/external=true
		univention-baseconfig unset nameserver/internal
	fi
fi

if [ "$1" = "configure" -a -n "$2" ] && dpkg --compare-versions $2 lt 4.0.5-2; then
	univention-config-registry set dns/allow/query='any'
	univention-config-registry set dns/allow/query/cache='any'
fi

mkdir -p /var/cache/univention-bind-proxy

if [ "$1" = "configure" -a -n "$2" ]; then
	if dpkg --compare-versions "$2" lt 1.15; then
		/etc/init.d/univention-bind-proxy restart
	else
		/etc/init.d/univention-bind-proxy crestart
	fi
else
	if [ "$1" = "configure" ]
		then
		echo "wait for runsv to sync..."
		count=0
		until runsvstat /etc/runit/univention-bind-proxy > /dev/null 2>&1 || test $count -gt 10
		  do
		  sleep 1
		  ((count=count+1))
		done
		# runsv has 10 seconds to sync, if it hasn't there will be a warning
		/etc/init.d/univention-bind-proxy start
	fi
fi

if [ "$1" = "configure" ]
	then
	if test -f /etc/init.d/univention-directory-listener
		then
		/etc/init.d/univention-directory-listener crestart
	fi
fi

if [ ! -e "/etc/bind/local.conf.proxy" ]; then
	echo "# add local zones here" >> /etc/bind/local.conf.proxy
fi

exit 0
