set -e

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

case "$1" in
    configure)

        CONFREG=univention-config-registry

        if dpkg --compare-versions "$2" lt-nl "2.0.0-1"; then
                # Merge pre-UCS2.0-settings:
                eval $($CONFREG shell proxy/redirect proxy/antivir/scanner proxy/antivir/virusscanner proxy/antivir/scannerpath proxy/antivir/viruscmd proxy/antivir/alert)

                [ $proxy_redirect ] && ( $CONFREG set squid/virusscan=$proxy_redirect ; $CONFREG set squid/contentscan=false )
                [ $proxy_antivir_scanner ] && (
                        [ $proxy_antivir_scanner != clamav ] || echo Warning: Different virus scanners than clamav are not supported anymore by univention-antivir-web
                        )
                [ $proxy_antivir_virusscanner -o $proxy_antivir_scannerpath -o $proxy_antivir_viruscmd -o $proxy_antivir_alert ] && (
                        echo Warning: Different virus scanners than clamav are not supported anymore by univention-antivir-web
                        )
        fi

        $CONFREG set squid/virusscan?yes
        $CONFREG set squid/contentscan?yes

	/etc/init.d/squid restart
	eval $($CONFREG shell squid/virusscan squid/contentscan)
	if [ "$squid_virusscan" = yes -o "$squid_contentscan" = yes ]; then
		unset freshclam_active
		if [ -x /etc/init.d/clamav-freshclam ]; then
			# if freshclam is active stop it for a second to avoid locking problem on /var/lib/clamav
			/etc/init.d/clamav-freshclam status | grep -q "is running" && freshclam_active=1
			[ "$freshclam_active" = 1 ] && /etc/init.d/clamav-freshclam stop
		fi
		/etc/init.d/dansguardian restart
		[ "$freshclam_active" = 1 ] && /etc/init.d/clamav-freshclam start
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

/etc/init.d/univention-directory-listener crestart

# default group for web access
$CONFREG set dansguardian/groups?www-access

# activate clamav virus scanner by default, if not already set
$CONFREG set dansguardian/virusscanner?clamav

# rewrite old UCR variables
if [ "$1" = "configure" -a -n "$2" ]; then
	if dpkg --compare-versions "$2" le "2.0.1-7"; then
		eval $($CONFREG shell squid/contentscan/bannedextensions squid/contentscan/bannedclientips squid/contentscan/bannedmimetypes squid/contentscan/bannedsites squid/contentscan/bannedurls squid/contentscan/whitelist/ip squid/contentscan/whitelist/user squid/virusscan/whitelist/extensions squid/virusscan/whitelist/mimetypes squid/virusscan/whitelist/sites squid/virusscan/whitelist/urls)
		$CONFREG set "dansguardian/groups/www-access/banned/extensions?$squid_contentscan_bannedextensions" \
			"dansguardian/groups/www-access/banned/ipaddresses?$squid_contentscan_bannedclientips" \
			"dansguardian/groups/www-access/banned/mimetypes?$squid_contentscan_bannedmimetypes" \
			"dansguardian/groups/www-access/banned/sites?$squid_contentscan_bannedsites" \
			"dansguardian/groups/www-access/banned/urls?$squid_contentscan_bannedurls" \
			"dansguardian/groups/www-access/exception/ipaddresses?$squid_contentscan_whitelist_ip" \
			"dansguardian/groups/www-access/exception/users?$squid_contentscan_whitelist_user" \
			"dansguardian/groups/www-access/exception/extensions?$squid_contentscan_whitelist_extensions" \
			"dansguardian/groups/www-access/exception/mimetypes?$squid_contentscan_whitelist_mimetypes" \
			"dansguardian/groups/www-access/exception/sites?$squid_contentscan_whitelist_sites" \
			"dansguardian/groups/www-access/exception/urls?$squid_contentscan_whitelist_urls"
	fi
fi

exit 0
