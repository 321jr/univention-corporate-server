set -e

case "$1" in
    configure)

        CONFREG=univention-config-registry

        if dpkg --compare-versions "$2" lt-nl "2.0.0-1"; then
                # Merge pre-UCS2.0-settings:
                eval $($CONFREG shell proxy/redirect proxy/antivir/scanner proxy/antivir/virusscanner proxy/antivir/scannerpath proxy/antivir/viruscmd proxy/antivir/alert)

                [ $proxy_redirect ] && ( $CONFREG squid/virusscan=$proxy_redirect ; $CONFREG squid/contentscan=false )
                [ $proxy_antivir_scanner ] && (
                        [ $proxy_antivir_scanner != clamav ] || echo Warning: Different virus scanners than clamav are not supported anymore by univention-antivir-web
                        )
                [ $proxy_antivir_virusscanner -o $proxy_antivir_scannerpath -o $proxy_antivir_viruscmd -o $proxy_antivir_alert ] && (
                        echo Warning: Different virus scanners than clamav are not supported anymore by univention-antivir-web
                        )
        fi

        $CONFREG set squid/virusscan?yes
        $CONFREG set squid/contentscan?no

	/etc/init.d/squid restart
	eval $($CONFREG shell squid/virusscan squid/contentscan)
	if [ "$squid_virusscan" = yes -o "$squid_contentscan" = yes ]; then
		/etc/init.d/dansguardian restart
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
exit 0
