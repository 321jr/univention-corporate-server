createLogfile () {
	if [ ! -e $1 ] ; then
		touch $1
		chown $2 $1
		chmod $3 $1
	fi
}

#DEBHELPER#

createLogfile /var/log/mail.err root:root 644
createLogfile /var/log/mail.info root:adm 640
createLogfile /var/log/mail.log root:adm 640
createLogfile /var/log/mail.warn root:root 644

univention-config-registry set postfix/autostart=yes

eval `univention-config-registry shell`

adduser --quiet --system --home /var/lib/systemmail --shell /bin/bash systemmail
univention-config-registry set mail/alias/root?systemmail@$hostname.$domainname
univention-config-registry set mail/alias/postmaster?root

if [ -x /usr/bin/newaliases ]; then
	/usr/bin/newaliases
fi

univention-config-registry commit /etc/mailname

/etc/init.d/univention-directory-listener crestart
/etc/init.d/postfix reload

exit 0
