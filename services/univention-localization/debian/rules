PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	#generate localization
	$(shell localization_translation/rebuild_translation.sh ${PWD}/localization_translation/)

	install -d debian/univention-localization/usr/lib/python$*/site-packages/univention/management/console/wizards/localization/
	install -m 0644 modules/univention/management/console/wizards/localization/__init__.py debian/univention-localization/usr/lib/python$*/site-packages/univention/management/console/wizards/localization/__init__.py
	install -m 0644 modules/univention/management/console/wizards/localization/translation.py debian/univention-localization/usr/lib/python$*/site-packages/univention/management/console/wizards/localization/translation.py
	install -m 0644 modules/univention/management/console/wizards/localization/_types.py debian/univention-localization/usr/lib/python$*/site-packages/univention/management/console/wizards/localization/_types.py

	install -d debian/univention-localization/usr/lib/univention-install/
	install -m 0755 43univention-localization.inst debian/univention-localization/usr/lib/univention-install/

	make PACKAGE=univention-localization install-modules
	make PACKAGE=univention-localization install-locales-backend
	make PACKAGE=univention-localization install-images

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installinit --no-start -u"defaults 97"
	dh_installcron
	dh_installman
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms -X/var/www/univention-localization
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
