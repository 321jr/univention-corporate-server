PACKAGE_NAME=univention-kolab2-tools
MODULE_NAME=univention-kolab2

PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# install python modules
	@for i in $(shell find modules/univention/kolab2/ -name '*.py'); do\
		o=debian/python-univention-kolab2/usr/lib/python$*/site-packages/$${i#modules/};\
		install -d "`dirname $$o`";\
		install -m755 $$i $$o;\
	done

	# install tools
	install -m 755 univention-kolab2-adjust-addresses.py debian/univention-kolab2-tools/usr/sbin/univention-kolab2-adjust-addresses
	install -D -m 755 univention-get-ad-users.sh debian/univention-kolab2-tools/usr/share/univention-kolab2-tools/univention-get-ad-users
	install -D -m 755 univention-get-valid-mail-addresses.sh debian/univention-kolab2-tools/usr/share/univention-kolab2-tools/univention-get-valid-mail-addresses
	dh_install

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_pycentral
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
