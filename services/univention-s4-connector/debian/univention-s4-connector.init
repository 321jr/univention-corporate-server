S4CONNECTORPID=/var/run/univention-s4-connector
DAEMON="/usr/sbin/univention-s4-connector"

test -x "$DAEMON"|| exit 0

. /lib/lsb/init-functions
NAME=$(get_lsb_header_val "$0" Provides)
DESC=$(get_lsb_header_val "$0" Short-Description)

case "$1" in
	start)
		# check ucr autostart setting
		if [ -f "/usr/share/univention-config-registry/init-autostart.lib" ]; then
			. "/usr/share/univention-config-registry/init-autostart.lib"
			check_autostart s4-connector connector/s4/autostart
		fi
		log_daemon_msg "Starting $DESC" "$NAME"
		if start-stop-daemon --start --quiet --pidfile "$S4CONNECTORPID" --startas "$DAEMON"
		then
			log_end_msg 0
		else
			log_end_msg 1
		fi
		;;
	stop)
		log_daemon_msg "Stopping $DESC" "$NAME"
		if start-stop-daemon --stop --retry TERM/300/KILL/5 --quiet --pidfile "$S4CONNECTORPID"
		then
			log_end_msg 0
		else
			log_end_msg 1
		fi
		;;
	restart|force-reload)
		"$0" stop
		sleep 2 # give it some time to die
		"$0" start
		;;
	status)
		status_of_proc -p "$S4CONNECTORPID" "$DAEMON" "$DESC"
		;;
	crestart)
		S4CONNECTOR=`cat $S4CONNECTORPID 2>/dev/null`
		if [ -n "$S4CONNECTOR" ]; then
		    ps xaw | grep -q "$S4CONNECTOR" && "$0" restart
		fi
		;;
	*)
		echo "Usage: $0 {start|stop|restart|crestart|force-reload|status}"
		exit 1
		;;
esac
