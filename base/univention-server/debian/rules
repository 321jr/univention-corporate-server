configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~ univention-name-to-unicode

	dh_clean

D=$(CURDIR)/debian/univention-server

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 644 conffiles/etc/bootsplash/themes/domaincontroller_master/config/*cfg debian/univention-server-master/etc/bootsplash/themes/domaincontroller_master/config/
	install -m 644 conffiles/etc/bootsplash/themes/domaincontroller_master/images/*jpg debian/univention-server-master/etc/bootsplash/themes/domaincontroller_master/images/
	install -m 644 conffiles/etc/bootsplash/themes/domaincontroller_backup/config/*cfg debian/univention-server-backup/etc/bootsplash/themes/domaincontroller_backup/config/
	install -m 644 conffiles/etc/bootsplash/themes/domaincontroller_backup/images/*jpg debian/univention-server-backup/etc/bootsplash/themes/domaincontroller_backup/images/
	install -m 644 conffiles/etc/bootsplash/themes/domaincontroller_slave/config/*cfg debian/univention-server-slave/etc/bootsplash/themes/domaincontroller_slave/config/
	install -m 644 conffiles/etc/bootsplash/themes/domaincontroller_slave/images/*jpg debian/univention-server-slave/etc/bootsplash/themes/domaincontroller_slave/images/
	install -m 644 conffiles/etc/bootsplash/themes/memberserver/config/*cfg debian/univention-server-member/etc/bootsplash/themes/memberserver/config/
	install -m 644 conffiles/etc/bootsplash/themes/memberserver/images/*jpg debian/univention-server-member/etc/bootsplash/themes/memberserver/images/


	install -m 0755 server_password_change debian/univention-server-master/usr/lib/univention-server/
	install -m 0755 server_password_change debian/univention-server-backup/usr/lib/univention-server/
	install -m 0755 server_password_change debian/univention-server-slave/usr/lib/univention-server/
	install -m 0755 server_password_change debian/univention-server-member/usr/lib/univention-server/
	install -m 0755 univention-ldap-policy/univention-set-ldap-server debian/univention-server-member/usr/lib/univention-ldap-policy/

	# add ntpd information used by univention-console
	echo "Timeserver;ntp-server;/usr/sbin/ntpd;23" > debian/univention-server-master/etc/univention/daemons/ntpd
	echo "Timeserver;ntp-server;/usr/sbin/ntpd;23" > debian/univention-server-backup/etc/univention/daemons/ntpd
	echo "Timeserver;ntp-server;/usr/sbin/ntpd;23" > debian/univention-server-slave/etc/univention/daemons/ntpd
	echo "Timeserver;ntp-server;/usr/sbin/ntpd;23" > debian/univention-server-member/etc/univention/daemons/ntpd

	univention-install-baseconfig

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
