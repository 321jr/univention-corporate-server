export PATH=$PATH:/sbin:/usr/sbin

eval $(univention-config-registry shell)

exit_code=1

if [ -n "$ldap_server_name" ]; then
	if /bin/netcat -q0 -w4 $ldap_server_name 389 </dev/null >/dev/null 2>&1; then
		exit_code=0
	fi
fi

if [ -n "$ldap_server_addition" ] && [ $connection_okay = 0 ]; then
	for h in  $ldap_server_addition; do
		if /bin/netcat -q0 -w4 $h 389 </dev/null >/dev/null 2>&1; then
			exit_code=0
			break
		fi
	done
fi

exit $exit_code
