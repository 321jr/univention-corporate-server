# (GNU AGPL V3) as published by the Free Software Foundation.
#
# Binary versions of this program provided by Univention to you as
# well as other copyrighted, protected or trademarked materials like
# Logos, graphics, fonts, specific documentations and configurations,
# cryptographic keys etc. are subject to a license agreement between
# you and Univention and not subject to the GNU AGPL V3.
#
# In the case you use this program under the terms of the GNU AGPL V3,
# the program is provided in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the
# GNU Affero General Public License for more details.
#
# You should have received a copy of the GNU Affero General Public
# License with the Debian GNU/Linux or Univention distribution in file
# /usr/share/common-licenses/AGPL-3; if not, see
# <http://www.gnu.org/licenses/>.
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

version := $(shell dpkg-parsechangelog | sed -ne 's/Version: //p')
copyrightyear := $(shell date +%Y)

PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch $@

build: configure-stamp build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	touch $@
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-updater > python/univention-updater_tmp
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-repository-create > python/univention-repository-create_tmp
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-repository-merge > python/univention-repository-merge_tmp
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-repository-update > python/univention-repository-update_tmp
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-security-update > python/univention-security-update_tmp
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-repository-delpackage > python/univention-repository-delpackage_tmp
	sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" < python/univention-repository-addpackage > python/univention-repository-addpackage_tmp
	sed -e "s/@%@copyright_lastyear@%@/-${copyrightyear}/" < script/univention-addon-download > script/univention-addon-download_tmp
build-ext-%:
	dh_testdir

clean:
	dh_testdir
	$(RM) configure-stamp build-stamp install-stamp
	$(MAKE) clean
	$(RM) python/univention-updater_tmp
	$(RM) python/univention-repository-create_tmp
	$(RM) python/univention-repository-merge_tmp
	$(RM) python/univention-repository-update_tmp
	$(RM) python/univention-security-update_tmp
	$(RM) python/univention-repository-delpackage_tmp
	$(RM) python/univention-repository-addpackage_tmp
	$(RM) script/univention-addon-download_tmp

	dh_clean

install: install-stamp
install-prep:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
install-stamp: build-stamp install-prep $(PYVERS:%=install-ext-%)
	install -m 755 python/univention-upgrade debian/univention-updater/usr/sbin/univention-upgrade
	install -m 755 python/univention-updater_tmp debian/univention-updater/usr/sbin/univention-updater
	install -m 755 python/univention-repository-create_tmp debian/univention-updater/usr/sbin/univention-repository-create
	install -m 755 python/univention-repository-merge_tmp debian/univention-updater/usr/sbin/univention-repository-merge
	install -m 755 python/univention-repository-update_tmp debian/univention-updater/usr/sbin/univention-repository-update
	install -m 755 python/univention-security-update_tmp debian/univention-updater/usr/sbin/univention-security-update
	install -m 755 python/univention-repository-delpackage_tmp debian/univention-updater/usr/sbin/univention-repository-delpackage
	install -m 755 python/univention-repository-migrate debian/univention-updater/usr/sbin/univention-repository-migrate

	install -m 755 univention-directory-policy/univention-policy-set-repository-server debian/univention-updater/usr/lib/univention-directory-policy/
	install -m 755 univention-directory-policy/univention-policy-repository-sync debian/univention-updater/usr/lib/univention-directory-policy/
	install -m 755 univention-directory-policy/univention-policy-maintenance debian/univention-updater/usr/lib/univention-directory-policy/
	install -m 755 python/univention-actualise debian/univention-updater/usr/sbin/
	install -m 755 script/univention-install debian/univention-updater/usr/sbin/

	install -m 755 python/univention-repository-addpackage_tmp debian/univention-updater/usr/sbin/univention-repository-addpackage

	install -m 644 script/reboot.at debian/univention-updater/var/lib/univention-updater/

	install -m 755 script/univention-updater-check debian/univention-updater/usr/share/univention-updater/
	install -m 755 script/set-apache-permissions debian/univention-updater/usr/share/univention-updater/
	install -m 755 script/univention-updater-umc-dist-upgrade debian/univention-updater/usr/share/univention-updater/
	install -m 755 script/univention-updater-umc-univention-install debian/univention-updater/usr/share/univention-updater/

	install -m 644 script/preup.sh debian/univention-updater/usr/share/univention-updater/
	install -m 644 script/postup.sh debian/univention-updater/usr/share/univention-updater/

	install -m 755 script/univention-addon-download_tmp debian/univention-updater/usr/sbin/univention-addon-download

	install -m 0755 41univention-updater.inst debian/univention-updater/usr/lib/univention-install/

    # install UMC module
	$(MAKE) PACKAGE=univention-updater install-modules
	$(MAKE) PACKAGE=univention-updater install-locales-backend
	$(MAKE) PACKAGE=univention-updater install-images

	univention-install-config-registry
	univention-install-config-registry-info

	touch $@

install-ext-%: install-prep
	touch debian/univention-updater/usr/lib/python$*/site-packages/univention/management/console/handlers/update/hooks/.hidden

binary-indep: build install
	dh_installcron -i

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installinit --name="univention-maintenance" --no-start --update-rcd-params="defaults 97 05"
	dh_pycentral
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
