#export DH_VERBOSE=1

D_NSS=$(CURDIR)/debian/libnss-passwdcache
D_PAM=$(CURDIR)/debian/libpam-passwdcache

configure: configure-stamp
configure-stamp:
	dh_testdir

	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir

	make all DESTDIR=$(CURDIR)/debian

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	make clean DESTDIR=$(CURDIR)/debian

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -d ${D_NSS}/etc/univention/passwdcache
	install -d ${D_NSS}/lib
	install -m644 nss_passwdcache/libnss_passwdcache.so.2 ${D_NSS}/lib
	ln -s libnss_passwdcache.so.2 ${D_NSS}/lib/libnss_passwdcache.so

	install -d ${D_PAM}/etc/univention/passwdcache
	install -d ${D_PAM}/lib/security
	install -m644 pam_passwdcache/pam_passwdcache.so ${D_PAM}/lib/security
	install -m 0755 passwdcache.py ${D_PAM}/usr/lib/univention-directory-listener/system

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
