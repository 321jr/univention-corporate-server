@!@
@%@UCRWARNING=# @%@

DOMAIN_SERVER = {
	'domaincontroller_master': Univention DC Master",
	'domaincontroller_backup': Univention DC Backup",
	'domaincontroller_slave': Univention DC Slave",
	'memberserver': Univention Memberserver",
}
role = configRegistry.get('server/role')
menutitle = DOMAIN_SERVER.get(role, "Univention Corporate Server")
version = '%(version/version)s-%(version/patchlevel)s' % configRegistry
if all(version.split('-')):
	menutitle += ' %s' % (version,)

print menutitle

if role in DOMAIN_SERVER:
	print
	startsite = "https://%(hostname)s.%(domainname)s/"

	from univention.config_registry.interfaces import Interfaces
	address = Interfaces(configRegistry).get_default_ip_address()
	if address:
		ip = str(address.ip)
		if ip:
			startsite += " (%s)" % (ip,)

	if role =='domaincontroller_master':
		print 'The UCS management system is available at %s' % (startsite,)
	else:
		print 'The UCS management system can be reached by following the link to the Univention DC'
		print 'Master at %s and selecting the' % (startsite,)
		print 'Univention Management Console.'

	print
	print 'You can log into the Univention Management Console - the principal tool to manage '
	print 'users, groups, etc. - using the "Administrator" account and the password selected '
	print 'for the root user on the master domain controller.'

@!@

