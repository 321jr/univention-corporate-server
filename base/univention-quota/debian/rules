PYVERS=$(shell pyversions -vr)

PACKAGE=univention-quota

build: build-stamp

build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 0755 files/univention-user-quota debian/univention-quota/usr/sbin
	install -m 0755 files/univention-setquota debian/univention-quota/usr/sbin
	install -m 0755 71univention-quota.inst debian/univention-quota/usr/lib/univention-install/
	univention-install-baseconfig
	#
    # install UMC module
	make PACKAGE=${PACKAGE} install-modules
	make PACKAGE=${PACKAGE} install-locales-backend
	make PACKAGE=${PACKAGE} install-images


	dh_install

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installdebconf -i
	dh_installman -i
	dh_pycentral -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_shlibdeps -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
