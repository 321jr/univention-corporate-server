# Default settings for openssh-server. This file is sourced by /bin/sh from
# /etc/init.d/ssh.

@!@
import os

filename = '/etc/ssh/sshd_not_to_be_run'
if baseConfig.get( 'sshd/autostart', 'no' ) in ( 'no', 'false' ):
	fd = os.open( filename, os.O_CREAT | os.O_TRUNC, 0644 )
	os.close( fd )
else:
	if os.path.isfile( filename ):
		os.unlink( filename )
@!@

# Options to pass to sshd
SSHD_OPTS=
