#!/usr/bin/make -f

VERSION = 2.1.1
URL = git://github.com/ariya/phantomjs.git

get-orig-source: load-source
	tar cfz univention-phantomjs-$(VERSION).orig.tar.gz phantomjs/
	rm -rf phantomjs/

load-source:
	git clone $(URL)
	cd phantomjs/ && git checkout $(VERSION) && sed -i 's\url = https://\url = git://\g' .gitmodules && git submodule init && git submodule update

override_dh_auto_build: load-source
	cd phantomjs && python build.py --confirm --release --jobs 2

override_dh_auto_clean:
	rm -rf phantomjs/

%:
	dh $@
