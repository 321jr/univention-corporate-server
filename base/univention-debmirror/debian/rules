build: build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	rm -f build-stamp
	rm -f *~
	dh_clean

install: build
	dh_testdir
	dh_clean -k
	dh_installdirs
	install -m 0755 77univention-debmirror.inst debian/univention-debmirror/usr/lib/univention-install/
	install -m 0755 univention-apt-mirror.py debian/univention-debmirror/usr/sbin/univention-apt-mirror
	univention-install-config-registry

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
