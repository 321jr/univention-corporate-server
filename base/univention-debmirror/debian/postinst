#DEBHELPER#

/usr/lib/univention-install/77univention-debmirror.inst || true

#FIXME
if [ "$1" = "configure" -a -n "$2" ]; then
	apache_pids=`pidof apache`

	/etc/init.d/apache stop || true
	sleep 5
	apache_pid=`pidof apache`
	if [ -n "$apache_pid" ]; then
		kill -9 $apache_pid
		sleep 2
	fi

	/etc/init.d/apache start || true
else
	/etc/init.d/apache restart || true
fi

