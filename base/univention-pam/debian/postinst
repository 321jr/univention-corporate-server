# the program is provided in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the
# GNU Affero General Public License for more details.
#
# You should have received a copy of the GNU Affero General Public
# License with the Debian GNU/Linux or Univention distribution in file
# /usr/share/common-licenses/AGPL-3; if not, see
# <http://www.gnu.org/licenses/>.

univention-config-registry set \
	nscd/passwd/size?3001 \
	nscd/group/size?3001 \
	nscd/hosts/size?3001 \
	nscd/passwd/positive_time_to_live?600 \
	nscd/group/positive_time_to_live?3600 \
	nscd/hosts/positive_time_to_live?3600 \
	nscd/passwd/negative_time_to_live?20 \
	nscd/group/negative_time_to_live?60 \
	nscd/hosts/negative_time_to_live?20 \
	nscd/group/invalidate_cache_on_changes?"false" \
	nscd/debug/level?0 \
	auth/user/methods?"krb5 ldap unix" \
	auth/user/services?"chfn chsh kde kscreensaver kcheckpass rsh ssh su sudo passwd cron screen" \
	auth/admin/methods?"krb5 ldap unix" \
	auth/admin/services?"ftp gdm login other ppp rlogin screen" \
	nssldap/tls/checkpeer?no

if [ "$1" = "configure" -a -z "$2" ]; then
	univention-config-registry set nscd/group/invalidate_cache_on_changes="true"
fi

# remove old non-multifile template
if [ -e /etc/univention/templates/files/etc/pam.d/common-auth ]; then
    rm /etc/univention/templates/files/etc/pam.d/common-auth
fi

# As of version 2.0.2-1 the new default value of "nscd/group/size" is 3001.
# Update nscd/group/size if old versions was smaller than 2.0.2-1 and default
# value hasn't been changed.
if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 2.0.2-1; then
	eval $(univention-config-registry shell)
	if [ "$nscd_group_size" = "211" ] ; then
		echo "autoincreasing nscd/group/size from 211 to 3001..."
		univention-config-registry set nscd/group/size=3001
		echo "done"
	fi
fi

if [ -x "/etc/init.d/univention-directory-listener" ] ; then
	/etc/init.d/univention-directory-listener crestart
fi

# Bug #4630
if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 3.0.11-1; then
	# if package is being updated from < 3.0.11-1
	eval $(univention-config-registry shell auth/user/services)
	univention-config-registry set auth/user/services="$(echo "$auth_user_services" | sed '/\<screen\>/ ! s/$/ screen/')"
elif [ "$1" = configure -a -z "$2" ]; then
	# if package is being installed for the first time
	eval $(univention-config-registry shell auth/user/services)
	univention-config-registry set auth/user/services="$(echo "$auth_user_services" | sed '/\<screen\>/ ! s/$/ screen/')"
fi

if [ "$1" = configure ]
then
	univention-config-registry set 'security/limits/group/Domain Users/hard/nproc?1000' # Bug #12928
fi

#DEBHELPER#

exit 0
