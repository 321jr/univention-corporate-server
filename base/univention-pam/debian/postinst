univention-baseconfig set \
	nscd/passwd/size?3001 \
	nscd/group/size?211 \
	nscd/hosts/size?3001 \
	nscd/passwd/positive_time_to_live?600 \
	nscd/group/positive_time_to_live?3600 \
	nscd/hosts/positive_time_to_live?3600 \
	auth/user/methods?"krb5 ldap unix" \
	auth/user/services?"chfn chsh kde kscreensaver kcheckpass rsh ssh su sudo passwd cron" \
	auth/admin/methods?"krb5 ldap unix" \
	auth/admin/services?"ftp gdm login other ppp rlogin screen"

# remove old non-mutlifile template
if [ -e /etc/univention/templates/files/etc/pam.d/common-auth ]; then
    rm /etc/univention/templates/files/etc/pam.d/common-auth
fi

#DEBHELPER#
