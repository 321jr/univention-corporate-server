@!@
if 'ftp' in baseConfig['auth/user/services'].split(' '):
	scheme='common'
elif 'ftp' in baseConfig['auth/admin/services'].split(' '):
	scheme='admin'
else:
	scheme='deny'

if baseConfig.has_key('auth/ftpd/accessfile') and baseConfig['auth/ftpd/accessfile']:
	print 'account  required                pam_access.so accessfile=%s listsep=,' % baseConfig['auth/ftpd/accessfile']
print '@include %s-account' % scheme
print '@include %s-auth' % scheme
print '@include %s-session' % scheme
print '@include %s-password' % scheme
@!@
