print 'auth            sufficient      pam_rootok.so'

if 'chsh' in baseConfig['auth/user/services'].split(' '):
	scheme='common'
elif 'chsh' in baseConfig['auth/admin/services'].split(' '):
	scheme='admin'
else:
	scheme='deny'

print '@include %s-auth' % scheme
print '@include %s-account' % scheme
print '@include %s-session' % scheme
