#!/bin/sh

@%@BCWARNING=# @%@

@!@
if baseConfig.has_key('security/services/ldap') and baseConfig['security/services/ldap'] == 'disabled':
	print '/sbin/iptables -A INPUT  -p tcp --dport 389 -j REJECT'
	print '/sbin/iptables -A INPUT  -p udp --dport 389 -j REJECT'
	print '/sbin/iptables -A INPUT  -p tcp --dport 636 -j REJECT'
	print '/sbin/iptables -A INPUT  -p udp --dport 636 -j REJECT'
@!@
