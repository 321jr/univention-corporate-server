default 0
timeout 60
splashimage (cd)/boot/grub/uniboot.xpm.gz

#Change foreground and background of grubs font
foreground = FFFFFF
background = 000000

#or change colors like this
#color cyan/blue white/blue


title UCS Recover Kernel 2.6
kernel (cd)/boot/linux26 root=/dev/ram ro ramdisk_size=65536 flavor=linux recover
initrd (cd)/boot/linux26-recover.bin

title UCS Recover Kernel 2.4
kernel (cd)/boot/linux24 root=/dev/ram ro ramdisk_size=65536 flavor=linux recover
initrd (cd)/boot/linux24-recover.bin

title Boot from first harddisk partition
rootnoverify (hd0)
chainloader +1

