po=de

if  [ ! -e ../univention-system-setup/usr/sbin/univention-system-setup ]; then
	echo "Please checkout univention-system-setup, the installer combines i18n strings"
	echo "from both the installer and univention-system-setup"
	exit
fi


xgettext -L Python -o $po.pot.tmp installer/*py installer/modules/*.py ../univention-system-setup/usr/sbin/univention-system-setup*

grep "Content-Type: text/plain; charset=CHARSET" $po.pot.tmp

if [ $? -eq 0 ]; then
	echo "Rewriting encoding information from CHARSET to ISO-8859-15"
	sed "s#Content-Type: text/plain; charset=CHARSET#Content-Type: text/plain; charset=ISO-8859-15#" $po.pot.tmp > $po.pot
else
	mv $po.pot.tmp $po.pot
fi

echo "Merging old gettext data with newly introduced strings"
msgmerge ./installer/locale/$po/LC_MESSAGES/installer.po  $po.pot > $po.pox

echo "Now you need to fix up all "fuzzy" entries in your editor"
read

if [ -n "$EDITOR" ]; then
    $EDITOR $po.pox
else
	nano $po.pox
fi

echo "Use this entry? (Y/n)"
read yn

if [ -z "$yn" -o "$yn" = "y" ]; then
    echo "Copying po file"
    cp $po.pox ./installer/locale/$po/LC_MESSAGES/installer.po
    echo "Regenerating mo file"
    msgfmt -o ./installer/locale/$po/LC_MESSAGES/installer.mo ./installer/locale/$po/LC_MESSAGES/installer.po
fi

rm -rf $po.pot $po.pox $po.pot
