#DEBHELPER#

eval $(univention-config-registry shell)

if [ -z "$ifplugd_action_mount" ]; then
	   ifplugd_action_mount="yes"
fi

# set "interfaces/handler" in any case to "networkmanager"
univention-config-registry set interfaces/handler=networkmanager

univention-config-registry set networkmanager/action/mount?"no"
univention-config-registry set networkmanager/group?"root"
univention-config-registry set networkmanager/all_interfaces?"yes"
univention-config-registry set networkmanager/dhcp/options/fallback?"no"

univention-config-registry set dhclient/options/timeout?"40"
univention-config-registry set dhclient/options/retry?"60"

# need to reload dbus to read new permissions for networkmanager/group
/etc/init.d/dbus reload

for i in $(seq 0 4); do
	var="interfaces_eth${i}_ifplugd"
	
	if [ -n "${!var}" -a "${!var}" = "no" ]; then
		univention-config-registry set "interfaces/eth${i}/networkmanager=no"
		univention-config-registry unset "${!var}"
	fi
done

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.4.11-1; then
	if [ -e /etc/network/if-up.d/99_resolvconf ]; then
		mv /etc/network/if-up.d/99_resolvconf /etc/network/if-up.d/00_resolvconf
	fi
fi

exit 0
