.umc .umcOverviewContainer .umcPageMain .firstSteps
	color: #fff
	opacity: 0.8
	padding: 20px
	height: auto
	width: 100%
	max-width: 950px
	margin: 0 auto 30px

	background: #5a5a5a
	background-image: -moz-linear-gradient(to bottom, #5a5a5a 0%, #282828 100%)
	background-image: -webkit-linear-gradient(to bottom, #5a5a5a 0%, #282828 100%)
	background-image: -o-linear-gradient(to bottom, #5a5a5a 0%, #282828 100%)
	background-image: linear-gradient(to bottom, #5a5a5a 0%, #282828 100%)
	-webkit-box-shadow: 0 0px 10px rgba(0,0,0,0.3)
	box-shadow: 0 0px 10px rgba(0,0,0,0.3)

	.dijitTitlePaneTitle
		color: #fff
		border-top: 0
		padding: 0

		.firstStepsIcon
			background-image: url("../../dijit/themes/umc/images/info.svg");
			background-repeat: no-repeat
			background-size: 20px 20px
			width: 20px
			height: 20px
			float: left
			margin-right: 5px

	.dijitArrowNode
		background-image: url("../../dijit/themes/umc/images/icons-white.svg")

	.dijitCheckBox
		background-image: url("../../dijit/themes/umc/images/icons-small-white.svg")

	a
		color: white
