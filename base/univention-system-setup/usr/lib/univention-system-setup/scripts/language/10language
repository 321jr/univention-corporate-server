. /usr/lib/univention-system-setup/scripts/setup_utils.sh


is_variable_set "locale"
if [ $? = 0 ]; then
	exit 0
fi

if [ "$check_ldap_access" = "1" ]; then
	exit 0
fi

locale=`get_profile_var locale`
default_locale=`get_profile_var "locale/default"`

locale-gen

if [ -z "$locale" ]; then
	univention-config-registry unset locale
else
	univention-config-registry set locale="$locale"
fi


exit 0
