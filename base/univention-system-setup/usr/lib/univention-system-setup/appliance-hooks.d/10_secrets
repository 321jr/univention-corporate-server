# License with the Debian GNU/Linux or Univention distribution in file
# /usr/share/common-licenses/AGPL-3; if not, see
# <http://www.gnu.org/licenses/>.

exec >/var/log/univention/setup-appliance.log 2>&1

eval $(univention-config-registry shell)

if [ ! "$server_role" = "domaincontroller_master" ]; then
	exit 0
fi

### LDAP secret
LDAP_SECRET="/etc/ldap.secret"
BACKUP_SECRET="/etc/ldap-backup.secret"

# save old secret
if [ -e "$LDAP_SECRET" ]; then
   cp $LDAP_SECRET ${LDAP_SECRET}.orig
fi
if [ -e "$BACKUP_SECRET" ]; then
   cp $BACKUP_SECRET ${BACKUP_SECRET}.orig
fi

# create new secret
makepasswd > /etc/ldap.secret
makepasswd > /etc/ldap-backup.secret

# set new password
new_passwd=$(mkpasswd --hash=md5 -s < ${LDAP_SECRET})
new_backup_passwd=$(mkpasswd --hash=md5 -s < ${BACKUP_SECRET})

echo "
dn: cn=backup,$ldap_base
changetype: modify
replace: userPassword
userPassword: {crypt}$new_backup_passwd
-
" | ldapmodify -x -D "cn=admin,$ldap_base" -w $(cat /etc/ldap.secret.orig)

echo "
dn: cn=admin,$ldap_base
changetype: modify
replace: userPassword
userPassword: {crypt}$new_passwd
-
" | ldapmodify -x -D "cn=admin,$ldap_base" -w $(cat /etc/ldap.secret.orig)

# copy secret to several locations
cp /etc/ldap.secret /etc/libnss-ldap.secret
cp /etc/ldap.secret /etc/pam_ldap.secret

### machine secret
MACHINE_SECRET="/etc/machine.secret"

# save old secret
if [ -e "$MACHINE_SECRET" ]; then
   cp $MACHINE_SECRET ${MACHINE_SECRET}.orig
fi

# create new password
new_password=$(makepasswd --chars 8)
old_password=$(cat /etc/machine.secret)

/usr/sbin/univention-directory-manager computers/$server_role modify --binddn "$ldap_hostdn" --bindpwd $old_password --dn "$ldap_hostdn" --set password=$new_password

echo "$new_password" > /etc/machine.secret

### cyrus secret
if [ -e /etc/cyrus.secret ]; then
	mv /etc/cyrus.secret /etc/cyrus.secret.orig
    TMP=$(tempfile)
    makepasswd --nocrypt > $TMP
    PASSWD=$(cat $TMP)
    PASSWD_CRYPT=$(mkpasswd --hash=md5 -s < $TMP)
    rm -f $TMP
    usermod -p "$PASSWD_CRYPT" cyrus
    echo "$PASSWD" >/etc/cyrus.secret
    chmod 600  /etc/cyrus.secret
fi
chown cyrus /etc/cyrus.secret

### backup-join und slave-join secrets
mv /etc/slave-join.secret /etc/slave-join.secret.orig
mv /etc/backup-join.secret /etc/backup-join.secret.orig

makepasswd --chars 8 >/etc/slave-join.secret
slave_join_pwd=`cat /etc/slave-join.secret`
makepasswd --chars 8 >/etc/backup-join.secret
backup_join_pwd=`cat /etc/backup-join.secret`

univention-directory-manager users/user modify --dn uid=join-slave,cn=users,$ldap_base --set password=$slave_join_pwd
univention-directory-manager users/user modify --dn uid=join-backup,cn=users,$ldap_base --set password=$backup_join_pwd

# need to restart nscd otherwise authentication fails
invoke-rc.d nscd restart