eval $(univention-config-registry shell system/setup/boot/start system/setup/boot/modules system/setup/appliance/start)

. /lib/lsb/init-functions

case "$1" in
	start)
		log_action_msg "Starting univention-system setup tools"
		if [ -n "$system_setup_boot_start" ] && [ "$system_setup_boot_start" = "yes" ] || [ "$system_setup_boot_start" = "true" ]; then
			if [ -n "$system_setup_boot_modules" ]; then
				/sbin/usplash_write "QUIT" || true
				sleep 2s
				if echo $system_setup_boot_modules | grep -q "keyboard"; then
					univention-system-setup --modules=keyboard </dev/tty1 >/dev/tty1
				fi
				univention-system-setup --modules=`echo $system_setup_boot_modules | sed -e 's| |,|g' | sed 's/keyboard//;s/,,/,/;s/^,//;s/,$//'`
				univention-config-registry set system/setup/boot/start=false
				# check if we should start the GDM
				if [ -z "$system_setup_appliance_start" ] || [ "$system_setup_appliance_start" != "yes" ] || [ "$system_setup_appliance_start" != "true" ]; then
					test -x /etc/init.d/gdm && /etc/init.d/gdm start
				fi
				exit 0
			fi
		fi
		log_action_end_msg 0
		;;
	stop)
		log_action_end_msg 0
		;;
	*)
		log_action_msg "Usage: /etc/init.d/univention-system-setup-boot {start}."
		exit 1
		;;
esac


