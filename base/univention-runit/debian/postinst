# along with this program; if not, write to the Free Software
# Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301  USA

if [ ! -L "/etc/service" ]; then
	rmdir /etc/service
	ln -s /etc/runit/univention /etc/service
fi

if grep 'runsvdir' /etc/inittab >/dev/null; then
	cp /etc/inittab /etc/inittab_univention-runit_postinst
	grep -v runsvdir /etc/inittab_univention-runit_postinst > /etc/inittab
	rm /etc/inittab_univention-runit_postinst
fi

#DEBHELPER#

if [ -z "$2" ]; then
	# only start the daemon during the installation
	/etc/init.d/univention-runit start
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.6; then
	/etc/init.d/univention-runit start
	sleep 1
	test -x /etc/init.d/univention-directory-listener && /etc/init.d/univention-directory-listener restart
	test -x /etc/init.d/univention-directory-notifier && /etc/init.d/univention-directory-notifier restart
	test -x /etc/init.d/univention-bind && /etc/init.d/univention-bind restart
	test -x /etc/init.d/univention-bind-proxy && /etc/init.d/univention-bind-proxy restart
	test -x /etc/init.d/univention-dhcp && /etc/init.d/univention-dhcp restart
fi

exit 0

