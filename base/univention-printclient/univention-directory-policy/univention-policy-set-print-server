import os, string, sys
import tempfile
import univention_baseconfig

baseConfig=univention_baseconfig.baseConfig()
baseConfig.load()

local_printserver = baseConfig.get('cups/printserver', 'no')

if local_printserver.lower() in ['yes', 'true', 'on', '1']:
	# This host is a printserver. We don't overwrite the UCR variable for the printserver,
	# because in most instances this makes no sense. Bug #10124
	sys.exit(0)

if baseConfig.has_key('ldap/hostdn') and baseConfig['ldap/hostdn']:
	fd, filename = tempfile.mkstemp()
	os.close( fd )

	result=os.system('univention_policy_result -s "%s" >>%s' %  (baseConfig['ldap/hostdn'], filename))

	if result != 0:
		print 'failed to execute univention_policy_result'
		sys.exit(result)

	file=open(filename, 'r')

	for line in file.readlines():
		line=line.strip(' ').strip('\n')
		if line.startswith('univentionPrintServer='):
			new_print_server=line.replace('univentionPrintServer=', '').replace('"','')
			if not baseConfig.has_key('cups/server') or new_print_server != baseConfig['cups/server']:
				out=univention_baseconfig.handler_set(['cups/server=%s' % new_print_server])

	file.close()
	os.remove(filename)

sys.exit(0)
