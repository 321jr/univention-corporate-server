# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export DH_COMPAT=3

build: build-stamp
build-stamp:
	dh_testdir

	# Build the package for each version of python we support.
	/usr/bin/python2.4 setup.py clean --all --build-lib build2.4
	/usr/bin/python2.4 setup.py build --build-lib build2.4

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	/usr/bin/python2.4 setup.py clean --all --build-lib build2.4
	-rm -fr build build2.4 html icons

	dh_clean

# Build architecture-independent files here.
binary-indep: build
	dh_testdir -i
	dh_testroot -i
	dh_clean -k -i
	dh_installdirs -A -i
	dh_installchangelogs -i

	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i


# Build architecture-dependent files here.
binary-arch: build
#	dh_testversion
	dh_testdir -a
	dh_testroot -a
	dh_clean -k -a
	dh_installdirs -A -a

	/usr/bin/python2.4 setup.py install --prefix=`pwd`/debian/python2.4-heimdal/usr --no-compile

#	dh_installmenu
#	dh_installinit
#	dh_installcron
#	dh_undocumented
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
#	dh_makeshlibs
	dh_md5sums -a
	dh_builddeb -a

source diff:
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
