# export DH_VERBOSE=1

PACKAGE_NAME=univention-debug
MODULE_NAME=univention-debug

DEB_UPSTREAM_VERSION=$(shell dpkg-parsechangelog \
        | grep ^Version: | cut -d ' ' -f 2 | cut -d '-' -f 1)

PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	aclocal
	autoconf
	automake -a
	./configure --prefix=/usr
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	dh_testdir
	touch $@
build-ext-%:
	dh_testdir
	PYTHON=python$* make
	touch $@


clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp build-ext-2.4
	rm -f *~
	test -f Makefile && make distclean || true
	find -name Makefile.in -o -name Makefile -path './python' -prune | xargs rm -f
	rm -f aclocal.m4 config.* install-sh ltmain.sh missing mkinstalldirs
	(cd python && make clean)
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	(cd python && PYTHON=python$* make clean _debug.so)
	make install DESTDIR=`pwd`/debian/tmp
	install -m 0755 tools/univention-debug-viewlog debian/univention-debug-tools/usr/bin/
	install -d debian/python-univention-debug/usr/lib/python$*/site-packages/univention/
	install -m 0644 python/_debug.so python/debug.py python/debug2.py debian/python-univention-debug/usr/lib/python$*/site-packages/univention/


binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_movefiles
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_install --sourcedir=debian/tmp
	dh_pycentral
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
