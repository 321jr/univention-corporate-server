#! /bin/sh

# Warning: This file is auto-generated and might be overwritten by
#          univention-config-registry.
#          Please edit the following file instead:
# Warnung: Diese Datei wurde automatisch generiert und kann durch
#          univention-config-registry Ã¼berschrieben werden.
#          Bitte bearbeiten Sie an Stelle dessen die folgende Datei:
#
# 	/etc/univention/templates/files/etc/init.d/heimdal-kdc
#

#
# skeleton	example file to build /etc/init.d/ scripts.
#		This file should be used to construct scripts for /etc/init.d.
#
#		Written by Miquel van Smoorenburg <miquels@cistron.nl>.
#		Modified for Debian GNU/Linux
#		by Ian Murdock <imurdock@gnu.ai.mit.edu>.
#
# Version:	@(#)skeleton  1.8  03-Mar-1998  miquels@cistron.nl
#
# This file was automatically customized by dh-make on Wed,  8 Dec 1999 11:54:13 +1100

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON1=/usr/lib/heimdal-servers/kdc
PARAMS1=""
DAEMON2=/usr/lib/heimdal-servers/kpasswdd
PARAMS2=""
#PARAMS2="--check-library=/usr/lib/libuniventionchkpwhistory.so --check-function=univention_chkpwhistory"

START_MASTER=no
START_SLAVE=no

. /lib/lsb/init-functions

test -f $DAEMON1 || exit 0
test -f $DAEMON2 || exit 0

set -e

case "$1" in
  start)
	# check ucr autostart setting
	if [ -f "/usr/share/univention-config-registry/init-autostart.lib" ]; then
	    source "/usr/share/univention-config-registry/init-autostart.lib"
	    check_autostart kdc-kpasswdd kerberos/autostart
	fi

	log_action_msg "Starting Heimdal KDC: "
	start-stop-daemon --start --quiet --background \
		--make-pidfile --pidfile /var/run/heimdal-kdc.pid \
		--exec $DAEMON1 -- $PARAMS1
	echo "heimdal-kdc."

	log_action_msg "Starting Heimdal password server: "
	start-stop-daemon --start --quiet --background \
		--make-pidfile --pidfile /var/run/kpasswdd.pid \
		--exec $DAEMON2 -- $PARAMS2
	echo "kpasswdd."

	if [ "$START_MASTER" = "yes" ];
	then
		log_action_msg "Starting incremental propagation master: "
		start-stop-daemon --start --quiet --background \
			--make-pidfile --pidfile /var/run/ipropd-master.pid \
			--exec /usr/sbin/ipropd-master --
		echo "ipropd-master."
	fi

	if [ "$START_SLAVE" = "yes" ];
	then
		log_action_msg "Starting incremental propagation slave: "
		start-stop-daemon --start --quiet --background \
			--make-pidfile --pidfile /var/run/ipropd-slave.pid \
			--exec /usr/sbin/ipropd-slave --
		echo "ipropd-slave."
	fi
	;;
  stop)
	log_action_msg "Stopping Heimdal password server: "
	start-stop-daemon --stop --oknodo --quiet --pidfile /var/run/kpasswdd.pid \
		--exec $DAEMON2 -- $PARAMS2
	echo "kpasswdd"

	log_action_msg "Stopping Heimdal KDC: "
	start-stop-daemon --stop --oknodo --quiet --pidfile /var/run/heimdal-kdc.pid \
		--exec $DAEMON1 -- $PARAMS1
	echo "heimdal-kdc."

	if [ "$START_MASTER" = "yes" ];
	then
		log_action_msg "Stopping incremental propagation master: "
		start-stop-daemon --stop --oknodo --quiet --pidfile /var/run/ipropd-master.pid \
			--exec /usr/sbin/ipropd-master --
		echo "ipropd-master."
	fi
	if [ "$START_SLAVE" = "yes" ];
	then
		log_action_msg "Stopping incremental propagation slave: "
		start-stop-daemon --stop --oknodo --quiet --pidfile /var/run/ipropd-slave.pid \
			--exec /usr/sbin/ipropd-slave --
		echo "/usr/sbin/ipropd-slave."
	fi
	;;
  restart|force-reload)
	/etc/init.d/heimdal-kdc stop
	sleep 1
	/etc/init.d/heimdal-kdc start
	;;
  crestart)
	if pidof heimdal-kdc > /dev/null 2>&1
		then
		$0 restart
	else
		if pidof kpasswdd > /dev/null 2>&1
			then
			$0 restart
		else
			log_action_msg "No running heimdal-kdc or kpasswdd found, no need to restart"
		fi
	fi
	;;
  *)
	N=/etc/init.d/$NAME
	log_action_msg "Usage: $N {start|stop|restart|crestart|force-reload}" >&2
	exit 1
	;;
esac

exit 0
