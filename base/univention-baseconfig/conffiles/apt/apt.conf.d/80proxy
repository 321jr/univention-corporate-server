@!@
def print_proxy(proxy):
	print 'Acquire'
	print '{'
	print '    http'
	print '    {'
	proxyString='Proxy "http://'
	if baseConfig['proxy/username'] and baseConfig['proxy/password']:
		proxyString+='%s:%s\x40' % (baseConfig['proxy/username'],baseConfig['proxy/password'])
	proxyString+='%s"' % proxy
	print '        %s;' % (proxyString)
	print '    }'
	print '}'

if baseConfig.has_key('proxy/http') and baseConfig['proxy/http']:
	print_proxy(baseConfig['proxy/http'].lower().replace('http://',''))
elif baseConfig['proxy/address']:
	proxy='%s' % (baseConfig['proxy/address'])
	if baseConfig['proxy/port']:
		proxy+=':%s' % (baseConfig['proxy/port'])
	print_proxy(proxy)
@!@
