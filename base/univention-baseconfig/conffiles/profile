if baseConfig.has_key('proxy/http') and baseConfig['proxy/http']:
    print 'http_proxy="%s"' % baseConfig['proxy/http']
    print 'export PATH PS1 http_proxy'
else:
    print 'export PATH PS1'
@!@

@!@
