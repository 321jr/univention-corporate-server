version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

PACKAGE_NAME=univention-baseconfig
MODULE_NAME=univention-baseconfig

DEB_UPSTREAM_VERSION=$(shell dpkg-parsechangelog \
        | grep ^Version: | cut -d ' ' -f 2 | cut -d '-' -f 1)

PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	aclocal
	autoconf
	automake -a
	./configure --prefix=/usr
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	dh_testdir
	touch $@
build-ext-%:
	dh_testdir
	PYTHON=python$* make
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp build-ext-2.4
	rm -f *~
	test -f Makefile && make distclean || true
	find -name Makefile.in -o -name Makefile | xargs rm -f
	rm -f aclocal.m4 config.* install-sh ltmain.sh missing mkinstalldirs
	dh_clean

D=$(CURDIR)/debian/univention-baseconfig

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	PYTHON=$* make install DESTDIR=`pwd`/debian/tmp

	install -m 755 scripts/jitter debian/univention-config/usr/sbin
	install -m 755 scripts/ldapsearch-wrapper debian/univention-config/usr/bin
	install -m 755 scripts/univention-keyboardmapping debian/univention-config/usr/bin
	
	cat scripts/univention-sysinfo | sed -e "s/@%@package_version@%@/${version}/;s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-sysinfo_tmp
	install -m 755 univention-sysinfo_tmp debian/univention-config/usr/bin/univention-sysinfo
	rm univention-sysinfo_tmp*
	
	cat univention_baseconfig.py | sed -e "s/@%@package_version@%@/${version}/;s/@%@copyright_lastyear@%@/${copyrightyear}/" > python/univention/baseconfig.py_tmp

	install -d debian/python-univention-baseconfig/usr/lib/python$*/site-packages/univention/
	install -m 0644 python/univention/baseconfig_info.py debian/python-univention-baseconfig/usr/lib/python$*/site-packages/univention/baseconfig_info.py
	install -m 0644 python/univention/baseconfig.py_tmp debian/python-univention-baseconfig/usr/lib/python$*/site-packages/univention/baseconfig.py

	install -m 755 python/univention-baseconfig debian/univention-config/usr/sbin
	install -m 755 python/univention-install-baseconfig debian/univention-config-dev/usr/bin
	install -m 755 python/univention-install-baseconfig-info debian/univention-config-dev/usr/bin
	rm python/univention/baseconfig.py_tmp*
	
	install -m 755 etc/X11/Xsession.d/33-univention-environment ${D}/etc/X11/Xsession.d/33-univention-environment

	install -m 755 univention-ldap-policy/nfsmounts.py debian/univention-baseconfig/usr/lib/univention-ldap-policy/nfsmounts

	chmod 755 python/univention-install-baseconfig python/univention-install-baseconfig-info

	./python/univention-install-baseconfig
	./python/univention-install-baseconfig-info

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_movefiles
	dh_pycentral
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_install
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
