if [ "$1" = "configure" -a -n "$2" ]; then
	if dpkg --compare-versions "$2" lt 1.28;  then
		rm -f /var/run/lilo.d/
	fi
	if dpkg --compare-versions "$2" lt 1.4;  then
		boot_device=`cat /etc/lilo.conf  | grep boot=  | sed -e "s|boot=||"`
		root_device=`cat /etc/lilo.conf  | grep root=  | sed -e "s|root=||"`
		if [ -n "$boot_device" ]; then
			univention-baseconfig set lilo/boot?$boot_device
		fi
		if [ -n "$root_device" ]; then
			univention-baseconfig set lilo/root?$root_device
		fi

		modules=`cat /etc/modules | while read line; do l=\`echo $line | sed -e "s|#.*||"\`; if [ -z "$l" ]; then continue; fi; echo "$l;"; done`
		if [ -n "$modules" ]; then
			univention-baseconfig set kernel/modules="$modules"
		fi
	fi

fi

if [ -e /etc/kernel-img.conf ]; then
	grep silent_loader /etc/kernel-img.conf >/dev/null
	if [ $? = 1 ]; then
		echo "silent_loader = yes" >>/etc/kernel-img.conf
	fi
	grep clobber_modules /etc/kernel-img.conf >/dev/null
	if [ $? = 1 ]; then
		echo "clobber_modules = yes" >>/etc/kernel-img.conf
	fi

	architecture=`/bin/uname -m`

	if [ "$architecture" = "powerpc" -o "$architecture" = "ppc64" ]; then
		grep ramdisk /etc/kernel-img.conf >/dev/null
		if [ $? = 1 ]; then
			echo "ramdisk = mkinitramfs mkinitrd.yaird" >>/etc/kernel-img.conf
		fi
	fi
fi

#DEBHELPER#

