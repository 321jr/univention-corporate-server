copyrightyear=`date +%Y`

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	dh_clean

B=$(CURDIR)/debian/univention-bootsplash

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -d -m 0755 $B/usr/share/univention-bootsplash
	install -d -m 0755 $B/etc/init.d
	cat univention-appendsplash | sed -e "s/@%@copyright_lastyear@%@/${copyrightyear}/" > univention-appendsplash_tmp
	install -m 0755 univention-appendsplash_tmp $B/usr/lib/univention-bootsplash/univention-appendsplash
	rm univention-appendsplash_tmp
	install -m 0755 conffiles/etc/init.d/rc $B/etc/init.d/rc.ucs
	install -m 0755 conffiles/etc/init.d/rcS $B/etc/init.d/rcS.ucs

	install -m 644 etc/bootsplash/themes/ucs/config/*cfg debian/univention-bootsplash/etc/bootsplash/themes/ucs/config/
	install -m 644 etc/bootsplash/themes/ucs/images/*jpg debian/univention-bootsplash/etc/bootsplash/themes/ucs/images/

	univention-install-baseconfig

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
