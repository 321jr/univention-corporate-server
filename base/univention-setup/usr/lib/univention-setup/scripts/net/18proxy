. /usr/lib/univention-setup/scripts/setup_utils.sh


if [ "$check_ldap_access" = "1" ]; then
	exit 0
fi

is_variable_set "proxy_http"
if [ $? = 0 ]; then
	continue
fi

old_proxy=$(univention-baseconfig get proxy_http)
var=`get_profile_var proxy_http`

if [ -z "$var" ]; then
	univention-baseconfig unset proxy/http
else
	univention-baseconfig set proxy/http="$var"
fi

if [ -d "/var/lib/univention-setup/httpproxy.post" ]; then
	run-parts /var/lib/univention-setup/httpproxy.post --arg=$old_proxy --arg=$var
fi


exit 0

