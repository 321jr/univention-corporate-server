. /usr/lib/univention-setup/scripts/setup_utils.sh


is_variable_set "root_password"

if [ $? = 0 ]; then
	exit 0
fi

if [ "$check_ldap_access" = "1" ]; then
	exit 0
fi

ldap_available=1
if [ `cat /var/run/univention-setup.ldap` = "no-ldap" ]; then
	ldap_available=0
fi


root_password=`get_profile_var "root_password"`

if [ -z "$root_password" ]; then
	exit 0
fi

eval $(univention-baseconfig shell)

usermod -p `mkpasswd $root_password` root

if [ $ldap_available = 1 ]; then
	if [ "$server_role" = "domaincontroller_master" ]; then
		univention-admin users/user list --filter uid=root | grep "^DN:" | sed -e 's|DN: ||' | while read dn; do
			univention-admin users/user modify --dn "$dn" --set password="$root_password" --set overridePWHistory=1 --set overridePWLength=1
		done
		univention-admin users/user list --filter uid=Administrator | grep "^DN:" | sed -e 's|DN: ||' | while read dn; do
			univention-admin users/user modify --dn "$dn" --set password="$root_password" --set overridePWHistory=1 --set overridePWLength=1
		done
	fi
fi

exit 0

