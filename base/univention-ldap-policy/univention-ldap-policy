case "$1" in
	start|restart)
		echo -n "Starting Univention LDAP Policy: "

		eval `univention-baseconfig shell`

		if /bin/netcat -q0 -w4 $ldap_server_name 389 </dev/null >/dev/null 2>&1; then
			run-parts /usr/lib/univention-ldap-policy >>/var/log/univention/ldap-policy.log 2>&1
			if [ $? = 0 ]; then
				echo "done"
			else
				echo "failed"
			fi
		else
			echo "failed"
		fi
		;;
	stop)
		;;
	*)
		echo "Usage: /etc/init.d/univention-ldap-policy {start|stop|restart}"
		exit 1
		;;
esac

exit 0
