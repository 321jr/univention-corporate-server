version := $(shell dpkg-parsechangelog | sed -ne 's/Version: //p')
copyrightyear := $(shell date +%Y)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

univention-ssh: univention-ssh.in
	sed \
		-e "s/@@package_version@@/${version}/" \
		-e "s/@@copyright_lastyear@@/${copyrightyear}/" \
		$< > $@

build: configure-stamp build-stamp
build-stamp: univention-ssh
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	$(RM) build-stamp configure-stamp
	$(RM) *~ univention-ssh
	dh_clean

D=$(CURDIR)/debian/univention-ssh

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	install -m755 univention-ssh ${D}/usr/sbin/univention-ssh
	ln -s univention-ssh ${D}/usr/sbin/univention-scp
	ln -s univention-ssh ${D}/usr/sbin/univention-ssh-rsync
	ln -s /usr/sbin/univention-ssh ${D}/usr/lib/univention-ssh/univention-ssh-askpass
	install -m755 univention-openssh-recreate-host-keys ${D}/usr/sbin/univention-openssh-recreate-host-keys

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
