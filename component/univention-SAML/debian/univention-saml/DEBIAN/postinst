#! /bin/sh
set -e

case "$1" in
configure)
	ucr set ldap/acl/read/anonymous=yes

	a2ensite univention-identity-provider-apache
	/etc/init.d/apache2 reload

	;;
abort-upgrade|abort-remove|abort-deconfigure)
	;;
*)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
	;;
esac
# Automatically added by univention-install-config-registry
if [ "$1" = "abort-remove" ]; then
  [ -e /etc/univention/templates/removed/univention-identity-provider.info ] && mv /etc/univention/templates/removed/univention-identity-provider.info /etc/univention/templates/info/univention-identity-provider.info || true
fi
[ -x /usr/sbin/univention-config-registry ] && univention-config-registry register univention-identity-provider || true
# End automatically added section

exit 0
