#DEBHELPER#

univention-config-registry set ldap/addressbook/sync/dir?"/var/lib/univention-ldap-addressbook-sync"
univention-config-registry set ldap/addressbook/display/user?"%(sn)s, %(givenName)s"
univention-config-registry set ldap/addressbook/display/group?"%(cn)s (Gruppe)"
univention-config-registry set ldap/addressbook/display/list?"%(cn)s (Liste)"

univention-config-registry set ldap/addressbook/sync/debug/level?0

univention-config-registry set ldap/addressbook/sync/cron?"*/5 * * * *"

eval $(univention-config-registry shell server/role)

if [ "$server_role"  = "domaincontroller_master" ] || [ "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/95univention-ldap-addressbook-sync.inst || true
fi

exit 0
