D=$(CURDIR)/debian/ingo-vacation/
HORDESHARE=$(D)/usr/share/horde3/

build: build-stamp
build-stamp:
	dh_testdir

	touch build-stamp

clean:
	dh_testdir
	dh_testroot

	rm -f build-stamp configure-stamp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	install -D -m 644 ingo-vacation/templates/common-header.inc $(HORDESHARE)/ingo-vacation/templates/common-header.inc
	install -D -m 644 ingo-vacation/templates/menu.inc          $(HORDESHARE)/ingo-vacation/templates/menu.inc
	install -D -m 644 ingo-vacation/config/conf.php             $(HORDESHARE)/ingo-vacation/config/conf.php
	install -D -m 644 ingo-vacation/vacation.php                $(HORDESHARE)/ingo-vacation/vacation.php
	install -D -m 644 ingo-vacation/index.php                   $(HORDESHARE)/ingo-vacation/index.php
	install -D -m 644 ingo-vacation/lib/base.php                $(HORDESHARE)/ingo-vacation/lib/base.php

	univention-install-config-registry

#DEBHELPER#

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
