        <file name="String.phpt"/>
        <file name="String2.phpt"/>
        <file name="utf-8.phpt"/>
      </dir>
    </filelist>
    <provides type="class" name="Horde_Array"/>
    <provides type="class" name="String"/>
    <provides type="class" name="Util"/>
    <provides type="class" name="Variables"/>
  </release>

  <changelog>
    <release>
