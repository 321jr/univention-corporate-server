package=univention-kolab2-framework
DIR := $(CURDIR)/debian/$(package)

build:

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

install:
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m755 files/var/lib/univention-kolab2-framework/kolabfilter.php $(DIR)/var/lib/univention-kolab2-framework/
	install -m755 files/var/lib/univention-kolab2-framework/kolabmailboxfilter.php $(DIR)/var/lib/univention-kolab2-framework/
	install -m755 files/var/lib/univention-kolab2-framework/kolab_smtpdpolicy $(DIR)/var/lib/univention-kolab2-framework/
	install -m755 files/var/lib/univention-kolab2-framework/kolabfilter/kolabmailtransport.php $(DIR)/var/lib/univention-kolab2-framework/kolabfilter/
	install -m755 files/var/lib/univention-kolab2-framework/kolabfilter/misc.php $(DIR)/var/lib/univention-kolab2-framework/kolabfilter/
	install -m755 files/var/lib/univention-kolab2-framework/kolabfilter/olhacks.php $(DIR)/var/lib/univention-kolab2-framework/kolabfilter/
	install -m755 files/var/lib/univention-kolab2-framework/kolabfilter/resmgr.php $(DIR)/var/lib/univention-kolab2-framework/kolabfilter/

	install -m755 files/var/www/freebusy/freebusy.php $(DIR)/var/www/freebusy/
	install -m755 files/var/www/freebusy/pfb.php $(DIR)/var/www/freebusy/

	install -m755 files/var/lib/univention-kolab2-framework/freebusy/freebusycache.class.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/freebusy/freebusy.class.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/freebusy/freebusycollector.class.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/freebusy/freebusyldap.class.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/freebusy/misc.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/freebusy/recurrence.class.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/freebusy/domxml-php4-to-php5.php $(DIR)/var/lib/univention-kolab2-framework/freebusy/
	install -m755 files/var/lib/univention-kolab2-framework/generate_pfbcache.pl $(DIR)/var/lib/univention-kolab2-framework/

	cd files; find usr/share/php/PEAR/ \( -name CVS -o -name .svn \) -prune -o -type f -exec cp {} $(DIR)/{} \;
	cd files; find var/lib/univention-kolab2-framework/fbview/ \( -name CVS -o -name .svn \) -prune -o -type f -exec cp {} $(DIR)/{} \;
	cd files; find var/lib/univention-kolab2-framework/kolab-pear/ \( -name CVS -o -name .svn \) -prune -o -type f -exec cp {} $(DIR)/{} \;

	install -m 755 65univention-kolab2-framework.inst $(DIR)/usr/lib/univention-install
	install -m 755 kolabserver.py $(DIR)/usr/lib/univention-directory-listener/system/
	install -m 755 kolabdomain.py $(DIR)/usr/lib/univention-directory-listener/system/
	install -m 755 files/usr/share/outlook-setup/konfig2000.txt $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/konfig2003.txt $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/readme.txt $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/UGS-Outlook-2000-de-setup.au3 $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/UGS-Outlook-2000-de-setup.exe $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/UGS-Outlook-2003-de-setup.au3 $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/UGS-Outlook-2003-de-setup.exe $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/
	install -m 755 files/usr/share/outlook-setup/univention_logo.gif $(DIR)/usr/share/univention-kolab2-framework/outlook-setup/

	univention-install-baseconfig
	dh_install

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installman -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_shlibdeps -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
