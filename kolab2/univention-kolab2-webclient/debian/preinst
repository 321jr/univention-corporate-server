oldtemplatelist="
/etc/horde/horde3/conf.php
/etc/horde/horde3/motd.php
/etc/horde/horde3/kolab.php
/etc/horde/horde3/hooks.php
/etc/horde/horde3/prefs.php
/etc/horde/horde3/registry.php
/etc/horde/imp4/conf.php
/etc/horde/imp4/prefs.php
/etc/horde/imp4/servers.php
/etc/horde/turba2/conf.php
/etc/horde/turba2/attributes.php
/etc/horde/turba2/sources.php
/etc/horde/kronolith2/conf.php
/etc/horde/ingo1/prefs.php
/etc/horde/ingo1/conf.php
/etc/horde/ingo1/backends.php
/etc/horde/nag2/conf.php
/etc/horde/nag2/prefs.php
/etc/horde/mnemo2/conf.php
/etc/horde/mnemo2/prefs.php"


if test "$1" = "upgrade"; then
	if test -n "$2" && dpkg --compare-versions "$2" lt "5.0.4-2"; then
		for file in ${oldtemplatelist}; do
			rm -f "${file}" && dpkg-divert --rename --quiet --divert "${file}.debian" --remove "${file}" || true
		done
	fi
fi

#DEBHELPER#
