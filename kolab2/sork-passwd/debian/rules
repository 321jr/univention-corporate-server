#!/usr/bin/make -f

PN=passwd
CN=passwd

D=$(CURDIR)/debian/sork-passwd/
HORDESHARE=$(D)/usr/share/horde3/

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~
	rm -Rf .pc
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	tar -C ${HORDESHARE} -xzf ${PN}-*.tar.gz
	mv ${HORDESHARE}/${PN}-h3-3.0.1 ${HORDESHARE}/${PN}

	rm -Rf .pc

	QUILT_PATCHES=debian/patches quilt push -a || test $$? = 2

	(cd ${HORDESHARE}/${PN}/config && find . ! -path "*.svn*" -type f -exec install -m 0644 {} $(D)/etc/horde/${CN}/{} \;)

	rm -R ${HORDESHARE}/${PN}/config

	(cd $(D)/etc/horde/${CN}; for f in *.dist; do cp $$f `basename $$f .dist`; done)

	ln -sf /etc/horde/${CN} ${HORDESHARE}/${PN}/config


binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_link
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
