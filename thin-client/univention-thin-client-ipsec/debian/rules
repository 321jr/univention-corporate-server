build: build-stamp
build-stamp:
	dh_testdir

	touch build-stamp

clean:
	dh_testdir
	dh_testroot

	rm -f build-stamp configure-stamp

	rm -rf debian/tmp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_installdirs
	install -D -m 755 etc/init.d/thin-client-ipsec-update debian/univention-thin-client-ipsec-config/etc/init.d/thin-client-ipsec-update
	install -D -m 755 etc/init.d/thin-client-ipsec debian/univention-thin-client-ipsec-config/etc/init.d/thin-client-ipsec

	univention-install-config-registry

	univention-thin-client-download-debs -d `pwd`/debian/univention-thin-client-ipsec/var/lib/univention-client-root/var/cache/thin-client-archive -p strongswan

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs -Nunivention-thin-client-ipsec-config
	dh_installchangelogs -Nunivention-thin-client-ipsec-config
	dh_link
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
