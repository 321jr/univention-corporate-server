. /lib/lsb/init-functions

log_action_msg "Running Thin Client IPSec Script "

FLAGNFSBOOT=$(grep -c "root=/dev/nfs" /proc/cmdline)
if [ "$FLAGNFSBOOT" != "0" ] ; then
    # NFS boot
    log_action_msg "skipped"
    exit 0
fi

if [ -x /config/ipsec-setup.sh ]; then
	/config/ipsec-setup.sh
	log_action_end_msg 0
	exit
else
	log_action_msg "not found"
	log_action_end_msg 1
fi
