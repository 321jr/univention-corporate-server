. /lib/lsb/init-functions

log_action_msg "Setting up Thin Client base system on flash"

FLAGNFSBOOT=$(grep -c "root=/dev/nfs" /proc/cmdline)
if [ "$FLAGNFSBOOT" != "0" ] ; then
    # NFS boot
    echo "skipped"
    exit 0
fi

DISK=$(sed 's;.* root=\(/dev/[a-z]*\).*;\1;' < /proc/cmdline)
mount ${DISK}1 /config >/dev/null 2>&1

log_action_end_msg 0
