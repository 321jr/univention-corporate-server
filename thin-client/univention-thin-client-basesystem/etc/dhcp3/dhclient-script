# create resolv.conf
if [ "x$new_domain_name" != x ] && [ x"$new_domain_name_servers" != x ]; then
	univention-baseconfig set "domainname=$new_domain_name" "nameserver=$new_domain_name_servers"
fi

if [ "x$new_ip_address" != x ] && [ "x$new_subnet_mask" != x ]; then
	# get and set hostname
	hostname=$(host $new_ip_address | sed -n 's/Name: \([^\.]*\).*/\1/gp')
	hostname "$hostname"
	univention-baseconfig set hostname="$hostname"

	# create base.conf
	mkclientconf.py
fi
