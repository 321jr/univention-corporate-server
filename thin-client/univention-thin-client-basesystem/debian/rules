build: build-stamp
build-stamp:
	dh_testdir

	./bootstrap.sh setup debian/univention-thin-client-basesystem/var/lib/univention-client-root ${UNIVENTION_CR_REBUILD}

	touch build-stamp

clean:
	dh_testdir
	dh_testroot


	rm -f build-stamp configure-stamp

	rm -rf debian/tmp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_installdirs
	install -m 0755 33univention-client-basesystem.inst debian/univention-thin-client-basesystem/usr/lib/univention-install/

	install -D -m 0755 univention-thin-client-apt debian/univention-thin-client-tools/usr/bin/univention-thin-client-apt
	install -m 0755 univention-thin-client-ramdisk debian/univention-thin-client-tools/usr/bin/univention-thin-client-ramdisk
	install -m 0755 univention-thin-client-download-debs debian/univention-thin-client-tools/usr/bin/univention-thin-client-download-debs
	install -m 0755 merge_dpkg_status.py debian/univention-thin-client-basesystem/usr/share/univention-thin-client-basesystem/
	install debian/univention-thin-client-basesystem/var/lib/univention-client-root/var/lib/dpkg/status debian/univention-thin-client-basesystem/usr/share/univention-thin-client-basesystem/

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs -Nunivention-thin-client-basesystem-config
	dh_installchangelogs -Nunivention-thin-client-basesystem-config
	dh_link
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
