# versions prior to 4.1.14-1 contain an invalid conffiles entry which causes
# overwriting of /var/lib/univention-client-root/ramdisk/var/lib/dpkg/status
# during upgrade.
if [ "$1" = "upgrade" -a -n "$2" ] && dpkg --compare-versions "$2" lt 4.1.14-1; then
	if [ -n "$(grep /var/lib/univention-client-root/var/lib/dpkg/status /var/lib/dpkg/status)" ] ; then
		sed -ie 's|/var/lib/univention-client-root/var/lib/dpkg/status|/var/lib/univention-client-root/ramdisk/var/lib/dpkg/status|' /var/lib/dpkg/status
	fi
fi

exit 0
