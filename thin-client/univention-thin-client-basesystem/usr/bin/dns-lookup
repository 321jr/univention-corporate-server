import sys

# import the python support path
sys.path.append('/var/lib/python-support/python2.4')

import types, string, DNS

name, qtype=sys.argv[1:]
DNS.DiscoverNameServers()

if qtype in ['a', 'srv', 'txt']:
	result=map(lambda(x): x['data'], DNS.DnsRequest(name, qtype=qtype).req().answers)
	for i in result:
		if qtype == 'a':
			print i
		elif qtype == 'srv':
			print i[0], i[1], i[2], i[3]
		elif qtype == 'txt':
			print i[0]
elif qtype == 'ptr':
	print DNS.revlookup(name)
