echo -n "Setting up Thin Client printing service ... "

univention-baseconfig set cups/autostart?yes >>/dev/tty8 2>&1
univention-baseconfig set commit /etc/cups/cupsd.conf /etc/cups/ppd.dat /etc/cups/printers.conf >>/dev/tty8 2>&1

echo "done"
