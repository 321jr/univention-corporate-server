configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp
	dh_testdir
	touch build-stamp

DM=$(CURDIR)/debian/univention-usbdevices-udm-module
DS=$(CURDIR)/debian/univention-usbdevices-schema
DL=$(CURDIR)/debian/univention-usbdevices

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf ${DS} ${DC}
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 644 schema/univention-usbdevices.schema ${DS}/usr/share/univention-ldap/schema/
	install -m 644 modules/usbdevices.py ${DM}/usr/lib/python2.4/site-packages/univention/admin/handlers/settings/
	install -m 644 modules/usbdevices.png ${DM}/usr/share/univention-webui-style/icon/settings/
	install -m 644 modules/usbdevices.gif ${DM}/usr/share/univention-webui-style/icon/settings/
	msgfmt -o ${DM}/usr/share/locale/de/LC_MESSAGES/univention-admin-handlers-settings-usbdevices.mo modules/de.po

	install -m 755 40univention-usbdevices.inst ${DS}/usr/lib/univention-install/


	univention-install-config-registry
	univention-install-config-registry-info
	univention-install-service-info
	dh_install


binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
