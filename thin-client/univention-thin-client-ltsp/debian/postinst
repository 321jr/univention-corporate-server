#DEBHELPER#

# set permissions for ltsp-mounts.log
touch /var/log/univention/ltsp-mounts.log
chown "root:adm" /var/log/univention/ltsp-mounts.log
chmod 640 /var/log/univention/ltsp-mounts.log

univention-thin-client-apt install ltspfsd
univention-thin-client-apt install univention-thin-client-ltsp-config

univention-config-registry set thinclient/ltsp/group?"Domain Users"
univention-config-registry set thinclient/ltsp/debug/level?1

eval $(univention-config-registry shell)
fuse=$(echo $kernel_modules | grep fuse)
if [ -z "$fuse" ]; then
	univention-config-registry set kernel/modules="$kernel_modules;fuse" 
fi

modprobe fuse

/usr/lib/univention-install/70univention-thin-client-ltsp.inst || true

/etc/init.d/univention-ltsp-mountd restart

exit 0
