build: build-stamp
build-stamp:
	dh_testdir

	gcc -g -o univention-ltspmount-wrapper univention-ltspmount-wrapper.c
	chmod a+s ./univention-ltspmount-wrapper
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	rm -rf debian/tmp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_installdirs

	install -m 4755 ./univention-ltspmount-wrapper debian/univention-thin-client-ltsp/usr/bin
	install -m 755 ./univention-thin-client-get-username debian/univention-thin-client-ltsp/usr/bin
	install -m 755 ./univention-ltsp-mountd debian/univention-thin-client-ltsp/usr/sbin
	install -m 755 ./univention-thin-client-get-username debian/univention-thin-client-ltsp-config/usr/bin
	install -m 755 ./univention-create-ltsp-mount-entry-tc debian/univention-thin-client-ltsp-config/usr/bin
	install -m 755 ./univention-create-ltsp-umount-entry-tc debian/univention-thin-client-ltsp-config/usr/bin
	install -m 755 ./univention-create-ltsp-mount-entry debian/univention-thin-client-ltsp/usr/bin

	univention-thin-client-download-debs -d `pwd`/debian/univention-thin-client-ltsp/var/lib/univention-client-root/var/cache/thin-client-archive -p ltspfsd

	univention-install-config-registry

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_installinit --init-script=univention-ltsp-mountd
	dh_strip
	dh_link
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
