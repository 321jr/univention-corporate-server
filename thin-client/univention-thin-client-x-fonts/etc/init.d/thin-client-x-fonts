echo -n "Setting up Thin Client X.org Font configuration ... "

# copy the fontcache
if [ -e /usr/share/fontconfig/cache/fontconfig ]; then
	mkdir -p /var/cache/
	cp -a /usr/share/fontconfig/cache/fontconfig /var/cache/fontconfig
fi

echo "done"
