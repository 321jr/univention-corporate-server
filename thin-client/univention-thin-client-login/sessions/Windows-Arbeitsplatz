if test -e /tmp/passwd; then
	PASSWD=`cat /tmp/passwd`
	export PASSWD
fi

eval `/usr/sbin/univention-baseconfig shell univentionDesktopServer univentionAuthServer`

if [ -n "$univentionAuthServer" ]; then
	export SESSION_HOST=$univentionAuthServer
else
	export SESSION_HOST=$univentionDesktopServer
fi

# kerberos or simple login
if klist > /dev/null 2> /dev/null; then
	export SESSION_RSH=krsh
else
	export SESSION_RSH=rsh
fi

eval `/usr/sbin/univention-baseconfig shell univentionClientDevicesActivate`

if [ -n "$univentionClientDevicesActivate" -a "$univentionClientDevicesActivate" = "1" ]; then
	test -x /usr/bin/export-devices && export-devices start
fi

if test -e /tmp/passwd; then
	rm -rf /tmp/passwd
fi
univention-client -p /etc/univention/rdesktop.Session

if [ -n "$univentionClientDevicesActivate" -a "$univentionClientDevicesActivate" = "1" ]; then
	test -x /usr/bin/export-devices && export-devices stop
fi

# This gives a lot of debug output
# univention-client -d1 -p /etc/univention/rdesktop.Session 2>&1 | logger
