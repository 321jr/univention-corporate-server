. /lib/lsb/init-functions

log_action_msg "Setting up Thin Client Scanner Support"

univention-config-registry commit /etc/sane.d/saned.conf >>/dev/tty8 2>&1

# activate inetd service
univention-config-registry set inetd/autostart=yes >>/dev/tty8 2>&1

# FIXME: work around a bug UCS 2.0
univention-config-registry commit /etc/init.d/openbsd-inetd >>/dev/tty8 2>&1

log_action_end_msg 0