build: build-stamp
build-stamp:
	dh_testdir

	touch build-stamp

clean:
	dh_testdir
	dh_testroot

	rm -f build-stamp configure-stamp

	rm -rf debian/tmp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	install -D -m 755 etc/init.d/thin-client-sane debian/univention-thin-client-sane-config/etc/init.d/thin-client-sane
	install -D -m 755 usr/sbin/univention-thin-client-udev-sane.sh debian/univention-thin-client-sane-config/usr/sbin/univention-thin-client-udev-sane
	install -D -m 755 usr/bin/univention-thin-client-kooka.sh debian/univention-thin-client-sane/usr/bin/univention-thin-client-kooka
	install -D -m 755 usr/sbin/univention-thin-client-scanner.sh debian/univention-thin-client-sane/usr/sbin/univention-thin-client-scanner
	install -D -m 755 usr/lib/univention-thin-client-session-scripts/univention-sane-load debian/univention-thin-client-sane-config/usr/lib/univention-thin-client-session-scripts/univention-sane-load

	univention-install-config-registry

	univention-thin-client-download-debs -d `pwd`/debian/univention-thin-client-sane/var/lib/univention-client-root/thin-client-archive/sane -p sane-utils

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs -Nunivention-thin-client-sane-config
	dh_installchangelogs -Nunivention-thin-client-sane-config
	dh_link
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
