eval "$(/usr/sbin/univention-config-registry shell)"

params=""
server=""

if [ -z "$citrix_windowmanager_disabled" -o "$citrix_windowmanager_disabled" = "no" ]; then
	metacity &
fi

if [ ! -x /usr/lib/ICAClient/wfcmgr ]; then
	messageFile=$(mktemp)
	echo -e "
The Citrix Receiver client hasn't been installed yet.

Please refer to http://sdb.univention.de/1137 for
further instructions

" >>$messageFile
	xmessage -file "$messageFile"
else
	while true
	do
		/usr/lib/ICAClient/wfcmgr
	done
fi


