user_dn=$(ldapsearch -x "(&(uid=$USER)(objectClass=posixAccount))" dn | ldapsearch-wrapper | grep ^dn\: | sed 's/dn\: //')
icafile=$(univention-policy-result -s "$user_dn" | grep univentionCitrixUserSessionsICAFile |   grep -o '".*"' | tr -d '"')

eval "$(/usr/sbin/univention-config-registry shell thinclient/ica/downloadpath)"

if [ -n "$icafile" ]; then
    
	if [ -n "$thinclient_ica_downloadpath" ]; then
		wget "$thinclient_ica_downloadpath"/"$icafile" -O /tmp/citrix.ica
	else
		cp "/usr/share/icafiles/$icafile" /tmp/citrix.ica
	fi
fi
