#DEBHELPER#

univention-thin-client-apt install univention-thin-client-x-base-config

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 4.0.6-1; then
	# install univention-xnumlock before updating univention-gdm because a conffile was
	# moved from univention-xnumlock to univention-gdm. Bug #16197
	univention-thin-client-apt install univention-xnumlock
fi

univention-thin-client-apt install univention-gdm \
                                   univention-gdm-sessions \
                                   univention-xnumlock \
                                   univention-x-core \
                                   xserver-xorg \
                                   xbase-clients \
                                   univention-fonts \
                                   xserver-xorg-video-all \
                                   x11-common \
                                   xorg \
                                   xserver-xorg-video-via \
                                   xserver-xorg-video-i810
univention-thin-client-apt install kdebase-data arts
univention-thin-client-ramdisk -f /etc/X11/xorg.conf \
	-f /etc/gdm/gdm.conf \
	-f /etc/default/gdm \
	-f /etc/gdm/Init/Default \
	-f /usr/share/gdm/themes/univention/univention.xml \
	-f /etc/pam.d/gdm-autologin \
	-f /etc/pam.d/gdm \
	-d /etc/gdm/Sessions/enabled

