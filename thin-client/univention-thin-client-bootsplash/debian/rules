copyrightyear=`date +%Y`

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	dh_clean

B=$(CURDIR)/debian/univention-thin-client-bootsplash

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	install -m 0755 thin-client-bootsplash debian/univention-thin-client-bootsplash-config/etc/init.d/
	install -m 0755 thin-client-mkinitramfs debian/univention-thin-client-bootsplash/usr/share/univention-thin-client-bootsplash/initramfs-tools
	install -m 0644 files/initramfs-tools/modules debian/univention-thin-client-bootsplash/usr/share/univention-thin-client-bootsplash/initramfs-tools
	install -m 0644 files/initramfs-tools/initramfs.conf debian/univention-thin-client-bootsplash/usr/share/univention-thin-client-bootsplash/initramfs-tools
	install -m 0755 files/initramfs-tools/hooks/bootsplash debian/univention-thin-client-bootsplash/usr/share/univention-thin-client-bootsplash/initramfs-tools/hooks/
	install -m 0755 files/initramfs-tools/hooks/udev debian/univention-thin-client-bootsplash/usr/share/univention-thin-client-bootsplash/initramfs-tools/hooks/
	install -m 0644 files/bootsplash.cfg debian/univention-thin-client-bootsplash/usr/share/univention-thin-client-bootsplash/

	
	univention-install-baseconfig
	
	univention-thin-client-download-debs -d `pwd`/debian/univention-thin-client-bootsplash/var/lib/univention-client-root/thin-client-archive/bootsplash -p univention-thin-client-bootsplash-config univention-usplash-theme usplash

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installchangelogs
	dh_link
	dh_installinit
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure

