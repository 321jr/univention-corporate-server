export DH_COMPAT=2

SEDSCRIPT = 	s|__KVERS__|$(KVERS)|g; \
		s|__KMAINT__|$(KMAINT)|g; \
		s|__KEMAIL__|$(KEMAIL)|g; \
		s|__KSRC__|$(KSRC)|g; \
		s|__NONEPOCH__|$(NONEPOCH)|g; \
		s|__EPOCH__|$(EPOCH)|g; \
		s|__DATE__|$(shell date -R)|g; \
		s|__APPEND_TO_VERSION__|$(APPEND_TO_VERSION)|g


configure: configure-stamp 
configure-stamp:
	dh_testdir

	touch configure-stamp


build: configure-stamp build-stamp
build-stamp:


	touch build-stamp

clean: debian/control debian/changelog
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

install: build 
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
ifneq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	cp modules/avm-capi-fcpci-modules/lib/fcpci-lib-64.o modules/avm-capi-fcpci-modules/lib/fcpci-lib.o
else
	cp modules/avm-capi-fcpci-modules/lib/fcpci-lib-32.o modules/avm-capi-fcpci-modules/lib/fcpci-lib.o
endif
	tar --exclude '.svn' -cjvf debian/avm-capi-fcpci-modules/usr/src/avm-capi-fcpci-modules.tar.bz2 modules
	#chmod a+x debian/build.sh
	#debian/build.sh

.PHONY:	configure configure-stamp build build-stamp clean install

binary: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs 
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

