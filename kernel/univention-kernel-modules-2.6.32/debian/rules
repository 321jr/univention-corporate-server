PACKAGE_NAME := univention-kernel-modules-2.6.32

configure:

build:

clean:
	dh_testdir
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

# vmware-kernel-source and vmware-server-kernel-source have been deactivated

	echo "PWD: `pwd`"
	for m in avm-capi-fcpci-modules; do \
		for i in $$(ls -d /usr/src/linux-headers-* | grep -v "\-common" ); do \
			kversion=$$(basename $$i | sed -e 's|linux-headers-||'); \
			m-a -t -l $$kversion prepare; \
			m-a -f -u /tmp -l $$kversion -t build $$m; \
			echo "PWD2:" ; pwd ; find ../../ ; \
			[ -d ../result ] && mv /tmp/usr_src/modules/*.deb ../result/ || mv /tmp/usr_src/modules/*.deb ../ || mv /tmp/*.deb ../deb/; \
		done \
	done

# vmware-kernel-source and vmware-server-kernel-source have been deactivated
	# don't build the vmware serverview modules for the xen kernel
	echo "PWD: `pwd`"
	for m in srvmagt-modules ; do \
		for i in $$(ls -d /usr/src/linux-headers-* | grep -v "\-common" | grep -v "xen"); do \
			kversion=$$(basename $$i | sed -e 's|linux-headers-||'); \
			m-a -t -l $$kversion prepare; \
			m-a -f -u /tmp -l $$kversion -t a-b $$m; \
			echo "PWD3:" ; pwd ; find ../../ ; \
			[ -d ../result ] && mv /tmp/usr_src/modules/*.deb ../result/ || mv /tmp/usr_src/modules/*.deb ../ || mv /tmp/*.deb ../deb/; \
		done \
	done

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs 
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
