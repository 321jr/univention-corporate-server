export DH_COMPAT=7

ABI := ucs57

amd64_SOURCE_VERSION := 2.6.32
amd64_VERSION := 2.6.32-${ABI}-amd64
amd64_VERSION_64 := 2.6.32-${ABI}-amd64
amd64_VERSION_XEN := 2.6.32-${ABI}-xen-amd64
amd64_VERSION_MANAGEDCLIENT := 2.6.32-${ABI}-amd64
amd64_VERSION_MANAGEDCLIENT_64 := 2.6.32-${ABI}-amd64
amd64_VERSION_MOBILECLIENT := 2.6.32-${ABI}-amd64
amd64_VERSION_MOBILECLIENT_64 := 2.6.32-${ABI}-amd64
i386_SOURCE_VERSION := 2.6.32
i386_VERSION := 2.6.32-${ABI}-686
i386_VERSION_64 := 2.6.32-${ABI}-686-bigmem
i386_VERSION_XEN := 2.6.32-${ABI}-xen-686
i386_VERSION_MANAGEDCLIENT := 2.6.32-${ABI}-686
i386_VERSION_MANAGEDCLIENT_64 := 2.6.32-${ABI}-686-bigmem
i386_VERSION_MOBILECLIENT := 2.6.32-${ABI}-686
i386_VERSION_MOBILECLIENT_64 := 2.6.32-${ABI}-686-bigmem

DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_BUILD_ARCH ?= $(shell dpkg-architecture -qDEB_BUILD_ARCH)

SOURCEVERSION := ${${DEB_BUILD_ARCH}_SOURCE_VERSION}
KERNELVERSION := ${${DEB_BUILD_ARCH}_VERSION}
KERNELVERSION64 := ${${DEB_BUILD_ARCH}_VERSION_64}
KERNELVERSIONXEN := ${${DEB_BUILD_ARCH}_VERSION_XEN}
SOURCEVERSION_MANAGEDCLIENT := ${${DEB_BUILD_ARCH}_SOURCE_VERSION}
KERNELVERSION_MANAGEDCLIENT := ${${DEB_BUILD_ARCH}_VERSION_MANAGEDCLIENT}
KERNELVERSION_MANAGEDCLIENT64 := ${${DEB_BUILD_ARCH}_VERSION_MANAGEDCLIENT_64}
SOURCEVERSION_MOBILECLIENT := ${${DEB_BUILD_ARCH}_SOURCE_VERSION}
KERNELVERSION_MOBILECLIENT := ${${DEB_BUILD_ARCH}_VERSION_MOBILECLIENT}
KERNELVERSION_MOBILECLIENT64 := ${${DEB_BUILD_ARCH}_VERSION_MOBILECLIENT_64}

configure:

build:

clean:
	dh_testdir
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps

	# Server kernel packages
	dh_gencontrol -punivention-kernel-image-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-kernel-image-2.6.32
	dh_builddeb -punivention-kernel-image-2.6.32

	dh_gencontrol -punivention-kernel-headers-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-kernel-headers-2.6.32
	dh_builddeb -punivention-kernel-headers-2.6.32

	dh_gencontrol -punivention-kernel-source-2.6.32 -u-VF:KernelVersion="${SOURCEVERSION}"
	dh_md5sums -punivention-kernel-source-2.6.32
	dh_builddeb -punivention-kernel-source-2.6.32

	dh_gencontrol -punivention-avm-capi-fcpci-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-avm-capi-fcpci-modules-2.6.32
	dh_builddeb -punivention-avm-capi-fcpci-modules-2.6.32

	dh_gencontrol -punivention-cpqhealth-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-cpqhealth-modules-2.6.32
	dh_builddeb -punivention-cpqhealth-modules-2.6.32

	dh_gencontrol -punivention-serverview-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-serverview-modules-2.6.32
	dh_builddeb -punivention-serverview-modules-2.6.32

	dh_gencontrol -punivention-fsc-srv-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-fsc-srv-modules-2.6.32
	dh_builddeb -punivention-fsc-srv-modules-2.6.32

	dh_gencontrol -punivention-vmware-server-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-vmware-server-modules-2.6.32
	dh_builddeb -punivention-vmware-server-modules-2.6.32

	dh_gencontrol -punivention-vmware-player-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-vmware-player-modules-2.6.32
	dh_builddeb -punivention-vmware-player-modules-2.6.32

ifeq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	dh_gencontrol -punivention-kernel-image-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-kernel-image-2.6.32-64gb
	dh_builddeb -punivention-kernel-image-2.6.32-64gb
endif

	dh_gencontrol -punivention-kernel-image-2.6.32-xen -u-VF:KernelVersionXen="${KERNELVERSIONXEN}"
	dh_md5sums -punivention-kernel-image-2.6.32-xen
	dh_builddeb -punivention-kernel-image-2.6.32-xen

ifeq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	dh_gencontrol -punivention-kernel-headers-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-kernel-headers-2.6.32-64gb
	dh_builddeb -punivention-kernel-headers-2.6.32-64gb
endif

	dh_gencontrol -punivention-kernel-headers-2.6.32-xen -u-VF:KernelVersionXen="${KERNELVERSIONXEN}"
	dh_md5sums -punivention-kernel-headers-2.6.32-xen
	dh_builddeb -punivention-kernel-headers-2.6.32-xen

ifeq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	dh_gencontrol -punivention-kernel-source-2.6.32-64gb -u-VF:KernelVersion64="${SOURCEVERSION}"
	dh_md5sums -punivention-kernel-source-2.6.32-64gb
	dh_builddeb -punivention-kernel-source-2.6.32-64gb

	dh_gencontrol -punivention-cpqhealth-modules-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-cpqhealth-modules-2.6.32-64gb
	dh_builddeb -punivention-cpqhealth-modules-2.6.32-64gb

	dh_gencontrol -punivention-serverview-modules-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-serverview-modules-2.6.32-64gb
	dh_builddeb -punivention-serverview-modules-2.6.32-64gb

	dh_gencontrol -punivention-fsc-srv-modules-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-fsc-srv-modules-2.6.32-64gb
	dh_builddeb -punivention-fsc-srv-modules-2.6.32-64gb

	dh_gencontrol -punivention-vmware-server-modules-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-vmware-server-modules-2.6.32-64gb
	dh_builddeb -punivention-vmware-server-modules-2.6.32-64gb

	dh_gencontrol -punivention-vmware-player-modules-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-vmware-player-modules-2.6.32-64gb
	dh_builddeb -punivention-vmware-player-modules-2.6.32-64gb
endif

	# Mobileclient kernel packages
	dh_gencontrol -punivention-kernel-image-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-kernel-image-mobileclient-2.6.32
	dh_builddeb -punivention-kernel-image-mobileclient-2.6.32

	dh_gencontrol -punivention-kernel-headers-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-kernel-headers-mobileclient-2.6.32
	dh_builddeb -punivention-kernel-headers-mobileclient-2.6.32

	dh_gencontrol -punivention-kernel-source-mobileclient-2.6.32 -u-VF:KernelVersion="${SOURCEVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-kernel-source-mobileclient-2.6.32
	dh_builddeb -punivention-kernel-source-mobileclient-2.6.32

	dh_gencontrol -punivention-avm-capi-fcpci-modules-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-avm-capi-fcpci-modules-mobileclient-2.6.32
	dh_builddeb -punivention-avm-capi-fcpci-modules-mobileclient-2.6.32

	dh_gencontrol -punivention-cpqhealth-modules-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-cpqhealth-modules-mobileclient-2.6.32
	dh_builddeb -punivention-cpqhealth-modules-mobileclient-2.6.32

	dh_gencontrol -punivention-serverview-modules-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-serverview-modules-mobileclient-2.6.32
	dh_builddeb -punivention-serverview-modules-mobileclient-2.6.32

	dh_gencontrol -punivention-fsc-srv-modules-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-fsc-srv-modules-mobileclient-2.6.32
	dh_builddeb -punivention-fsc-srv-modules-mobileclient-2.6.32

	dh_gencontrol -punivention-vmware-server-modules-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-vmware-server-modules-mobileclient-2.6.32
	dh_builddeb -punivention-vmware-server-modules-mobileclient-2.6.32

	dh_gencontrol -punivention-vmware-player-modules-mobileclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-vmware-player-modules-mobileclient-2.6.32
	dh_builddeb -punivention-vmware-player-modules-mobileclient-2.6.32

ifeq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	dh_gencontrol -punivention-kernel-image-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-kernel-image-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-kernel-image-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-kernel-headers-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-kernel-headers-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-kernel-headers-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-kernel-source-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${SOURCEVERSION_MOBILECLIENT}"
	dh_md5sums -punivention-kernel-source-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-kernel-source-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-cpqhealth-modules-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-cpqhealth-modules-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-cpqhealth-modules-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-serverview-modules-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-serverview-modules-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-serverview-modules-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-fsc-srv-modules-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-fsc-srv-modules-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-fsc-srv-modules-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-vmware-server-modules-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-vmware-server-modules-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-vmware-server-modules-mobileclient-2.6.32-64gb

	dh_gencontrol -punivention-vmware-player-modules-mobileclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MOBILECLIENT64}"
	dh_md5sums -punivention-vmware-player-modules-mobileclient-2.6.32-64gb
	dh_builddeb -punivention-vmware-player-modules-mobileclient-2.6.32-64gb
endif

	# Managedclient kernel packages
	dh_gencontrol -punivention-kernel-image-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-kernel-image-managedclient-2.6.32
	dh_builddeb -punivention-kernel-image-managedclient-2.6.32

	dh_gencontrol -punivention-kernel-headers-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-kernel-headers-managedclient-2.6.32
	dh_builddeb -punivention-kernel-headers-managedclient-2.6.32

	dh_gencontrol -punivention-kernel-source-managedclient-2.6.32 -u-VF:KernelVersion="${SOURCEVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-kernel-source-managedclient-2.6.32
	dh_builddeb -punivention-kernel-source-managedclient-2.6.32

	dh_gencontrol -punivention-avm-capi-fcpci-modules-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-avm-capi-fcpci-modules-managedclient-2.6.32
	dh_builddeb -punivention-avm-capi-fcpci-modules-managedclient-2.6.32

	dh_gencontrol -punivention-cpqhealth-modules-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-cpqhealth-modules-managedclient-2.6.32
	dh_builddeb -punivention-cpqhealth-modules-managedclient-2.6.32

	dh_gencontrol -punivention-serverview-modules-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-serverview-modules-managedclient-2.6.32
	dh_builddeb -punivention-serverview-modules-managedclient-2.6.32

	dh_gencontrol -punivention-fsc-srv-modules-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-fsc-srv-modules-managedclient-2.6.32
	dh_builddeb -punivention-fsc-srv-modules-managedclient-2.6.32

	dh_gencontrol -punivention-vmware-server-modules-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-vmware-server-modules-managedclient-2.6.32
	dh_builddeb -punivention-vmware-server-modules-managedclient-2.6.32

	dh_gencontrol -punivention-vmware-player-modules-managedclient-2.6.32 -u-VF:KernelVersion="${KERNELVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-vmware-player-modules-managedclient-2.6.32
	dh_builddeb -punivention-vmware-player-modules-managedclient-2.6.32

ifeq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	dh_gencontrol -punivention-kernel-image-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-kernel-image-managedclient-2.6.32-64gb
	dh_builddeb -punivention-kernel-image-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-kernel-headers-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-kernel-headers-managedclient-2.6.32-64gb
	dh_builddeb -punivention-kernel-headers-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-kernel-source-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${SOURCEVERSION_MANAGEDCLIENT}"
	dh_md5sums -punivention-kernel-source-managedclient-2.6.32-64gb
	dh_builddeb -punivention-kernel-source-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-cpqhealth-modules-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-cpqhealth-modules-managedclient-2.6.32-64gb
	dh_builddeb -punivention-cpqhealth-modules-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-serverview-modules-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-serverview-modules-managedclient-2.6.32-64gb
	dh_builddeb -punivention-serverview-modules-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-fsc-srv-modules-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-fsc-srv-modules-managedclient-2.6.32-64gb
	dh_builddeb -punivention-fsc-srv-modules-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-vmware-server-modules-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-vmware-server-modules-managedclient-2.6.32-64gb
	dh_builddeb -punivention-vmware-server-modules-managedclient-2.6.32-64gb

	dh_gencontrol -punivention-vmware-player-modules-managedclient-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION_MANAGEDCLIENT64}"
	dh_md5sums -punivention-vmware-player-modules-managedclient-2.6.32-64gb
	dh_builddeb -punivention-vmware-player-modules-managedclient-2.6.32-64gb
endif

	dh_gencontrol -punivention-drbd-modules-2.6.32 -u-VF:KernelVersion="${KERNELVERSION}"
	dh_md5sums -punivention-drbd-modules-2.6.32
	dh_builddeb -punivention-drbd-modules-2.6.32

ifeq (,$(findstring x86_64-linux-gnu,$(DEB_BUILD_GNU_TYPE)))
	dh_gencontrol -punivention-drbd-modules-2.6.32-64gb -u-VF:KernelVersion64="${KERNELVERSION64}"
	dh_md5sums -punivention-drbd-modules-2.6.32-64gb
	dh_builddeb -punivention-drbd-modules-2.6.32-64gb
endif

	dh_gencontrol -punivention-drbd-modules-2.6.32-xen -u-VF:KernelVersionXen="${KERNELVERSIONXEN}"
	dh_md5sums -punivention-drbd-modules-2.6.32-xen
	dh_builddeb -punivention-drbd-modules-2.6.32-xen

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
