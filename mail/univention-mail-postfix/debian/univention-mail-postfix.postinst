#DEBHELPER#

univention-config-registry set postfix/autostart?yes \
                               postfix/allow-unauth?yes

eval "$(univention-config-registry shell)"

if [ -n "$mail_cyrus" ]; then
	univention-config-registry unset mail/cyrus
fi

# set UCR variables only on fresh installation or during update from older version
if [ "$1" = "configure" ] ; then
	if [ -z "$2" ] ; then
		univention-config-registry set mail/postfix/smtpd/restrictions/recipient/10="permit_mynetworks" \
										mail/postfix/smtpd/restrictions/recipient/30="permit_sasl_authenticated" \
										mail/postfix/smtpd/restrictions/recipient/50="reject_unauth_destination" \
										mail/postfix/smtpd/restrictions/recipient/70="reject_unlisted_recipient" \
										mail/postfix/smtpd/restrictions/recipient/90="check_policy_service unix:private/kolabpolicy"
	fi
fi

univention-config-registry set postfix/masquerade/domains?"\$mydomain" \
                               postfix/masquerade/exceptions?root \
                               mail/maps/canonical/sender/classes?header_sender \
                               mail/postfix/ldap/timeout?15

for file in transport virtual canonical access relocated; do
  if [ ! -e /etc/postfix/$file ]; then
      touch /etc/postfix/$file
  fi
  postmap /etc/postfix/$file
done

for file in /etc/univention/templates/info/univention-mail-postfix-forward.info /etc/univention/templates/info/univention-mail-postfix.info /etc/univention/templates/files/etc/postfix/main.cf /var/cache/univention-config/cache /etc/univention/templates/files/etc/postfix/master.cf
  do
  if [ -e $file ]; then
      rm $file || true
  fi
done

univention-config-registry set mail/postfix/policy/listfilter?no

adduser --quiet --system --home /var/lib/systemmail --shell /bin/bash systemmail
univention-config-registry set ldap/port?389 \
                               mail/alias/root?systemmail@$hostname.$domainname \
                               mail/alias/postmaster?root \
                               mail/messagesizelimit?10240000
newaliases

adduser postfix sasl

univention-config-registry commit /etc/mailname

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/67univention-mail-postfix.inst || true
fi

if [ -z "$postfix_autostart" ] || [ "$postfix_autostart" = "yes" ]; then
	/etc/init.d/postfix restart
fi

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 0.4-32; then
    test -f "/var/cache/univention-config/cache" && rm -f "/var/cache/univention-config/cache"
fi

exit 0
