@%@UCRWARNING=# @%@
#
# LDAP Alias support (without recipient canonical rewrite)
#

server_host = ldap://@%@ldap/server/name@%@:@%@ldap/server/port@%@
search_base = @%@ldap/base@%@
query_filter = (&(objectClass=univentionMail)(|(mailAlternativeAddress=%s)(mailPrimaryAddress=%s)(uid=%s))(!(univentionCanonicalRecipientRewriteEnabled=1)))
result_attribute = mailPrimaryAddress
result_format = %s
search_timeout = @%@mail/postfix/ldap/timeout@%@
scope = sub
version = 3
bind_dn = @%@ldap/hostdn@%@
@!@
import os
if os.path.exists('/etc/machine.secret'):
	print 'bind_pw = %s' % (open('/etc/machine.secret','r').read())
else:
	print 'bind_pw = MACHINE.SECRET_IS_MISSING'
@!@
