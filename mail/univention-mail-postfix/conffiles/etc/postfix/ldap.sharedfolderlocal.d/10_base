@%@UCRWARNING=# @%@
#
# LDAP mail2sharedfolder support
# rewrite mail address for shared imap folders if kolabHomeServer is $myhostname
#

server_host = ldap://@%@ldap/server/name@%@:@%@ldap/server/port@%@
search_base = @%@ldap/base@%@
query_filter = (&(objectClass=univentionKolabSharedFolder)(|(mailPrimaryAddress=%s)(mailAlternativeAddress=%s))(kolabHomeServer=$myhostname))
result_attribute = univentionKolabSharedFolderDeliveryAddress
result_format = %s
search_timeout = @%@mail/postfix/ldap/timeout@%@
scope = sub
version = 3
bind_dn = @%@ldap/hostdn@%@
@!@
print 'bind_pw = %s' % (open('/etc/machine.secret','r').read())
@!@
