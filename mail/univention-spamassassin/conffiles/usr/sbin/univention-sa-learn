#GLOBALSPAMFOLDER="@%@mail/antispam/globalfolder@%@"
CYRUSVER="@%@mail/cyrus/version@%@"
#USER="$(echo $GLOBALSPAMFOLDER | cut -d@ -f1)"
#DOMAIN="$(echo $GLOBALSPAMFOLDER | cut -d@ -f2)"
#USER_ONE="$(echo $USER | cut -c 1)"
#DOMAIN_ONE="$(echo $DOMAIN | cut -c 1)"
#USER_ESCAPED="$(echo $USER | sed 's/\./\^/g;s/[A-Z]/\l&/g')"

if [ ! -f /var/lib/amavis/.spamassassin/bayes_toks ]; then	
	touch /var/lib/amavis/.spamassassin/bayes_toks
	chown amavis:amavis /var/lib/amavis/.spamassassin/bayes_toks
	chmod 600 /var/lib/amavis/.spamassassin/bayes_toks
fi

SA_LEARN="/usr/bin/sa-learn"

if [ "$CYRUSVER" = "2.2" ]; then
	find /var/spool/cyrus/mail/domain/ -wholename \*/\*/\*/user/\*/Spam \
		-exec $SA_LEARN --dbpath /var/lib/amavis/.spamassassin --spam {} \;

	find /var/spool/cyrus/mail/domain/ -wholename \*/\*/\*/user/\*/Ham \
		-exec $SA_LEARN --dbpath /var/lib/amavis/.spamassassin --ham {} \;
else
	find /var/spool/cyrus/mail/ -wholename \*/user/\*/Spam \
		-exec $SA_LEARN --dbpath /var/lib/amavis/.spamassassin --spam {} \;

	find /var/spool/cyrus/mail/ -wholename \*/user/\*/Ham \
		-exec $SA_LEARN --dbpath /var/lib/amavis/.spamassassin --ham {} \;
fi
