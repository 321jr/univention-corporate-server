adminuser=0
import os, string, pwd, grp, sys, univention_baseconfig
from pexpect import *
def cyrescape(address):
	address=address.replace("@","\@")
	address=address.replace(".","\^")
	return address.strip()
def usage():
	print 'usage: univention-cyrus-delete-folder [-o] <FOLDER>'
	sys.exit(1)

import smtplib

from email.MIMEText import MIMEText


baseConfig = univention_baseconfig.baseConfig()
baseConfig.load()


cyrus_user='cyrus'
hostname='localhost'

outlook = False
if len( sys.argv ) > 2 and sys.argv[ 1 ] == '-o':
	outlook = True
	sys.argv.remove( '-o' )
if len(sys.argv) == 2 and sys.argv[1]:
	shared_name=sys.argv[1].lower()
else:
	usage()

shared_name=shared_name.strip()

password=open('/etc/cyrus.secret').read()
if password[-1] == '\n':
	password=password[0:-1]

if baseConfig.has_key('mail/cyrus/murder/backend/hostname') and baseConfig['mail/cyrus/murder/backend/hostname']:
	hostname = baseConfig['mail/cyrus/murder/backend/hostname']

child = spawn('/usr/bin/cyradm -u %s %s' % (cyrus_user, hostname))
i=0
while not i == 3:
	i = child.expect(['Password:', '>', 'cyradm: cannot connect to server', EOF], timeout=60)
	if i == 0:
		child.sendline(password)
	elif i == 1:
		if not outlook:
			child.sendline('sam shared/%s cyrus cd' % shared_name)
			child.sendline('dm shared/%s' % shared_name)
		else:
			name = shared_name.split( '@', 1 )[ 0 ].split( '/', 1 )[ 0 ]
			domain = shared_name.split( '@', 1)[ 1 ]
			child.sendline( 'sam user/%s/%s cyrus cd' % ( name, shared_name ) )
			child.sendline( 'dm user/%s/%s' % ( name, shared_name ) )
			# do not delete user/foo if folder user/foo/foo/bar is deleted
			if not '/' in shared_name.split( '@', 1 )[ 0 ]:
				child.sendline( 'sam user/%s@%s cyrus cd' % (name, domain) )
				child.sendline( 'dm user/%s@%s' % (name, domain) )
		child.sendline('disc')
		child.sendline('exit')
	elif i == 2:
		sys.exit(1)
