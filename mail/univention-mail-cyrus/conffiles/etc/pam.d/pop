auth    requisite     pam_univentionmailcyrus.so ldap_host=@%@ldap/server/name@%@ ldap_base=@%@ldap/base@%@ from_attr=mailPrimaryAddress to_attr=uid binddn=@%@ldap/hostdn@%@ pwfile=/etc/machine.secret ldap_port=@%@ldap/server/port@%@
